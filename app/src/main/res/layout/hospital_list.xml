<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10sp"
    android:layout_marginEnd="10sp"
    android:layout_marginBottom="5sp"


    android:orientation="vertical">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="320sp"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:orientation="vertical"
       android:background="@drawable/card_back">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="3sp"
                android:padding="2sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F8E8CE"

                    android:orientation="vertical">




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="start"
                            android:orientation="horizontal"
                            android:padding="5sp"
                            android:visibility="gone"


                            >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:gravity="start"
                                android:text="Hospital Address"
                                android:textColor="#0d0905"
                                android:fontFamily="@font/regular"
                                android:textSize="13sp"

                                />

                            <TextView
                                android:id="@+id/emailid"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginStart="22sp"
                                android:layout_marginEnd="5sp"
                                android:gravity="start"
                                android:text="Life Care"
                                android:textColor="#0d0905"
                                android:textSize="12sp"
                                android:fontFamily="@font/regular"

                                />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="start"
                            android:orientation="horizontal"
                            android:padding="5sp">

                            <TextView

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:gravity="start"
                                android:text="Name"
                                android:textColor="#0d0905"
                                android:textSize="13sp"
                                android:fontFamily="@font/pop_reg"

                                />

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginStart="10sp"
                                android:layout_marginEnd="5sp"
                                android:layout_weight="1.0"
                                android:gravity="start"
                                android:fontFamily="@font/pop_reg"
                                android:text="fghf"
                                android:textColor="#0d0905"
                                android:textSize="12sp"

                                />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="start"
                            android:orientation="horizontal"
                            android:padding="5sp">

                            <TextView

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:gravity="start"
                                android:text="Address"
                                android:textColor="#0d0905"
                                android:textSize="13sp"
                                android:fontFamily="@font/pop_reg"

                                />

                            <TextView
                                android:id="@+id/address"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginStart="10sp"
                                android:layout_marginEnd="5sp"
                                android:layout_weight="1.0"
                                android:gravity="start"
                                android:fontFamily="@font/pop_reg"
                                android:text="Sector 19D, Vashi, Palm Beach Road Satra Plaza Mall, Shop No.28,Ground Floor"
                                android:textColor="#0d0905"
                                android:textSize="12sp"

                                />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:orientation="horizontal"
                            android:padding="5sp">

                            <TextView
                                android:id="@+id/cov"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_weight="0.5"
                                android:gravity="start"
                                android:text="Contact"
                                android:fontFamily="@font/pop_reg"
                                android:textColor="#0d0905"
                                android:textSize="11sp"

                                />

                            <TextView
                                android:id="@+id/contactno"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginStart="10sp"
                                android:layout_marginEnd="5sp"
                                android:layout_weight="1.0"
                                android:gravity="start"
                                android:fontFamily="@font/pop_reg"
                                android:text="80979457"
                                android:textColor="#0d0905"
                                android:textSize="11sp"

                                />


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end"

                    android:orientation="horizontal"
                    >




                    <ImageView
                        android:id="@+id/sms_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="1sp"
                        android:layout_marginLeft="10sp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:padding="10sp"
                        android:layout_marginEnd="5sp"
                        android:background="@drawable/circle_pink_light"
                        android:src="@drawable/net_chat" />

                    <ImageView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="1sp"
                        android:layout_marginLeft="10sp"
                        android:gravity="center"
                        android:padding="3sp"
                        android:layout_marginEnd="5sp"

                        android:src="@drawable/net_mail" />

                    <ImageView
                        android:id="@+id/map"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="1sp"
                        android:layout_marginLeft="10sp"
                        android:gravity="center"
                        android:padding="3sp"
                        android:layout_marginEnd="5sp"
                        android:src="@drawable/net_map" />


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>