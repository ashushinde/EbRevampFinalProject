<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="#F2F3FD"
    android:orientation="vertical">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/arrorw_rfq"
                android:padding="3sp"
                android:elevation="25sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/info_text"
                    android:layout_width="150sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10sp"

                    android:src="@drawable/hero_logo"
                    android:text="Cashless Form Revised"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginTop="5sp"
                android:padding="13sp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="3sp"
                    android:fontFamily="@font/pop_reg"
                    android:textStyle="bold"
                    android:hint="Tell us about your team"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="15sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30sp"
                    android:background="@drawable/edit_back_grey"
                    android:padding="5sp">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:orientation="vertical"
                        android:padding="5sp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3sp"
                            android:fontFamily="@font/pop_reg"
                            android:hint="Total number of employees"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black"
                            android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3sp"
                                android:fontFamily="@font/pop_reg"
                                android:hint="  *"
                                android:textStyle="bold"
                                android:textColor="@color/dot_dark_screen1"
                                android:textColorHint="@color/dot_dark_screen1"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/total"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter total number of employee"
                            android:backgroundTint="#fff"
                            android:inputType="number"
                            android:maxLength="4"
                            android:ems="4"
                            android:maxEms="4"
                            android:minEms="4"
                            android:padding="5sp"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/darker_gray"
                            android:textSize="13sp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15sp"
                    android:background="@drawable/edit_back_grey"
                    android:padding="5sp">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:orientation="vertical"
                        android:padding="5sp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3sp"
                            android:fontFamily="@font/pop_reg"
                            android:hint="Average age of employees"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black"
                            android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3sp"
                                android:fontFamily="@font/pop_reg"
                                android:hint="  *"
                                android:textStyle="bold"
                                android:textColor="@color/dot_dark_screen1"
                                android:textColorHint="@color/dot_dark_screen1"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <Spinner
android:id="@+id/average"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp" />


                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="60sp"
                    android:background="@drawable/edit_back_blue"
                    android:padding="5sp">

                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_marginStart="5sp"
                        android:src="@drawable/bulb"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:orientation="vertical"
                        android:padding="5sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3sp"
                            android:fontFamily="@font/pop_reg"
                            android:hint="Age will help to get accurate price"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black"
                            android:textSize="12sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1sp"
                            android:layout_marginLeft="10sp"
                            android:layout_weight="1.0"
                            android:hint="We use this to get customized quote. You can specify total employee count if you are not sure about age band"
                            android:textColor="#316997"
                            android:textColorHint="#316997"
                            android:textSize="13sp" />


                    </LinearLayout>



                </LinearLayout>





            </LinearLayout>



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30sp"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/go_back"

                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5sp"
                        android:src="@drawable/ic_baseline_arrow_back_24"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pop_reg"
                        android:hint="Go Back"
                        android:textStyle="bold"
                        android:layout_marginStart="5sp"
                        android:textColor="#3BB385"
                        android:textColorHint="#3BB385"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/next"

                    android:layout_width="100sp"

                    android:layout_height="45sp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10sp"

                    android:background="@drawable/btn_reg"
                    android:gravity="center"
                    android:transitionGroup="false"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pop_reg"
                        android:hint="Next"
                        android:textStyle="bold"
                        android:layout_marginStart="10sp"
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:textSize="16sp" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5sp"
                        android:src="@drawable/ic_arrow_forward_black_24d_rfq"/>



                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</ScrollView>
