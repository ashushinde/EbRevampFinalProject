<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"

        android:orientation="vertical">








                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FFFFFF"

                            android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"


                                    android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"


                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="20sp"
                                        android:layout_marginTop="20sp"

                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="40sp"
                                            android:layout_height="40sp"
                                            android:padding="7sp"
                                            android:background="@drawable/circle_yellow"
                                            android:src="@drawable/group_cover_datata"
                                            />


                                        <TextView
                                            android:id="@+id/cover"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/pop_reg"
                                            android:text="Wellness"
                                            android:textColor="#54368B"
                                            android:textStyle="bold"
                                            android:layout_marginStart="20sp"
                                            android:layout_gravity="center"
                                            android:textSize="15sp" />
                                    </LinearLayout>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:cardBackgroundColor="#FFFFFF"
                                        app:cardCornerRadius="30sp"
                                        android:layout_marginTop="20sp"
                                        android:layout_marginStart="12sp"
                                        android:layout_marginEnd="12sp"
                                        android:layout_marginBottom="35sp"
                                        app:cardElevation="22sp"
                                        android:visibility="gone"


                                        >

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:padding="6sp"
                                            android:orientation="horizontal">



                                            <Button
                                                android:id="@+id/group_cover"
                                                android:layout_width="0dp"
                                                android:layout_weight="1.5"
                                                android:layout_height="wrap_content"
                                                android:layout_marginEnd="5sp"
                                                android:text="Wellness Dashboard"
                                                android:textSize="11sp"
                                                android:fontFamily="@font/pop_reg"
                                                android:textColor="#FFFFFF"
                                                android:padding="10sp"
                                                android:textStyle="bold"
                                                android:background="@drawable/nav_back_tab"/>


                                            <Button
                                                android:id="@+id/voluntary_cover"
                                                android:layout_width="0dp"
                                                android:layout_weight="1.5"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="5sp"
                                                android:text="Other Value-Added Wellness Service"
                                                android:textStyle="bold"
                                                android:padding="10sp"
                                                android:textSize="11sp"
                                                android:layout_gravity="center"
                                                android:fontFamily="@font/pop_reg"
                                                android:textColor="#0E0C0C"
                                                android:background="@drawable/tab_curve"
                                                />


                                        </LinearLayout>




                                    </androidx.cardview.widget.CardView>


                                <LinearLayout
                                    android:id="@+id/wellness"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:orientation="vertical">



                                <LinearLayout
                                        android:id="@+id/hide"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="20sp"
                                        android:layout_marginTop="10sp"
                                        android:layout_marginEnd="20sp"
                                        android:background="@drawable/card_back"
                                        android:orientation="vertical">

          <TextView
              android:id="@+id/static_content"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/pop_reg"

                                            android:textColor="#54368B"
                                            android:textStyle="bold"
                                            android:padding="5sp"

                                            android:layout_gravity="center"
                                            android:textSize="13sp" />

                                        <ImageView
                                            android:layout_width="100sp"
                                            android:layout_height="100sp"
                                            android:layout_gravity="center"
                                            android:background="@drawable/balance"
                                            />
                                    </LinearLayout>

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/ghi_recycle"
                                        android:layout_width="match_parent"

                                        android:layout_height="wrap_content"
                                        tools:listitem="@layout/fragment_wellness_second"

                                        />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">


                                        <ImageView
                                            android:id="@+id/info_text"
                                            android:layout_width="200sp"
                                            android:layout_height="200sp"
                                            android:layout_marginStart="10sp"
                                            android:layout_marginLeft="10sp"
                                            android:layout_marginTop="10sp"
                                            android:padding="5sp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/no_image"
                                            android:visibility="gone"
                                            android:textColor="#fff"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/heaps"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:visibility="gone"
                                        android:orientation="vertical">


                                        <ProgressBar
                                            android:id="@+id/progressBar"
                                            android:max="3"
                                            android:progress="100"
                                            style="?android:attr/progressBarStyleLarge"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_alignParentTop="true"
                                            android:layout_centerInParent="true" />
                                        <WebView
                                            android:id="@+id/webView"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_centerHorizontal="true" />

                                    </LinearLayout>

                                </LinearLayout>


                                </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

    </LinearLayout>
