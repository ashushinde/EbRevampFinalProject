<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2sp"
    android:background="#00EEEEEE"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        >
        <LinearLayout
            android:layout_marginTop="5sp"
            android:layout_width="match_parent"
            android:background="#00FFFFFF"
            android:layout_height="wrap_content">



            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10sp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_margin="5sp"
                app:cardElevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5sp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8sp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/two_five"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="5sp"
                                android:visibility="gone"
                                android:layout_gravity="center"
                                android:src="@drawable/twofive"/>
                            <ImageView
                                android:id="@+id/one_four"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="5sp"
                                android:visibility="gone"
                                android:layout_gravity="center"
                                android:src="@drawable/onefour"/>
                            <ImageView
                                android:id="@+id/three_six"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="5sp"
                                android:layout_gravity="center"
                                android:src="@drawable/threesix"/>

                            <TextView
                                android:id="@+id/plan_name"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="Group Mediclaim"
                                android:layout_marginStart="10sp"
                                android:layout_gravity="center"
                                android:textColor="#6334E3"
                                android:textStyle="bold"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/expand"
                                android:layout_width="20sp"
                                android:layout_height="20sp"
                                android:layout_marginEnd="10sp"
                                android:layout_gravity="center"
                                android:src="@drawable/plusicon"
                                android:textColor="#fff"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/hide"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"


                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="Group Health Insurance policy cover you &amp; your Spouse, Kids,
&amp; 2 Parents/Parents In Laws"
                                android:textColor="#8F8D8D"
                                android:textSize="12sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1sp"
                                android:layout_marginTop="2sp"
                                android:layout_marginBottom="1sp"
                                android:background="#328135">

                            </View>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1.5"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pop_reg"
                                    android:text="Policy Name  :"
                                    android:textColor="#0A0909"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/flex_name"
                                    android:layout_width="0dp"
                                    android:layout_weight="1.5"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pop_reg"
                                    android:text="Silver"
                                    android:textColor="#0A0909"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/insurance_recycle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8sp"
                                    tools:listitem="@layout/suminsured_list"
                                    android:layout_below="@+id/cards"

                                    />

                            </LinearLayout>



                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

