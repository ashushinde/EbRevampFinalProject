<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/coordinatorLayout"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_border"
        android:padding="5sp"
        android:layout_margin="10sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="start"
                    android:orientation="horizontal"


                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1.5"
                        android:gravity="start"
                        android:orientation="horizontal"


                        >



                        <TextView
                            android:id="@+id/last_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4sp"
                            android:layout_marginBottom="10sp"
                            android:drawablePadding="10sp"
                            android:fontFamily="@font/pop_reg"
                            android:text="Kini"
                            android:textColor="#0000FF"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </LinearLayout>


                </LinearLayout>
                <ImageView
                    android:id="@+id/expand"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_gravity="end"
                    android:layout_marginLeft="10sp"
                    android:layout_marginEnd="5sp"
                    android:gravity="end"
                    android:padding="5sp"
                    app:srcCompat="@drawable/ic_add_black_24dp"

                    tools:ignore="VectorDrawableCompat" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:padding="3sp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.0"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:fontFamily="@font/pop_reg"
                        android:gravity="start"
                        android:text="Policy Number :  "
                        android:textColor="#B86B1D"
                        android:textSize="12sp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/policy_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1.5"
                        android:fontFamily="@font/pop_reg"
                        android:gravity="start"
                        android:text="XYZ"
                        android:textColor="#0d0905"
                        android:textSize="12sp"
                        android:textStyle="bold"

                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:padding="3sp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.0"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:fontFamily="@font/pop_reg"
                        android:gravity="start"
                        android:text="Employee Code :  "
                        android:textColor="#B86B1D"
                        android:textSize="12sp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/employee_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1.5"
                        android:fontFamily="@font/pop_reg"
                        android:gravity="start"
                        android:text="XYZ"
                        android:textColor="#0d0905"
                        android:textSize="12sp"
                        android:textStyle="bold"

                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:padding="3sp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.0"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:fontFamily="@font/pop_reg"
                        android:gravity="start"
                        android:text="Employee Name :  "
                        android:textColor="#B86B1D"
                        android:textSize="12sp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/employee_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1.5"
                        android:fontFamily="@font/pop_reg"
                        android:gravity="start"
                        android:text="XYZ"
                        android:textColor="#0d0905"
                        android:textSize="12sp"
                        android:textStyle="bold"

                        />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="#807E7E"
                    android:visibility="gone"
                    android:layout_height="1sp"/>

                <LinearLayout
                    android:id="@+id/hide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"
                    >
                    <View
                        android:layout_width="0.5sp"
                        android:background="#807E7E"
                        android:visibility="gone"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="start"
                        android:orientation="vertical"
                        android:padding="3sp">

                        <TextView
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"
                            android:text="Appointment Date &amp; Time"
                            android:textColor="#B86B1D"
                            android:textSize="12sp"
                            android:textStyle="bold"

                            />

                        <TextView
android:id="@+id/app_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"

                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"
                            android:text="XYZ"
                            android:textColor="#0d0905"
                            android:textSize="12sp"
                            android:textStyle="bold"

                            />


                    </LinearLayout>


                    <View
                        android:layout_width="0.5sp"
                        android:background="#807E7E"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:orientation="vertical"
                        android:padding="3sp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/pop_reg"

                            android:text="Request Date"
                            android:textColor="#B86B1D"
                            android:textSize="12sp"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:textStyle="bold"

                            />

                        <TextView
android:id="@+id/request_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:fontFamily="@font/pop_reg"

                            android:text="XYZ"
                            android:textColor="#0d0905"
                            android:textSize="12sp"
                            android:textStyle="bold"

                            />


                    </LinearLayout>
                    <View
                        android:layout_width="0.5sp"
                        android:background="#807E7E"
                        android:visibility="gone"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="#807E7E"
                    android:visibility="gone"
                    android:layout_height="1sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"

                    android:orientation="horizontal"
                    >
                    <View
                        android:layout_width="0.5sp"
                        android:background="#807E7E"
                        android:visibility="gone"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="start"
                        android:orientation="vertical"
                        android:padding="3sp">

                        <TextView
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"
                            android:text="Health Check-up Date &amp; Time :  "
                            android:textColor="#B86B1D"
                            android:textSize="12sp"
                            android:textStyle="bold"

                            />

                        <TextView
android:id="@+id/health_checkup_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"

                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"
                            android:text="XYZ"
                            android:textColor="#0d0905"
                            android:textSize="12sp"
                            android:textStyle="bold"

                            />


                    </LinearLayout>
                    <View
                        android:layout_width="0.5sp"
                        android:background="#807E7E"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="start"
                        android:orientation="vertical"
                        android:padding="3sp">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/pop_reg"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:text="Alternate Health Check-up Date &amp; Time :  "
                            android:textColor="#B86B1D"
                            android:textSize="12sp"
                            android:textStyle="bold"

                            />

                        <TextView
                            android:id="@+id/alter_healthchekup_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:fontFamily="@font/pop_reg"

                            android:text="XYZ"
                            android:textColor="#0d0905"
                            android:textSize="12sp"
                            android:textStyle="bold"

                            />


                    </LinearLayout>
                    <View
                        android:layout_width="0.5sp"
                        android:background="#807E7E"
                        android:visibility="gone"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="#807E7E"
                    android:visibility="gone"
                    android:layout_height="1sp"/>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/dash_blue"
                    android:gravity="start"


                    android:orientation="vertical"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:padding="3sp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1.5"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"
                            android:text="Appointment Status :  "
                            android:textColor="#25af82"
                            android:textSize="12sp"
                            android:textStyle="bold"

                            />



                        <TextView
                            android:id="@+id/app_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="end"
                            android:text="Approved"
                            android:textColor="#25af82"
                            android:textSize="12sp"
                            android:textStyle="bold"

                            />




                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:padding="3sp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1.5"
                            android:fontFamily="@font/regular"
                            android:gravity="start"
                            android:text="Claim Settled :  "
                            android:textColor="#fd176f"
                            android:textSize="12sp"
                            android:textStyle="bold"

                            />

                        <TextView
                            android:id="@+id/claim_settle_amt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_weight="1.5"
                            android:fontFamily="@font/regular"
                            android:gravity="end"
                            android:text="8000"
                            android:textColor="#fd176f"
                            android:textSize="12sp"
                            android:textStyle="bold"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/regular"
                            android:gravity="end"
                            android:text=" /-"
                            android:textColor="#fd176f"
                            android:textSize="12sp"
                            android:textStyle="bold"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="10sp"
                        android:gravity="start"
                        android:orientation="vertical"
                        android:padding="5sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"
                            android:text="Check Up Type :  "
                            android:textColor="#0d0905"
                            android:textSize="13sp"
                            android:textStyle="bold"

                            />

                        <TextView
                            android:id="@+id/checkup_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"
                            android:padding="5sp"
                            android:text="Health Check up (Routine)"
                            android:textColor="#817e7e"
                            android:textSize="12sp"

                            />


                    </LinearLayout>





                </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:gravity="end"

                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/edit"
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginEnd="5sp"
                        android:gravity="end"
                        android:padding="5sp"
                        app:srcCompat="@drawable/edit"
                        android:layout_marginRight="5sp"
                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                      android:id="@+id/delete"
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginEnd="5sp"

                        android:gravity="end"
                        android:padding="5sp"
                        app:srcCompat="@drawable/enroll_delete"
                        android:layout_marginRight="5sp"
                        tools:ignore="VectorDrawableCompat" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
