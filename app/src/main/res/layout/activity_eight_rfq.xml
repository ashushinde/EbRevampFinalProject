                        <ImageView
                            android:layout_width="17sp"
                            android:layout_height="17sp"
                            android:layout_gravity="center"
                            android:layout_marginStart="2sp"
                            android:src="@drawable/info"
                            android:layout_marginEnd="5sp"
                            />
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:padding="5sp">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/core_recycle"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10sp"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/eight_list" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:background="@drawable/edit_back_grey"
                    android:padding="5sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/pop_reg"
                        android:textStyle="bold"
                        android:hint="Not happy with any of these plans? try creating your own plan here"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/black"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:id="@+id/next"

                        android:layout_width="wrap_content"

                        android:layout_height="45sp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10sp"

                        android:background="@drawable/btn_reg"
                        android:gravity="center"
                        android:transitionGroup="false"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pop_reg"
                            android:hint="   Customize this plans    "
                            android:textStyle="bold"
                            android:layout_marginStart="10sp"
                            android:textColor="#fff"
                            android:textColorHint="#fff"
                            android:textSize="16sp" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</ScrollView>