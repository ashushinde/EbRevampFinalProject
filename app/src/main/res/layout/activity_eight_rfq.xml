                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="14sp"
                                            android:textColor="#8E8888"
                                            android:layout_marginStart="10sp"
                                            android:textStyle="bold"
                                            android:text="Sum Insured" />
