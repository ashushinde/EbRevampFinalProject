<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00F5F5F5"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/boxes"
        android:layout_width="150sp"
        android:layout_height="130sp"
        android:background="@drawable/cover_hover"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/addcover"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:padding="8sp"
            android:src="@drawable/addcover"
            android:background="@drawable/circle_arrow" />


        <TextView
            android:id="@+id/top_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/pop_reg"
            android:padding="10sp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:gravity="center"
            android:text="Group Mediclaim Top-Up"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="13sp" />



    </LinearLayout>



</LinearLayout>
