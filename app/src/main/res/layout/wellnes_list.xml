<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="#00EEEEEE"
     android:elevation="10sp"
    android:padding="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10sp"
        app:cardBackgroundColor="#FFFFFF"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/flex_name"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pop_reg"
                        android:text="Asawari Shinde"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#673AB7"
                        android:layout_marginEnd="2sp"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/flex_discription"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pop_reg"
                        android:text="Personal Accidant top Up"
                        android:gravity="center"
                        android:layout_marginEnd="2sp"

                        android:textColor="#673AB7"
                        android:textSize="12sp"/>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginEnd="2sp"
                        android:orientation="horizontal">

                        <ImageView

                            android:layout_width="20sp"
                            android:layout_height="10sp"
                            android:layout_gravity="center"
                            android:src="@drawable/rupee"/>
                        <TextView
                            android:id="@+id/final_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/pop_reg"

                            android:text="1500"
                            android:textColor="#673AB7"
                            android:textSize="12sp" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/deduction_type"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pop_reg"
                        android:textColor="#673AB7"
                        android:textSize="12sp"
                        android:layout_marginEnd="2sp"
                        android:gravity="center"
                        android:text="Payroll"
                        />






                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8sp"
                    android:background="#D1CFCF"
                    />



                    <LinearLayout
                        android:id="@+id/balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
android:visibility="gone"
                        android:orientation="vertical">







                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>


