<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="#F2F3FD"
    android:orientation="vertical">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:background="@drawable/arrorw"
                android:layout_marginStart="20sp"
                android:padding="3sp"
                android:elevation="25sp"
                android:layout_marginEnd="20sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/info_text"
                    android:layout_width="60sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10sp"

                    android:src="@drawable/toolbar_arrow"
                    android:text="Cashless Form Revised"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:id="@+id/thumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/bold"
                    android:text="Add Family Member"
                    android:textColor="#5B2AAC"
                    android:layout_marginStart="10sp"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginTop="5sp"
                android:padding="10sp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/pop_reg"
                        android:padding="8sp"

                        android:text="*To enroll family member into the policy go to enrollment section."
                        android:textColor="#3F51B5"
                        android:textSize="12sp" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/edit_back_grey"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5sp"
                            android:orientation="horizontal"
                            android:padding="5sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5sp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginTop="3sp"
                                android:fontFamily="@font/pop_reg"
                                android:hint="Select Relation"
                                android:textColor="@android:color/black"
                                android:textColorHint="#330808"
                                android:textSize="12sp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="1sp"
                                android:layout_marginLeft="10sp"
                                android:layout_weight="1.0"
                                android:fontFamily="@font/bold"
                                android:hint="*"
                                android:textColor="#B61919"
                                android:textColorHint="#B61919"
                                android:textSize="14sp" />
                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8sp"
                            android:layout_marginBottom="5sp"

                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/relation_type"
                                android:layout_width="match_parent"
                                android:layout_height="42sp"

                                android:backgroundTint="#111010"
                                android:fontFamily="@font/pop_reg" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/edit_back_grey"
                        android:padding="5sp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5sp"
                            android:orientation="horizontal"
                            android:padding="5sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5sp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginTop="3sp"
                                android:fontFamily="@font/pop_reg"
                                android:hint="First Name"
                                android:textColor="@android:color/black"
                                android:textColorHint="#330808"
                                android:textSize="12sp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="1sp"
                                android:layout_marginLeft="10sp"
                                android:layout_weight="1.0"
                                android:fontFamily="@font/bold"
                                android:hint="*"
                                android:textColor="#B61919"
                                android:textColorHint="#B61919"
                                android:textSize="14sp" />
                        </LinearLayout>



                        <EditText
                            android:id="@+id/first_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:drawablePadding="10sp"
                            android:ems="10"
                            android:hint="Enter First Name"
                            android:backgroundTint="#fff"
                            android:inputType="textPersonName"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
                            android:padding="10sp"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/edit_back_grey"
                        android:padding="5sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5sp"
                            android:orientation="horizontal"
                            android:padding="5sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5sp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginTop="3sp"
                                android:fontFamily="@font/pop_reg"
                                android:hint="Last Name"
                                android:textColor="@android:color/black"
                                android:textColorHint="#330808"
                                android:textSize="12sp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="1sp"
                                android:layout_marginLeft="10sp"
                                android:layout_weight="1.0"
                                android:fontFamily="@font/bold"
                                android:hint="*"
                                android:textColor="#B61919"
                                android:textColorHint="#B61919"
                                android:textSize="14sp" />
                        </LinearLayout>


                        <EditText
                            android:id="@+id/last_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:layout_weight="1.5"
                            android:hint="Enter Last Name"
                            android:ems="10"
                            android:backgroundTint="#fff"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "

                            android:inputType="textPersonName"
                            android:padding="10sp"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/edit_back_grey"
                        android:padding="5sp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5sp"
                            android:orientation="horizontal"
                            android:padding="5sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5sp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginTop="3sp"
                                android:fontFamily="@font/pop_reg"
                                android:hint="Date Of Birth"
                                android:textColor="@android:color/black"
                                android:textColorHint="#330808"
                                android:textSize="12sp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="1sp"
                                android:layout_marginLeft="10sp"
                                android:layout_weight="1.0"
                                android:fontFamily="@font/bold"
                                android:hint="*"
                                android:textColor="#B61919"
                                android:textColorHint="#B61919"
                                android:textSize="14sp" />
                        </LinearLayout>



                        <EditText
                            android:id="@+id/dob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:layout_weight="1.5"
                            android:hint="Select Dob"
                            android:backgroundTint="#fff"
                            android:drawableEnd="@drawable/datedata"
                            android:ems="10"
                            android:focusableInTouchMode="false"
                            android:inputType="textPersonName"
                            android:padding="10sp"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="13sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/marr_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/edit_back_grey"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:padding="5sp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5sp"
                            android:orientation="horizontal"
                            android:padding="5sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5sp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginTop="3sp"
                                android:fontFamily="@font/pop_reg"
                                android:hint="Marriage Date"
                                android:textColor="@android:color/black"
                                android:textColorHint="#330808"
                                android:textSize="12sp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="1sp"
                                android:layout_marginLeft="10sp"
                                android:layout_weight="1.0"
                                android:fontFamily="@font/bold"
                                android:hint="*"
                                android:textColor="#B61919"
                                android:textColorHint="#B61919"
                                android:textSize="14sp" />
                        </LinearLayout>



                        <EditText
                            android:id="@+id/m_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:layout_weight="1.5"
                            android:backgroundTint="#fff"
                            android:ems="10"
                            android:drawableEnd="@drawable/datedata"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="Select Marriage Date"
                            android:padding="10sp"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="13sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/edit_back_grey"
                        android:layout_marginTop="10sp"
                        android:padding="5sp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5sp"
                            android:orientation="horizontal"
                            android:padding="5sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5sp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginTop="3sp"
                                android:fontFamily="@font/pop_reg"
                                android:hint="Email Id"
                                android:textColor="@android:color/black"
                                android:textColorHint="#330808"
                                android:textSize="12sp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="1sp"
                                android:layout_marginLeft="10sp"
                                android:layout_weight="1.0"
                                android:fontFamily="@font/bold"
                                android:hint="*"
                                android:textColor="#B61919"
                                android:textColorHint="#B61919"
                                android:textSize="14sp" />
                        </LinearLayout>


                        <EditText
                            android:id="@+id/email_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:layout_weight="1.5"
                            android:hint="Enter Email Id "
                            android:backgroundTint="#fff"
                            android:inputType="textPersonName"
                            android:padding="10sp"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="5sp"
                        android:background="@drawable/edit_back_grey"
                        android:layout_marginTop="10sp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5sp"
                            android:orientation="horizontal"
                            android:padding="5sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5sp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginTop="3sp"
                                android:fontFamily="@font/pop_reg"
                                android:hint="Contact No"
                                android:textColor="@android:color/black"
                                android:textColorHint="#330808"
                                android:textSize="12sp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="1sp"
                                android:layout_marginLeft="10sp"
                                android:layout_weight="1.0"
                                android:fontFamily="@font/bold"
                                android:hint="*"
                                android:textColor="#B61919"
                                android:textColorHint="#B61919"
                                android:textSize="14sp" />
                        </LinearLayout>



                        <EditText
                            android:id="@+id/contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:hint="Enter Contact No."
                            android:backgroundTint="#fff"
                            android:minEms="10"
                            android:maxEms="10"
                            android:inputType="number"
                            android:maxLength="10"
                            android:padding="10sp"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="13sp" />
                    </LinearLayout>

                </LinearLayout>






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5sp"
                    android:orientation="vertical"
                    android:padding="5sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >


                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/pop_reg"
                            android:hint="Same As Employee Address"
                            android:padding="5sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textColorHint="#E130FF"
                            android:textSize="13sp" />

                        <CheckBox
                            android:id="@+id/check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#fff"
                            android:focusable="false"
                            android:visibility="gone"
                            android:enabled="false"
                            android:buttonTint="#055851" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/swOnOff"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            app:showText="true"
                            android:textSize="15sp"
                            android:textOff="NO"
                            android:textColor="#fff"
                            android:textOn="YES"
                            android:fontFamily="@font/pop_reg"
                            app:track="@drawable/custom_track"
                            android:thumb="@drawable/custom_thumb"
                            android:layout_height="wrap_content"/>



                        <TextView
                            android:id="@+id/unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:hint=""
                            android:padding="5sp"
                            android:singleLine="true"
                            android:textColor="#00859f"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/edit_back_grey"
                        android:layout_marginTop="10sp"
                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5sp"
                            android:orientation="horizontal"
                            android:padding="5sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5sp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginTop="3sp"
                                android:fontFamily="@font/pop_reg"
                                android:hint="Address"
                                android:textColor="@android:color/black"
                                android:textColorHint="#330808"
                                android:textSize="12sp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="1sp"
                                android:layout_marginLeft="10sp"
                                android:layout_weight="1.0"
                                android:fontFamily="@font/bold"
                                android:hint=""
                                android:textColor="#B61919"
                                android:textColorHint="#B61919"
                                android:textSize="14sp" />
                        </LinearLayout>



                        <EditText
                            android:id="@+id/building"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:ems="10"

                            android:inputType="textPersonName"
                            android:padding="10sp"
                            android:backgroundTint="#fff"
                            android:hint="Enter Building /Flat No."
                            android:singleLine="true"


                            android:textSize="13sp"
                            android:textColor="@android:color/black" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/edit_back_grey"
                        android:layout_marginTop="10sp"
                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5sp"
                            android:orientation="horizontal"
                            android:padding="5sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5sp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginTop="3sp"
                                android:fontFamily="@font/pop_reg"
                                android:hint="Pincode"
                                android:textColor="@android:color/black"
                                android:textColorHint="#330808"
                                android:textSize="12sp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="1sp"
                                android:layout_marginLeft="10sp"
                                android:layout_weight="1.0"
                                android:fontFamily="@font/bold"
                                android:hint=""
                                android:textColor="#B61919"
                                android:textColorHint="#B61919"
                                android:textSize="14sp" />
                        </LinearLayout>




                        <EditText
                            android:id="@+id/pincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:padding="10sp"
                            android:hint="Enter Pincode"
                            android:singleLine="true"
                            android:textSize="13sp"
                            android:ems="6"
                            android:backgroundTint="#fff"
                            android:inputType="number"
                            android:minEms="6"
                            android:maxEms="6"
                            android:maxLength="6"

                            android:textColor="@android:color/black" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/edit_back_grey"
                        android:layout_marginTop="10sp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5sp"
                            android:orientation="horizontal"
                            android:padding="5sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5sp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginTop="3sp"
                                android:fontFamily="@font/pop_reg"
                                android:hint="City"
                                android:textColor="@android:color/black"
                                android:textColorHint="#330808"
                                android:textSize="12sp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="1sp"
                                android:layout_marginLeft="10sp"
                                android:layout_weight="1.0"
                                android:fontFamily="@font/bold"
                                android:hint=""
                                android:textColor="#B61919"
                                android:textColorHint="#B61919"
                                android:textSize="14sp" />
                        </LinearLayout>





                        <EditText
                            android:id="@+id/city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:ems="10"
                            android:backgroundTint="#fff"
                            android:inputType="textPersonName"
                            android:padding="10sp"
                            android:hint="Enter City"
                            android:singleLine="true"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "


                            android:textSize="13sp"
                            android:fontFamily="@font/pop_reg"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/edit_back_grey"
                        android:layout_marginTop="10sp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5sp"
                            android:orientation="horizontal"
                            android:padding="5sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5sp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginTop="3sp"
                                android:fontFamily="@font/pop_reg"
                                android:hint="State"
                                android:textColor="@android:color/black"
                                android:textColorHint="#330808"
                                android:textSize="12sp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="1sp"
                                android:layout_marginLeft="10sp"
                                android:layout_weight="1.0"
                                android:fontFamily="@font/bold"
                                android:hint=""
                                android:textColor="#B61919"
                                android:textColorHint="#B61919"
                                android:textSize="14sp" />
                        </LinearLayout>





                        <EditText
                            android:id="@+id/state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:padding="10sp"
                            android:hint="Enter State"
                            android:singleLine="true"
                            android:backgroundTint="#fff"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "

                            android:textSize="13sp"
                            android:fontFamily="@font/pop_reg"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black" />
                    </LinearLayout>







                </LinearLayout>


                <LinearLayout
                    android:id="@+id/options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/cancle"
                        android:layout_width="100sp"
                        android:layout_height="45sp"
                        android:layout_gravity="start"
                        android:layout_marginEnd="10sp"
                        android:layout_marginRight="5sp"
                        android:background="@drawable/btn_cancle"
                        android:fontFamily="@font/pop_reg"
                        android:gravity="center"
                        android:text="Clear"

                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/edit"
                        android:layout_width="100sp"
                        android:layout_height="45sp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10sp"
                        android:layout_marginLeft="5sp"
                        android:background="@drawable/btn_reg"
                        android:fontFamily="@font/pop_reg"
                        android:gravity="center"
                        android:text="Edit"
                        android:visibility="gone"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <Button
                        android:id="@+id/submit"
                        android:layout_width="100sp"
                        android:layout_height="45sp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10sp"
                        android:layout_marginLeft="5sp"
                        android:background="@drawable/btn_reg"
                        android:fontFamily="@font/pop_reg"
                        android:gravity="center"
                        android:text="Add"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</ScrollView>