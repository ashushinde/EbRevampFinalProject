<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:paddingLeft="10sp"
    android:paddingRight="10sp"
    android:layout_marginStart="10sp"
    android:layout_marginEnd="10sp"

    android:layout_height="wrap_content">
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Add FAQ's"
            android:layout_weight="10"
            android:textSize="15sp"
            android:layout_marginEnd="10dp"
            android:layout_width="0dp"
            android:fontFamily="@font/pop_reg"
            android:textColor="#3F51B5"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp" />

        <ImageView
            android:id="@+id/dialogCancel"
            app:srcCompat="@drawable/ic_close_black_24dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/circle_green"
            android:layout_height="match_parent"
            tools:ignore="VectorDrawableCompat" />
    </LinearLayout>

    <View
        android:background="#000"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="2dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10sp"
        android:background="@drawable/edit_back_grey"
        android:padding="5sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:orientation="horizontal"
            android:padding="5sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"
                android:hint="Work Email Id"
                android:textColor="@android:color/black"
                android:textColorHint="#330808"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1sp"
                android:layout_marginLeft="10sp"
                android:layout_weight="1.0"
                android:fontFamily="@font/bold"
                android:hint="*"
                android:textColor="#B61919"
                android:textColorHint="#B61919"
                android:textSize="14sp" />
        </LinearLayout>



        <EditText
            android:id="@+id/emil_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:drawablePadding="10sp"
            android:ems="10"
            android:hint="Enter First Name"
            android:backgroundTint="#fff"
            android:inputType="textPersonName"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz@.1234567890 "
            android:padding="10sp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10sp"
        android:background="@drawable/edit_back_grey"
        android:padding="5sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:orientation="horizontal"
            android:padding="5sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"
                android:hint="Company Name"
                android:textColor="@android:color/black"
                android:textColorHint="#330808"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1sp"
                android:layout_marginLeft="10sp"
                android:layout_weight="1.0"
                android:fontFamily="@font/bold"
                android:hint="*"
                android:textColor="#B61919"
                android:textColorHint="#B61919"
                android:textSize="14sp" />
        </LinearLayout>



        <EditText
            android:id="@+id/company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:drawablePadding="10sp"
            android:ems="10"
            android:hint="Enter First Name"
            android:backgroundTint="#fff"
            android:inputType="textPersonName"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
            android:padding="10sp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="13sp" />
    </LinearLayout>

     <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="5sp"
                        android:background="@drawable/edit_back_grey"
                        android:layout_marginTop="10sp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5sp"
                            android:orientation="horizontal"
                            android:padding="5sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5sp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginTop="3sp"
                                android:fontFamily="@font/pop_reg"
                                android:hint="Contact No"
                                android:textColor="@android:color/black"
                                android:textColorHint="#330808"
                                android:textSize="12sp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="1sp"
                                android:layout_marginLeft="10sp"
                                android:layout_weight="1.0"
                                android:fontFamily="@font/bold"
                                android:hint="*"
                                android:textColor="#B61919"
                                android:textColorHint="#B61919"
                                android:textSize="14sp" />
                        </LinearLayout>



                        <EditText
                            android:id="@+id/contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:hint="Enter Contact No."
                            android:backgroundTint="#fff"
                            android:minEms="10"
                            android:maxEms="10"
                            android:inputType="number"
                            android:maxLength="10"
                            android:padding="10sp"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="13sp" />
                    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10sp"
        android:background="@drawable/edit_back_grey"
        android:padding="5sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:orientation="horizontal"
            android:padding="5sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"
                android:hint="Pincode"
                android:textColor="@android:color/black"
                android:textColorHint="#330808"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1sp"
                android:layout_marginLeft="10sp"
                android:layout_weight="1.0"
                android:fontFamily="@font/bold"
                android:hint="*"
                android:textColor="#B61919"
                android:textColorHint="#B61919"
                android:textSize="14sp" />
        </LinearLayout>



        <EditText
            android:id="@+id/pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:drawablePadding="10sp"
            android:ems="6"
            android:hint="Enter First Name"
            android:backgroundTint="#fff"
            android:inputType="number"

            android:padding="10sp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edit_back_grey"
        android:layout_marginTop="10sp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:orientation="horizontal"
            android:padding="5sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"
                android:hint="City"
                android:textColor="@android:color/black"
                android:textColorHint="#330808"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1sp"
                android:layout_marginLeft="10sp"
                android:layout_weight="1.0"
                android:fontFamily="@font/bold"
                android:hint=""
                android:textColor="#B61919"
                android:textColorHint="#B61919"
                android:textSize="14sp" />
        </LinearLayout>





        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:ems="10"
            android:backgroundTint="#fff"
            android:inputType="textPersonName"
            android:padding="10sp"
            android:hint="Enter City"
            android:singleLine="true"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "


            android:textSize="13sp"
            android:fontFamily="@font/pop_reg"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edit_back_grey"
        android:layout_marginTop="10sp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:orientation="horizontal"
            android:padding="5sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"
                android:hint="State"
                android:textColor="@android:color/black"
                android:textColorHint="#330808"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1sp"
                android:layout_marginLeft="10sp"
                android:layout_weight="1.0"
                android:fontFamily="@font/bold"
                android:hint=""
                android:textColor="#B61919"
                android:textColorHint="#B61919"
                android:textSize="14sp" />
        </LinearLayout>





        <EditText
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:padding="10sp"
            android:hint="Enter State"
            android:singleLine="true"
            android:backgroundTint="#fff"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "

            android:textSize="13sp"
            android:fontFamily="@font/pop_reg"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="@drawable/edit_back_grey"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:orientation="horizontal"
            android:padding="5sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"
                android:hint="Industry Type"
                android:textColor="@android:color/black"
                android:textColorHint="#330808"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1sp"
                android:layout_marginLeft="10sp"
                android:layout_weight="1.0"
                android:fontFamily="@font/bold"
                android:hint="*"
                android:textColor="#B61919"
                android:textColorHint="#B61919"
                android:textSize="14sp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:layout_marginBottom="5sp"

            android:orientation="horizontal">

            <Spinner
                android:id="@+id/relation_type"
                android:layout_width="match_parent"
                android:layout_height="42sp"

                android:backgroundTint="#111010"
                android:fontFamily="@font/pop_reg" />

        </LinearLayout>


    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10sp"
                android:background="@drawable/edit_back_grey"
                android:padding="5sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:orientation="horizontal"
                    android:padding="5sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="3sp"
                        android:fontFamily="@font/pop_reg"
                        android:hint="No. of Employee"
                        android:textColor="@android:color/black"
                        android:textColorHint="#330808"
                        android:textSize="12sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1sp"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="1.0"
                        android:fontFamily="@font/bold"
                        android:hint="*"
                        android:textColor="#B61919"
                        android:textColorHint="#B61919"
                        android:textSize="14sp" />
                </LinearLayout>



                <EditText
                    android:id="@+id/number_emp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:drawablePadding="10sp"
                    android:ems="10"
                    android:hint="Enter First Name"
                    android:backgroundTint="#fff"
                    android:inputType="number"

                    android:padding="10sp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="13sp" />
            </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="end"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_policy"
            android:layout_width="150sp"
            android:layout_height="32sp"
            android:layout_gravity="center"
            android:layout_marginStart="5sp"
            android:layout_marginLeft="5sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/btn_cancle"
            android:gravity="center"
            android:text="Cancle"
            android:textColor="#fff"
            />


        <Button
            android:id="@+id/send"
            android:layout_width="150sp"
            android:layout_height="32sp"
            android:layout_gravity="center"
            android:layout_marginStart="5sp"
            android:layout_marginLeft="5sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/btn_reg"
            android:gravity="center"
            android:text="Save"
            android:textColor="#fff"
            />

    </LinearLayout>
        </LinearLayout>

</ScrollView>
</LinearLayout>