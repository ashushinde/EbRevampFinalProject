                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="3sp"
                    android:fontFamily="@font/pop_reg"
                    android:textStyle="bold"
                    android:text="We use this to get customized quote. You can specify total employee count if you are not sure about age band"
                    android:background="@drawable/edit_back_blue"
                    android:textColor="#6198C5"
                    android:textColorHint="#6198C5"
                    android:textSize="15sp" />
                <LinearLayout
                    android:id="@+id/one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/edit_back_grey"
                    android:padding="5sp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:padding="5sp">

                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_marginStart="5sp"
                        android:src="@drawable/add_cover_dt"
                        android:padding="5sp"
                        android:background="@drawable/circle_light"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:padding="5sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3sp"
                            android:fontFamily="@font/pop_reg"
