                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:padding="5sp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:hint="Name : "
                                android:textStyle="bold"
                                android:gravity="start"
                                android:textColor="@android:color/darker_gray"
                                android:textColorHint="@android:color/darker_gray"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:hint="Asawari"
                                android:textStyle="bold"
                                android:gravity="end"
                                android:textColor="@android:color/black"
                                android:textColorHint="@android:color/black"
                                android:textSize="12sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:padding="5sp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:hint="Mobile Number : "
                                android:textStyle="bold"
                                android:gravity="start"
                                android:textColor="@android:color/darker_gray"
                                android:textColorHint="@android:color/darker_gray"
                                android:textSize="12sp" />


                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:hint="8104270387"
                                android:textStyle="bold"
                                android:gravity="end"
                                android:textColor="@android:color/black"
                                android:textColorHint="@android:color/black"
                                android:textSize="12sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:padding="5sp">

                            <TextView

                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:hint="Email Id : "
                                android:textStyle="bold"
                                android:gravity="start"
                                android:textColor="@android:color/darker_gray"
                                android:textColorHint="@android:color/darker_gray"
                                android:textSize="12sp"
                                android:layout_width="0dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:hint="asawarishinde17988@gmail.com"
                                android:textStyle="bold"
                                android:gravity="end"
                                android:textColor="@android:color/black"
                                android:textColorHint="@android:color/black"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>





                </LinearLayout>
         <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30sp"
                android:layout_marginBottom="10sp"
             android:background="@drawable/btn_reg"
                android:gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/go_back"

                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pop_reg"
                        android:hint="Premium( Inc.GST )"
                        android:textStyle="bold"
                        android:layout_marginStart="5sp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#FFFFFF"
                        android:textSize="16sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="20sp"
                        android:layout_marginEnd="2sp"
                        android:src="@drawable/white_rupee"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pop_reg"
