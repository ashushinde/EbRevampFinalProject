                        android:layout_gravity="center"
                        android:padding="5sp">

                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_marginStart="5sp"
                        android:src="@drawable/add_cover_dt"
                        android:padding="5sp"
                        android:background="@drawable/circle_light"/>

                </LinearLayout>



            </LinearLayout>

                <LinearLayout
