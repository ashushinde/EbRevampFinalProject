<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F3FD">
    <LinearLayout
        android:id="@+id/ll_main_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:background="@drawable/arrorw"
            android:layout_marginStart="20sp"
            android:padding="3sp"
            android:elevation="25sp"
            android:layout_marginEnd="20sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/info_text"
                android:layout_width="60sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:layout_marginStart="10sp"

                android:src="@drawable/toolbar_arrow"
                android:text="Cashless Form Revised"
                android:textColor="#fff"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />
            <TextView
                android:id="@+id/thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/bold"
                android:text="Track Claim"
                android:textColor="#5B2AAC"
                android:layout_marginStart="10sp"
                android:textSize="18sp" />
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:orientation="vertical"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:orientation="vertical"
                android:layout_marginLeft="10sp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/first"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:text=""
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_a"
                        android:textStyle="bold"
                        android:textSize="15sp"/>
                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="20sp"
                        android:background="@drawable/circle_arrow"
                        android:src="@drawable/claim_register"
                        android:padding="8sp"
                        android:layout_marginLeft="20sp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        android:orientation="vertical"

                        android:layout_marginLeft="20sp">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Claim Register"
                            android:textStyle="bold"
                            android:fontFamily="@font/bold"

                            android:textColor="#114914"
                            android:textSize="14sp"/>
                        <TextView
                            android:id="@+id/register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NA"
                            android:fontFamily="@font/bold"
                            android:gravity="center"
                            android:textSize="13sp"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="2sp"
                    android:layout_height="30sp"
                    android:layout_marginStart="6sp"
                    android:background="#5acfa2"
                    android:layout_marginLeft="7sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/second"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:text=""
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_a"
                        android:textStyle="bold"
                        android:textSize="15sp"/>
                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="20sp"
                        android:background="@drawable/circle_arrow"
                        android:src="@drawable/submit_claim"
                        android:padding="8sp"
                        android:layout_marginLeft="20sp"  />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        android:orientation="vertical"

                        android:layout_marginLeft="20sp">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Document submitted to insurer"
                            android:textStyle="bold"
                            android:fontFamily="@font/bold"
                            android:textColor="#216024"
                            android:textSize="14sp"/>
                        <TextView
                            android:id="@+id/insurar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NA"
                            android:fontFamily="@font/bold"
                            android:textSize="13sp"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="2sp"
                    android:layout_height="30sp"
                    android:layout_marginStart="6sp"
                    android:background="#95a6c3"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="7sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:text=""
                        android:background="@drawable/circle_blue"
                        android:textStyle="bold"
                        android:textSize="15sp"/>
                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="20sp"
                        android:background="@drawable/circle_arrow"
                        android:src="@drawable/discrepancy"
                        android:padding="8sp"
                        android:layout_marginLeft="20sp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20sp">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Discrepancy"
                            android:textStyle="bold"
                            android:fontFamily="@font/bold"
                            android:textColor="#114914"
                            android:textSize="14sp"/>
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:fontFamily="@font/bold"
                            android:textSize="13sp"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="2sp"
                    android:layout_height="30sp"
                    android:layout_marginStart="6sp"
                    android:background="#95a6c3"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="7sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:text=""
                        android:background="@drawable/circle_blue"
                        android:textStyle="bold"
                        android:textSize="15sp"/>
                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="20sp"
                        android:background="@drawable/circle_arrow"
                        android:src="@drawable/discrepancy_closure"
                        android:padding="8sp"
                        android:layout_marginLeft="20sp"  />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        android:orientation="vertical"

                        android:layout_marginLeft="20sp">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Discrepancy Closure"
                            android:textStyle="bold"
                            android:textColor="#114914"
                            android:fontFamily="@font/bold"
                            android:textSize="14sp"/>
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:fontFamily="@font/bold"
                            android:textSize="13sp"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="2sp"
                    android:layout_height="30sp"
                    android:layout_marginStart="6sp"
                    android:background="#95a6c3"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="7sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:text=""
                        android:background="@drawable/circle_blue"
                        android:textStyle="bold"
                        android:textSize="15sp"/>
                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="20sp"
                        android:background="@drawable/circle_arrow"
                        android:src="@drawable/claim_approved"
                        android:padding="8sp"
                        android:layout_marginLeft="20sp"  />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        android:orientation="vertical"

                        android:layout_marginLeft="20sp">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Claim accepted"
                            android:textStyle="bold"
                            android:textColor="#114914"
                            android:fontFamily="@font/bold"
                            android:textSize="14sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:fontFamily="@font/bold"
                            android:textSize="13sp"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="2sp"
                    android:layout_height="30sp"
                    android:layout_marginStart="6sp"
                    android:background="#95a6c3"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="7sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:text=""

                        android:background="@drawable/circle_blue"
                        android:textStyle="bold"
                        android:textSize="15sp"/>
                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="20sp"
                        android:background="@drawable/circle_arrow"
                        android:src="@drawable/claim_settled"
                        android:padding="8sp"
                        android:layout_marginLeft="20sp"  />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        android:orientation="vertical"

                        android:layout_marginLeft="20sp">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Claim Settled"
                            android:textStyle="bold"
                            android:textColor="#114914"
                            android:fontFamily="@font/bold"
                            android:textSize="14sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:fontFamily="@font/bold"
                            android:textSize="13sp"/>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_back"
                    android:layout_marginTop="15sp"

                    android:elevation="10sp"
                    android:layout_marginEnd="20sp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/cover_type"
                                    android:layout_width="0dp"
                                    android:layout_weight="1.5"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pop_reg"
                                    android:text="Group Mediclaim"
                                    android:textColor="#0000FF"
                                    android:layout_marginStart="10sp"
                                    android:textStyle="bold"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10sp"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1.5"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10sp"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="3sp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_weight="1.0"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/pop_reg"
                                            android:text="Employee Name  : "
                                            android:textColor="#0A0909"
                                            android:textStyle="bold"
                                            android:textSize="12sp" />


                                        <TextView
                                            android:id="@+id/emp_name"
                                            android:layout_width="0dp"
                                            android:layout_weight="1.5"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginLeft="5dp"
                                            android:fontFamily="@font/pop_reg"
                                            android:textColor="#FF5722"
                                            android:text="NA"
                                            android:textStyle="bold"
                                            android:textSize="11sp" />



                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="3sp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_weight="1.0"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/pop_reg"
                                            android:text="Member Name  : "
                                            android:textColor="#0A0909"
                                            android:textStyle="bold"
                                            android:textSize="12sp" />


                                        <TextView
                                            android:id="@+id/member_name"
                                            android:layout_width="0dp"
                                            android:layout_weight="1.5"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginLeft="5dp"
                                            android:fontFamily="@font/pop_reg"
                                            android:textColor="#FF5722"
                                            android:text="NA"
                                            android:textStyle="bold"
                                            android:textSize="11sp" />



                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="3sp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_weight="1.0"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/pop_reg"
                                            android:text="Relation  : "
                                            android:textColor="#0A0909"
                                            android:textStyle="bold"
                                            android:textSize="12sp" />


                                        <TextView
android:id="@+id/relation"
                                            android:layout_width="0dp"
                                            android:layout_weight="1.5"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginLeft="5dp"
                                            android:fontFamily="@font/pop_reg"
                                            android:textColor="#FF5722"
                                            android:text="NA"
                                            android:textStyle="bold"
                                            android:textSize="11sp" />



                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/pre"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="3sp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_weight="1.0"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/pop_reg"
                                            android:text="Date of Birth  : "
                                            android:textColor="#0A0909"
                                            android:textStyle="bold"
                                            android:textSize="12sp" />


                                        <TextView
                                            android:id="@+id/dob"
                                            android:layout_width="0dp"
                                            android:layout_weight="1.5"
                                            android:layout_height="24dp"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginLeft="5dp"
                                            android:fontFamily="@font/pop_reg"
                                            android:text="NA"
                                            android:textColor="#FF5722"
                                            android:textSize="11sp"
                                            android:textStyle="bold" />



                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/balance"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="2sp"

                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_weight="1.0"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/pop_reg"
                                            android:text="Claim Id  : "
                                            android:textColor="#0A0909"
                                            android:textStyle="bold"
                                            android:textSize="12sp" />


                                        <TextView
                                            android:id="@+id/claim_id"
                                            android:layout_width="0dp"
                                            android:layout_weight="1.5"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginLeft="5dp"
                                            android:fontFamily="@font/pop_reg"
                                            android:textColor="#FF5722"
                                            android:text="-"
                                            android:textStyle="bold"
                                            android:textSize="11sp" />



                                    </LinearLayout>

                                    <LinearLayout

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="2sp"
                                        android:layout_marginBottom="2sp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_weight="1.0"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/pop_reg"
                                            android:text="Claim Date  : "
                                            android:textColor="#0A0909"
                                            android:textSize="12sp" />


                                        <TextView
                                            android:id="@+id/claim_date"
                                            android:layout_width="0dp"
                                            android:layout_weight="1.5"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginLeft="5dp"
                                            android:fontFamily="@font/pop_reg"
                                            android:textColor="#727272"


                                            android:textStyle="bold"
                                            android:textSize="11sp" />



                                    </LinearLayout>

                                    <LinearLayout

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="2sp"

                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_weight="1.0"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/pop_reg"
                                            android:text="Claim Deduction Amount : "
                                            android:textColor="#0A0909"
                                            android:textStyle="bold"
                                            android:textSize="12sp" />


                                        <TextView
                                            android:id="@+id/claim_deduct"
                                            android:layout_width="0dp"
                                            android:layout_weight="1.5"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginLeft="5dp"
                                            android:fontFamily="@font/pop_reg"
                                            android:textColor="#FF5722"
                                            android:text="-"
                                            android:textStyle="bold"
                                            android:textSize="11sp" />



                                    </LinearLayout>

                                    <LinearLayout

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="2sp"

                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_weight="1.0"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/pop_reg"
                                            android:text="Claim Settled Amount : "
                                            android:textColor="#0A0909"
                                            android:textStyle="bold"
                                            android:textSize="12sp" />


                                        <TextView
                                            android:id="@+id/claim_stle_amt"
                                            android:layout_width="0dp"
                                            android:layout_weight="1.5"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginLeft="5dp"
                                            android:fontFamily="@font/pop_reg"
                                            android:textColor="#FF5722"
                                            android:text="-"
                                            android:textStyle="bold"
                                            android:textSize="11sp" />



                                    </LinearLayout>
                                    <LinearLayout

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="2sp"

                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_weight="1.0"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/pop_reg"
                                            android:text="Claim Amount : "
                                            android:textColor="#0A0909"
                                            android:textStyle="bold"
                                            android:textSize="12sp" />


                                        <TextView
                                            android:id="@+id/claim_amount"
                                            android:layout_width="0dp"
                                            android:layout_weight="1.5"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginLeft="5dp"
                                            android:fontFamily="@font/pop_reg"
                                            android:textColor="#FF5722"
                                            android:text="-"
                                            android:textStyle="bold"
                                            android:textSize="11sp" />



                                    </LinearLayout>

                                    <LinearLayout

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="2sp"

                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_weight="1.0"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/pop_reg"
                                            android:text="Claim Approved Amount : "
                                            android:textColor="#0A0909"
                                            android:textStyle="bold"
                                            android:textSize="12sp" />


                                        <TextView
                                            android:id="@+id/claim_apr_amount"
                                            android:layout_width="0dp"
                                            android:layout_weight="1.5"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginLeft="5dp"
                                            android:fontFamily="@font/pop_reg"
                                            android:textColor="#FF5722"
                                            android:text="-"
                                            android:textStyle="bold"
                                            android:textSize="11sp" />



                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>





                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </ScrollView>
    </LinearLayout>
    </LinearLayout>


</RelativeLayout>