<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F3FD"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:visibility="gone"
            android:background="#00FFFFFF"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:elevation="5sp"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:foregroundGravity="center"
                    android:orientation="horizontal">





                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="38sp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="Flex Wallet"
                                android:layout_gravity="center"
                                android:textColor="#6334E3"
                                android:textStyle="bold"
                                android:padding="2sp"
                                android:gravity="center"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/flex_wallet"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="24000"
                                android:layout_gravity="center"
                                android:textColor="#151416"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:padding="2sp"
                                android:textSize="12sp" />



                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:fontFamily="@font/pop_reg"
                        android:textColor="#110A0A"
                        android:padding="5sp"
                        android:text="Wellness"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/circle_arrow"
                        android:elevation="20sp"

                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/carr"
                        android:textSize="12sp" />

                </RelativeLayout>

            </LinearLayout>






            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:elevation="5sp"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:foregroundGravity="center"
                    android:orientation="horizontal">





                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="38sp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="Flex Utilisation"
                                android:layout_gravity="center"
                                android:textColor="#6334E3"
                                android:textStyle="bold"
                                android:padding="2sp"
                                android:gravity="center"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/flex_utilisation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="24000"
                                android:layout_gravity="center"
                                android:textColor="#151416"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:padding="2sp"
                                android:textSize="12sp" />



                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:fontFamily="@font/pop_reg"
                        android:textColor="#110A0A"
                        android:padding="5sp"
                        android:text="Wellness"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/circle_arrow"
                        android:elevation="20sp"

                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/carr"
                        android:textSize="12sp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:elevation="5sp"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:foregroundGravity="center"
                    android:orientation="horizontal">





                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="38sp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="To Pay"
                                android:layout_gravity="center"
                                android:textColor="#6334E3"
                                android:textStyle="bold"
                                android:padding="2sp"
                                android:gravity="center"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/to_pay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="24000"
                                android:layout_gravity="center"
                                android:textColor="#151416"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:padding="2sp"
                                android:textSize="12sp" />



                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:fontFamily="@font/pop_reg"
                        android:textColor="#110A0A"
                        android:padding="5sp"
                        android:text="Wellness"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/circle_arrow"
                        android:elevation="20sp"

                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/carr"
                        android:textSize="12sp" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>



        <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <LinearLayout
        android:id="@+id/group_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_back_grey"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginTop="10sp"
        android:visibility="gone"

        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#F2F3FD"
            android:elevation="20sp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginEnd="10sp"
            android:padding="2sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pop_reg"
                android:textColor="#3F51B5"
                android:padding="10sp"
                android:text="Group Cover"
                android:textStyle="bold"
                android:elevation="20sp"
                android:textSize="12sp" />



        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hos_claim_recycle"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_marginBottom="20sp"
            tools:listitem="@layout/summary_list" />


    </LinearLayout>




        <LinearLayout
            android:id="@+id/voluntary_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_back_grey"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:layout_marginTop="20sp"
            android:padding="10sp"



            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#FDF2F2"

                android:layout_marginStart="10sp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="10sp"
                android:layout_marginEnd="10sp"
                android:padding="2sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pop_reg"
                    android:textColor="#3F51B5"
                    android:padding="10sp"
                    android:text="Group Cover"
                    android:textStyle="bold"
                    android:elevation="20sp"
                    android:textSize="12sp" />



            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/voluntary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:layout_marginTop="10sp"
                android:background="#00FFFFFF"
                tools:listitem="@layout/summary_list" />





        </LinearLayout>


            <LinearLayout
                android:id="@+id/wellness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_back_grey"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:elevation="8sp"
                android:visibility="gone"
                android:layout_marginTop="20sp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#F2F3FD"
                    android:elevation="20sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:layout_marginEnd="10sp"
                    android:padding="2sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pop_reg"
                        android:textColor="#3F51B5"
                        android:padding="10sp"
                        android:text="Wellness"
                        android:textStyle="bold"
                        android:elevation="20sp"
                        android:textSize="12sp" />



                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/wellness_recycle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    tools:listitem="@layout/flex_list_benefit" />





            </LinearLayout>

        <LinearLayout
            android:id="@+id/nominee_enroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_back_grey"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:elevation="8sp"
            android:visibility="gone"

            android:layout_marginTop="20sp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#FDF2F2"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:layout_marginEnd="10sp"
                android:padding="2sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pop_reg"
                    android:textColor="#3F51B5"
                    android:padding="10sp"
                    android:text="Nominee Enrollment"
                    android:textStyle="bold"
                    android:elevation="20sp"
                    android:textSize="12sp" />



            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/nominee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18sp"
                tools:listitem="@layout/nominee_enroll_list_benefit" />




        </LinearLayout>





        <LinearLayout
            android:id="@+id/member_enroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_back_grey"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="20sp"
            android:visibility="gone"
            android:elevation="8sp"
            android:layout_marginBottom="50sp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#F2F3FD"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:layout_marginEnd="10sp"
                android:padding="2sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pop_reg"
                    android:textColor="#3F51B5"
                    android:padding="10sp"
                    android:text="Member Enrollment"
                    android:textStyle="bold"
                    android:elevation="20sp"
                    android:textSize="12sp" />



            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18sp"
                tools:listitem="@layout/member_enroll_benefitlist" />




        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:padding="5sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/edit_back"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EBEEFD"
                    android:padding="5sp"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="3sp"
                    android:fontFamily="@font/pop_reg"
                    android:textColor="#F44336"
                    android:paddingEnd="15sp"
                    android:paddingStart="15sp"
                    android:background="@drawable/card_back"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Disclaimer"/>
                </LinearLayout>



                <CheckBox
                    android:id="@+id/check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:textSize="11sp"
                    android:fontFamily="@font/regular"
                    android:textColor="#c68d42"
                    android:textStyle="bold"

                    android:text="I declare that information provided by me for enrolment is true and correct."/>

                <LinearLayout
                    android:id="@+id/to_pay_linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center"
                    android:padding="5sp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="13sp"
                        android:fontFamily="@font/regular"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="I agree to pay  Rs."/>

                    <TextView
                        android:id="@+id/payto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:fontFamily="@font/regular"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="8000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:fontFamily="@font/regular"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text=" from my salary ."/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:textSize="13sp"
                    android:fontFamily="@font/regular"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="You are about to confirm your Insurance plan details.
Please verify your data for the following:"/>





                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/contentrecyle"
                    android:layout_width="wrap_content"
                    android:layout_height="250sp"
                    android:layout_marginBottom="1sp"
                    android:layout_marginTop="1sp"
                    tools:listitem="@layout/note_list" />



                <TextView
                    android:id="@+id/note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:textSize="12sp"
                    android:fontFamily="@font/regular"
                    android:textColor="#c43184"
                    android:textStyle="bold"
                    android:text=""/>

                <TextView
                    android:id="@+id/submitAll"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_cancle"
                    android:fontFamily="@font/bold"
                    android:gravity="center"
                    android:text="Submit"
                    android:textColor="#fff"
                    android:textSize="18sp" />



            </LinearLayout>







</LinearLayout>


    </LinearLayout>

    </ScrollView>
    </LinearLayout>
</LinearLayout>