<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:clickable="true"
    android:focusable="true"
    android:elevation="30sp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="3dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        >

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:background="@drawable/demo_icon"
                        android:paddingStart="5sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="5sp"
                        android:paddingEnd="5sp" />

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/pop_reg"
                            android:textColor="#030203"
                            android:padding="5sp"
                            android:text="Sodexo"
                            android:layout_marginStart="10sp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="10sp"
                            android:gravity="center"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ab"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:background="@drawable/ic_close_black_24dp"
                        android:paddingStart="5sp"
                        android:paddingEnd="5sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginEnd="5sp"
                    android:layout_marginBottom="5sp"
                    android:elevation="15sp"
                    android:background="#00FFFFFF"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/pop_reg"
                        android:textColor="#6334E3"
                        android:padding="5sp"
                        android:text="Allocate"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="12sp" />


                    <RadioGroup
                        android:id="@+id/vol_rg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/subject"
                        android:orientation="horizontal">


                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:elevation="20sp"
                        android:layout_marginBottom="10sp"
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:orientation="horizontal">



                                <TextView
                                    android:id="@+id/close"
                                    android:layout_width="100sp"
                                    android:layout_height="40sp"
                                    android:fontFamily="@font/pop_reg"
                                    android:textColor="#FFFFFF"
                                    android:background="@drawable/close"
                                    android:text="Close"
                                    android:layout_marginEnd="34sp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textSize="12sp" />

                        </LinearLayout>



                        <TextView
                            android:id="@+id/allocate"
                            android:layout_width="100sp"
                            android:layout_height="40sp"
                            android:fontFamily="@font/pop_reg"
                            android:textColor="#FFFFFF"
                            android:padding="5sp"
                            android:text="Save"
                            android:background="@drawable/btn_reg"
                            android:elevation="20sp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="10sp"
                            android:gravity="center"
                            android:textSize="12sp" />

                    </LinearLayout>


                </LinearLayout>







            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>