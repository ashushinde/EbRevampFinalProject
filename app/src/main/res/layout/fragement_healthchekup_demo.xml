<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"

    android:background="#F3F4FB"
    android:orientation="vertical">






    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_one_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"

                android:elevation="10dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:padding="10sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10sp"
                    >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pop_reg"
                        android:textColor="#FF5722"
                        android:text="Add Health Checkup"
                        android:textStyle="bold"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pop_reg"
                        android:textColor="#474242"
                        android:layout_marginBottom="20sp"
                        android:text="Lorem ipsum dolor sit, amet consectetur adipisicing elit. Eum, expedita earum. Provident quo doloribus perferendis dolores nam velit aliquam vitae, nihil eius sapiente quae, qui error autem"
                        android:textSize="12sp" />

                </LinearLayout>

                    <ImageView
                        android:id="@+id/edit"
                        android:layout_width="100sp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="5sp"
                        android:layout_marginLeft="5sp"
                        android:gravity="end"
                        android:layout_marginBottom="10sp"
                        android:background="@drawable/healthchekup"
                        android:layout_marginRight="5sp"
                        tools:ignore="VectorDrawableCompat" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>



        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv_one_login"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="-30dp"
            android:elevation="3dp"
            android:id="@+id/saveBtn"


            android:padding="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/btn_cancle"
            android:gravity="center"
            android:text="Add Health Checkup"
            android:textColor="#fff"
            android:textSize="14sp"
            android:textStyle="bold" />


    </LinearLayout>

    <ImageView
        android:id="@+id/info_text_GH"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10sp"
        android:padding="5sp"
        android:src="@drawable/no_image"
        android:text="Cashless Form Revised"
        android:textColor="#fff"
        android:textStyle="bold"
        android:visibility="gone"
        tools:ignore="RtlCompat" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hos_claim_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/checkup_list_demo" />


</LinearLayout>


