<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10sp"
    android:background="@drawable/edit_back_grey"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >




        <ImageView
            android:id="@+id/close"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_gravity="center"

            android:layout_marginStart="10sp"
            android:src="@drawable/ic_close_black_24dp" />

    </LinearLayout>

    <LinearLayout
android:id="@+id/member_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="10sp"
        android:background="@drawable/card_light_red"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/sumdata"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="2sp"
            android:layout_marginBottom="2sp"
            android:layout_marginEnd="5sp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"
                android:hint="Suminsured"
                android:textStyle="bold"
                android:textColor="#030512"
                android:textColorHint="#020410"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"
                android:textColor="#C61D11"
                android:textColorHint="#020410"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pre_data"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"

            android:layout_marginTop="2sp"
            android:layout_marginBottom="2sp"
            android:layout_marginStart="5sp"

            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"
                android:hint="Annual Premium"
                android:textStyle="bold"
                android:textColor="#030512"
                android:textColorHint="#020410"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/premium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"
                android:textColor="#C61D11"
                android:textColorHint="#020410"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"

        android:gravity="center"

        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginEnd="5sp"
            android:background="@drawable/edit_back"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"
                android:hint="Relation"


                android:textStyle="bold"
                android:textColor="#030512"
                android:textColorHint="#020410"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/relation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"

                android:layout_marginBottom="2sp"
                android:textColor="#030512"
                android:textColorHint="#020410"
                android:textSize="12sp"
                android:padding="2sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="5sp"
            android:background="@drawable/edit_back"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"
                android:hint="Gender"
                android:textStyle="bold"
                android:textColor="#030512"
                android:textColorHint="#020410"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"
                android:layout_marginBottom="2sp"
                android:textSize="12sp"
                android:padding="2sp"
                android:textColor="#030512"
                android:textColorHint="#020410"
              />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mdate"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="5sp"
            android:background="@drawable/edit_back"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"
                android:hint="Marriage Date"
                android:textStyle="bold"
                android:textColor="#030512"
                android:textColorHint="#020410"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/marr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"
                android:layout_marginBottom="2sp"
                android:textSize="12sp"
                android:padding="2sp"
                android:textColor="#030512"
                android:textColorHint="#020410"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginEnd="5sp"
            android:background="@drawable/edit_back"
            android:gravity="center"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"
                android:hint="First Name"
                android:textStyle="bold"
                android:textColor="#030512"
                android:textColorHint="#020410"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/fname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"
                android:layout_marginBottom="2sp"

                android:textColor="#030512"
                android:textColorHint="#020410"
                android:textSize="12sp"
                android:padding="2sp"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginStart="5sp"
            android:background="@drawable/edit_back"
            android:gravity="center"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"
                android:hint="Date of Birth"
                android:textStyle="bold"
                android:textColor="#030512"
                android:textColorHint="#020410"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"
                android:layout_marginBottom="2sp"
                android:textColor="#030512"
                android:textColorHint="#020410"
                android:textSize="12sp"
                android:padding="2sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"

        android:gravity="center"

        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"

            android:layout_marginEnd="5sp"
            android:background="@drawable/edit_back"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"
                android:hint="Age"
                android:textStyle="bold"
                android:textColor="#030512"
                android:textColorHint="#020410"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"

                android:layout_marginBottom="2sp"
                android:textColor="#030512"
                android:textColorHint="#020410"
                android:textSize="12sp"
                android:padding="2sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mob_linear"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="5sp"
            android:background="@drawable/edit_back"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"
                android:hint="Mobile Number"
                android:textStyle="bold"
                android:textColor="#030512"
                android:textColorHint="#020410"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/mob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"

                android:layout_marginBottom="2sp"
                android:textColor="#030512"
                android:textColorHint="#020410"
                android:textSize="12sp"
                android:padding="2sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10sp"

        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginEnd="5sp"
            android:background="@drawable/edit_back"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"
                android:hint="Email"
                android:textStyle="bold"
                android:textColor="#030512"
                android:textColorHint="#020410"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"

                android:layout_marginBottom="2sp"
                android:textColor="#030512"
                android:textColorHint="#020410"
                android:textSize="12sp"
                android:padding="2sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/formember"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginStart="5sp"
            android:background="@drawable/edit_back"
            android:gravity="center"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"
                android:hint="Employee Premium"
                android:textStyle="bold"
                android:textColor="#030512"
                android:textColorHint="#020410"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/emp_premium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"

                android:layout_marginBottom="2sp"
                android:textColor="#030512"
                android:textColorHint="#020410"
                android:textSize="12sp"
                android:padding="2sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>