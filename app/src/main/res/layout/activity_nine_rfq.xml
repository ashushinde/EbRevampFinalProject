                            android:layout_marginStart="10sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="3sp"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/regular"
                                android:text="Top Up Cover"
                                android:padding="3sp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textColor="#100B0B"
                                android:textStyle="bold"
                                android:textSize="16sp" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15sp"
                    android:padding="5sp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/core_recycle"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10sp"
                        android:layout_height="30sp"
                        tools:listitem="@layout/seventh_list" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="15sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="10sp"
                    android:background="#497395"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:background="@drawable/card_back"
                    android:layout_marginEnd="10sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.0"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginStart="15sp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="#0E0C0C"
                            android:textStyle="bold"
                            android:layout_gravity="start"
                            android:gravity="start"
                            android:text="Whats Covered" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10sp"
                        android:background="@drawable/circle_light"
                        android:src="@drawable/ic_arrow_forward_black_24dp"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:background="@drawable/card_back"
                    android:layout_marginEnd="10sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.0"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginStart="15sp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="#0E0C0C"

                            android:layout_gravity="start"
                            android:gravity="start"
                            android:textStyle="bold"
                            android:text="Whats not covered" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10sp"
                        android:background="@drawable/circle_light"
                        android:src="@drawable/ic_arrow_forward_black_24dp"

                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30sp"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:orientation="horizontal">
                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#0E0C0C"
                        android:layout_marginStart="10sp"
                        android:text="Grand Total" />

                <LinearLayout

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2sp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_marginStart="5sp"
                        android:src="@drawable/rupee"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pop_reg"
                        android:hint="10,850"
                        android:textStyle="bold"
                        android:layout_marginStart="5sp"
                        android:textColor="#060908"
                        android:textColorHint="#060908"
                        android:textSize="16sp" />

                </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/next"

                    android:layout_width="100sp"

                    android:layout_height="45sp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10sp"

                    android:background="@drawable/btn_reg"
                    android:gravity="center"
                    android:transitionGroup="false"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pop_reg"
                        android:hint="View invoice"
                        android:textStyle="bold"
                        android:layout_marginStart="10sp"
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


