<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20sp"
    android:layout_gravity="center"

    android:background="@drawable/edit_back_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">






                <ImageView
                    android:id="@+id/info_text"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_gravity="end"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"

                    android:layout_marginStart="10sp"

                    android:src="@drawable/ic_close_black_24dp"
                    android:text="Cashless Form Revised"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">




                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8sp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10sp"
                                android:fontFamily="@font/bold"
                                android:text="Preview Image"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_marginTop="9sp"
                                android:layout_height="wrap_content"
                                android:drawablePadding="10sp"
                                android:text=" *"
                                android:textColor="#b72424"
                                android:textStyle="bold" />

                        </LinearLayout>



                        <TextView
                            android:id="@+id/bankBtn1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:gravity="center"
                            android:text="Last 3 Month Statement"
                            android:textColor="#939393"
                            android:visibility="gone"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="1sp"
                            android:layout_marginLeft="1sp"
                            android:layout_marginBottom="3sp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingBottom="5sp">

                            <RelativeLayout
                                android:id="@+id/adhaarBackLayout_cheque1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="1sp"
                                android:layout_marginLeft="1sp"
                                android:layout_marginTop="5sp"
                                android:layout_marginBottom="3sp"
                                android:background="@drawable/dash_shadow"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingBottom="5sp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"

                                    android:gravity="center"
                                    android:orientation="vertical"
                                    >

                                    <ImageView
                                        android:id="@+id/bankPreview1"
                                        android:layout_width="200sp"
                                        android:layout_height="200sp"

                                        />

                                    <LinearLayout
                                        android:id="@+id/upload_id_proof"
                                        android:layout_width="match_parent"
                                        android:layout_marginStart="15sp"
                                        android:layout_marginEnd="15sp"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:background="#DDFFDE"
                                        android:layout_marginTop="10sp"
                                        android:padding="3sp"
                                        android:orientation="horizontal">


                                        <ImageView
                                            android:id="@+id/uc1"
                                            android:layout_width="18sp"
                                            android:layout_height="18sp"
                                            android:layout_marginStart="1sp"
                                            android:layout_marginLeft="1sp"
                                            android:layout_marginEnd="5sp"
                                            android:singleLine="true"
                                            android:src="@drawable/plusicon"
                                            android:textColor="@android:color/holo_red_dark"
                                            />

                                        <TextView
                                            android:id="@+id/up1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:text="Select image To Upload"
                                            android:textColor="#339B37"
                                            android:textSize="13sp"
                                            android:fontFamily="@font/pop_reg"
                                            android:textStyle="bold" />


                                    </LinearLayout>
                                    <TextView
                                        android:id="@+id/pdf_id"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="PDF"
                                        android:gravity="center"
                                        android:textColor="#461010"
                                        android:visibility="gone"
                                        />

                                    <TextView
                                        android:id="@+id/text_pdf"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="PDF"
                                        android:textColor="#461010"
                                        android:visibility="gone"
                                        tools:visibility="visible" />
                                    <ImageView
                                        android:id="@+id/next_id"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:layout_marginTop="5sp"
                                        android:layout_marginStart="5sp"
                                        android:visibility="gone"
                                        android:src="@drawable/ic_arrow_forward_black_24dp"
                                        android:layout_toRightOf="@+id/pdf_id"
                                        />

                                </LinearLayout>




                            </RelativeLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pop_reg"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="(file format : .jpg, .jpeg, .gif, .png)"
                            android:textColor="#FC754B"
                            android:textSize="11sp"

                            />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/saveBank"
            android:layout_width="150sp"
            android:layout_height="45sp"
            android:layout_gravity="right"
            android:layout_marginTop="15sp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/save_btn"
            android:elevation="18sp"
            android:text="submit"
            android:textColor="#fff"
            />

    </LinearLayout>



</ScrollView>