<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00ECECEC"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="330sp"
        android:layout_height="wrap_content"
        android:background="@drawable/card_back"

        android:layout_margin="10sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="start"
                    android:orientation="horizontal"


                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1.5"
                        android:gravity="start"
                        android:orientation="horizontal"


                        >

                        <TextView
                            android:id="@+id/mem_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4sp"
                            android:layout_marginEnd="5sp"
                            android:layout_marginRight="5sp"
                            android:layout_marginBottom="10sp"
                            android:drawablePadding="10sp"
                            android:fontFamily="@font/pop_reg"
                            android:text="Deepashri"
                            android:textColor="#0000FF"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/last_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4sp"
                            android:layout_marginBottom="10sp"
                            android:drawablePadding="10sp"
                            android:fontFamily="@font/pop_reg"
                            android:text="Kini"
                            android:textColor="#0000FF"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="10sp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="2sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"
                            android:text="Claim Id :  "
                            android:textColor="#0d0905"
                            android:textSize="12sp"
                            android:textStyle="bold"

                            />

                        <TextView
                            android:id="@+id/claim_id"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1.5"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"
                            android:text="101"
                            android:textColor="#FF5722"
                            android:textSize="12sp"
                            android:textStyle="bold"



                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5sp"
                            android:layout_marginStart="10sp"
                            android:layout_marginBottom="10sp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="2sp">


                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:padding="3sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:fontFamily="@font/pop_reg"
                        android:gravity="start"
                        android:text="Claim type :  "
                        android:textColor="#0d0905"
                        android:textSize="12sp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/claim_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1.5"
                        android:fontFamily="@font/pop_reg"
                        android:gravity="start"
                        android:text="XYZ"
                        android:textColor="#0d0905"
                        android:textSize="12sp"
                        android:textStyle="bold"

                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:padding="3sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:fontFamily="@font/pop_reg"
                        android:gravity="start"
                        android:text="Planned Hospitalization Date :  "
                        android:textColor="#0d0905"
                        android:textSize="12sp"
                        android:textStyle="bold"

                        />


                    <TextView
                        android:id="@+id/claim_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1.5"
                        android:fontFamily="@font/pop_reg"
                        android:gravity="start"
                        android:text="16/08/2018"
                        android:textColor="#0d0905"
                        android:textSize="12sp"
                        android:textStyle="bold"

                        />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:padding="3sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:fontFamily="@font/pop_reg"
                        android:gravity="start"
                        android:text="Claim Request Date :  "
                        android:textColor="#0d0905"
                        android:textSize="12sp"
                        android:textStyle="bold"

                        />
                    <TextView
                        android:id="@+id/claim_date_plan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1.5"
                        android:fontFamily="@font/pop_reg"
                        android:gravity="start"
                        android:text="16/08/2018"
                        android:textColor="#0d0905"
                        android:textSize="12sp"
                        android:textStyle="bold"

                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/status_lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:padding="3sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:fontFamily="@font/pop_reg"
                        android:gravity="start"
                        android:text="Status :  "
                        android:textColor="#0d0905"
                        android:textSize="12sp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1.5"
                        android:fontFamily="@font/pop_reg"
                        android:gravity="start"
                        android:text="ff"
                        android:textColor="#0d0905"
                        android:textSize="12sp"
                        android:textStyle="bold"

                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:padding="3sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:fontFamily="@font/pop_reg"
                        android:gravity="start"
                        android:text="Ailment :  "
                        android:textColor="#0d0905"
                        android:textSize="12sp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/ailment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1.5"
                        android:fontFamily="@font/pop_reg"
                        android:gravity="start"
                        android:text="-"
                        android:textColor="#0d0905"
                        android:textSize="12sp"
                        android:textStyle="bold"

                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:padding="3sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:fontFamily="@font/pop_reg"
                        android:gravity="start"
                        android:text="Claim sub type :  "
                        android:textColor="#0d0905"
                        android:textSize="12sp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/subtype"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1.5"
                        android:fontFamily="@font/pop_reg"
                        android:gravity="start"
                        android:text="-"
                        android:textColor="#0d0905"
                        android:textSize="12sp"
                        android:textStyle="bold"

                        />


                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="10sp"
                    android:gravity="end"
                    android:visibility="gone"

                    android:background="@drawable/green_light"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/regular"
                        android:gravity="start"
                        android:text="  Track Claim "
                        android:textColor="#0d0905"
                        android:textSize="13sp"
                        android:textStyle="bold"

                        />

                    <ImageView

                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_gravity="center"
                        android:layout_marginStart="1sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginEnd="5sp"
                        android:gravity="center"
                        android:padding="5sp"

                        android:src="@drawable/net_map"
                        android:layout_marginRight="5sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/dash_blue"
                    android:gravity="start"
                    android:visibility="gone"



                    android:orientation="vertical"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:padding="3sp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1.5"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"
                            android:text="Claim Settled/Approved Amount :  "
                            android:textColor="#25af82"
                            android:textSize="12sp"
                            android:textStyle="bold"

                            />

                        <ImageView
                            android:layout_width="10sp"
                            android:layout_height="10sp"
                            android:layout_gravity="center"

                            android:background="@drawable/rupee"
                            />


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="end"
                            android:text="-"
                            android:textColor="#25af82"
                            android:textSize="12sp"
                            android:textStyle="bold"

                            />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/regular"
                            android:gravity="end"
                            android:text=" /-"
                            android:textColor="#25af82"
                            android:textSize="12sp"
                            android:textStyle="bold"

                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:padding="3sp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1.5"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"
                            android:text="Claim Amount :  "
                            android:textColor="#25af82"
                            android:textSize="12sp"
                            android:textStyle="bold"

                            />

                        <ImageView
                            android:layout_width="10sp"
                            android:layout_height="10sp"
                            android:layout_gravity="center"

                            android:background="@drawable/rupee"
                            />


                        <TextView
                            android:id="@+id/claim_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="end"
                            android:text="500"
                            android:textColor="#25af82"
                            android:textSize="12sp"
                            android:textStyle="bold"

                            />

                        <TextView
                            android:id="@+id/no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/regular"
                            android:gravity="end"
                            android:text=" /-"
                            android:textColor="#25af82"
                            android:textSize="12sp"
                            android:textStyle="bold"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:padding="3sp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1.5"
                            android:fontFamily="@font/regular"
                            android:gravity="start"
                            android:text="Claim Settled :  "
                            android:textColor="#fd176f"
                            android:textSize="12sp"
                            android:textStyle="bold"

                            />

                        <TextView
                            android:id="@+id/claim_settle_amt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_weight="1.5"
                            android:fontFamily="@font/regular"
                            android:gravity="end"
                            android:text="8000"
                            android:textColor="#fd176f"
                            android:textSize="12sp"
                            android:textStyle="bold"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/regular"
                            android:gravity="end"
                            android:text=" /-"
                            android:textColor="#fd176f"
                            android:textSize="12sp"
                            android:textStyle="bold"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="10sp"
                        android:gravity="start"
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:padding="5sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"
                            android:text="Claim Reason :  "
                            android:textColor="#0d0905"
                            android:textSize="13sp"
                            android:textStyle="bold"

                            />

                        <TextView
                            android:id="@+id/claim_reason"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"
                            android:padding="5sp"
                            android:text=" Download this res folder and add the drawables to your project’s res. This folder contains necessary drawables required for bottom navigation items"
                            android:textColor="#817e7e"
                            android:textSize="12sp"

                            />


                    </LinearLayout>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:background="#EEEEEE"

                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/know_more"
                        android:layout_width="0dp"
                        android:layout_weight="1.2"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="3sp"
                        android:gravity="center"
                        android:background="@drawable/dash_blue"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/know"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/regular"
                        android:gravity="start"
                        android:text="View More"
                        android:textColor="#1b81b7"
                        android:textSize="13sp"
                        android:textStyle="bold"

                        />

                    <ImageView
                        android:id="@+id/expand"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginEnd="5sp"
                        android:background="@drawable/circle_more"
                        android:gravity="center"
                        android:padding="5sp"
                        app:srcCompat="@drawable/ic_add_black_24dp"
                        android:layout_marginRight="5sp"
                        tools:ignore="VectorDrawableCompat" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/view_detail"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"


                        android:gravity="center"
                        android:background="@drawable/dash_blue"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/regular"
                            android:gravity="start"
                            android:text="View Claim Detail"
                            android:textColor="#1b81b7"
                            android:textSize="13sp"
                            android:textStyle="bold"

                            />

                        <ImageView

                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:layout_gravity="center"
                            android:layout_marginStart="10sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginEnd="5sp"
                            android:background="@drawable/circle_more"
                            android:gravity="center"
                            android:padding="5sp"
                            app:srcCompat="@drawable/net_map"
                            android:layout_marginRight="5sp"
                            tools:ignore="VectorDrawableCompat" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/track"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"



                        android:gravity="center"
                        android:background="@drawable/dash_blue"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/regular"
                            android:gravity="start"
                            android:text="Detail"
                            android:textColor="#1b81b7"
                            android:textSize="13sp"
                            android:textStyle="bold"

                            />

                        <ImageView

                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:layout_gravity="center"
                            android:layout_marginStart="10sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginEnd="5sp"
                            android:background="@drawable/circle_more"
                            android:gravity="center"
                            android:padding="3sp"
                            app:srcCompat="@drawable/ic_eye"
                            android:layout_marginRight="5sp"
                            tools:ignore="VectorDrawableCompat" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
