<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00F2F2F2"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="15sp"
            android:layout_marginBottom="10sp"
            android:background="#fff"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="5sp"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/first_name"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5sp"
                        android:drawablePadding="10sp"
                        android:fontFamily="@font/bold"
                        android:text="Deepashri"
                        android:textColor="#030405"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/last_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5sp"
                        android:drawablePadding="10sp"
                        android:fontFamily="@font/bold"
                        android:text="0015"
                        android:textColor="#FF5722"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="10sp"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:padding="2sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:fontFamily="@font/bold"
                        android:gravity="start"
                        android:text="Raised On :  "
                        android:textColor="#0d0905"
                        android:textSize="13sp"


                        />

                    <TextView
                        android:id="@+id/relation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1.5"

                        android:fontFamily="@font/bold"
                        android:gravity="start"
                        android:text="Life Care"
                        android:textColor="#4B4B4B"
                        android:textSize="13sp"

                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="start"



                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:padding="5sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/bold"
                            android:gravity="start"
                            android:text="Query Sub Type :  "
                            android:textColor="#0d0905"
                            android:textSize="12sp"

                            />

                        <TextView
                            android:id="@+id/gender"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1.5"

                            android:fontFamily="@font/bold"
                            android:gravity="start"

                            android:text="Male"
                            android:textColor="#4B4B4B"
                            android:textSize="13sp"


                            />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/resolved_on"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5sp"


                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/bold"
                            android:gravity="center"
                            android:text="Resolved On :  "
                            android:textColor="#0d0905"
                            android:textSize="13sp"

                            />

                        <TextView
                            android:id="@+id/dob"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1.5"
                            android:fontFamily="@font/bold"
                            android:gravity="start"
                            android:text="16-08-1993"
                            android:textColor="#4B4B4B"
                            android:textSize="13sp"


                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:padding="5sp"


                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/bold"
                            android:gravity="start"
                            android:text="Age Type (Years / Days) :  "
                            android:textColor="#0d0905"
                            android:textSize="13sp"

                            />

                        <TextView
                            android:id="@+id/age_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1.5"

                            android:fontFamily="@font/bold"
                            android:gravity="start"
                            android:text="Years"
                            android:textColor="#4B4B4B"
                            android:textSize="13sp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:visibility="gone"


                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/bold"
                            android:gravity="start"
                            android:text="Age :  "
                            android:textColor="#0d0905"
                            android:textSize="13sp"

                            />

                        <TextView
                            android:id="@+id/age"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1.5"
                            android:fontFamily="@font/bold"
                            android:gravity="start"
                            android:text="46"
                            android:textColor="#4B4B4B"
                            android:textSize="13sp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:orientation="vertical"


                        >

                        <LinearLayout
                            android:id="@+id/hidden"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5sp"
                            android:visibility="gone"
                            android:orientation="horizontal"




                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:fontFamily="@font/bold"
                                android:gravity="start"

                                android:text="Family Cover :"
                                android:textColor="#9C27B0"
                                android:textSize="13sp" />


                            <ImageView
                                android:layout_width="10sp"
                                android:layout_height="10sp"
                                android:layout_gravity="center"
                                android:background="@drawable/rupee" />

                            <TextView
                                android:id="@+id/fam_cover"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:fontFamily="@font/bold"
                                android:gravity="start"
                                android:text="46g4fdhfghfdghgg"
                                android:textColor="#9C27B0"
                                android:textSize="13sp"
                                android:textStyle="bold"

                                />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/prem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:gravity="start"
                            android:padding="5sp"

                            android:visibility="gone"
                            android:orientation="horizontal"



                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:fontFamily="@font/bold"
                                android:gravity="end"
                                android:text="Premium :  "
                                android:textColor="#FF9800"
                                android:textSize="13sp"
                                android:textStyle="bold" />


                            <ImageView
                                android:layout_width="10sp"
                                android:layout_height="10sp"
                                android:layout_gravity="center"

                                android:background="@drawable/rupee" />

                            <TextView
                                android:id="@+id/premium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:fontFamily="@font/bold"
                                android:gravity="start"
                                android:text="5000"

                                android:textColor="#FF9800"
                                android:textSize="13sp"
                                android:textStyle="bold"

                                />

                            <TextView
                                android:id="@+id/pr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:fontFamily="@font/regular"
                                android:gravity="start"
                                android:text=" /-"
                                android:textColor="#FF9800"
                                android:textSize="12sp"
                                android:textStyle="bold"

                                />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"
                        android:gravity="end"

                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/delete"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_gravity="center"
                            android:layout_marginStart="1sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginEnd="5sp"
                            android:gravity="center"
                            android:padding="5sp"
                            android:visibility="gone"
                            android:src="@drawable/enroll_delete" />

                        <ImageView
                            android:id="@+id/edit"
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="1sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginEnd="5sp"
                            android:gravity="center"
                            android:padding="5sp"
                            android:visibility="gone"
                            android:src="@drawable/enroll_edit" />


                        <ImageView
                            android:id="@+id/download"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_gravity="center"
                            android:layout_marginStart="1sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginEnd="5sp"
                            android:gravity="center"
                            android:padding="5sp"
                            android:src="@drawable/attachment" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10sp"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/know"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/regular"
                    android:gravity="start"
                    android:text="View More"

                    android:textColor="#1b81b7"
                    android:textSize="13sp"
                    android:textStyle="bold"

                    />

                <ImageView
                    android:id="@+id/expand"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10sp"
                    android:layout_marginLeft="10sp"

                    android:layout_marginEnd="5sp"
                    android:background="@drawable/circle_more"
                    android:gravity="center"
                    android:padding="5sp"
                    android:src="@drawable/ic_add_black_24dp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card"
            android:layout_gravity="center"
            android:layout_marginTop="-10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView

                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:layout_marginBottom="10sp"
                android:background="@drawable/circle_icon"
                android:fontFamily="@font/pop_reg"
                android:gravity="center"
                android:src="@drawable/ic_expand_less_black_24dp"
                android:text="Login"
                android:textColor="#fff"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="3sp"
            android:layout_height="100sp"
            android:layout_marginStart="15sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="15sp"
            android:layout_marginBottom="10sp"
            android:background="#de2323" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>