<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EBECFF"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/info_text_GH"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:padding="5sp"
            android:src="@drawable/no_image"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:visibility="gone"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/vol_cardview"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@drawable/tab_curve"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="10sp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="50sp"
                            android:layout_height="1sp"
                            android:background="#A2A0A0"/>

                        <ImageView
                            android:id="@+id/addcover"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_gravity="center"
                            android:padding="8sp"
                            android:layout_marginStart="15sp"
                            android:src="@drawable/addcover"
                            android:background="@drawable/circle_arrow" />



                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/card_back"
                            android:hint="Voluntary Term Life"
                            android:textColorHint="#673AB7"
                            android:padding="5sp"
                            android:paddingStart="15sp"
                            android:paddingEnd="15sp"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="50sp"
                            android:layout_height="1sp"
                            android:background="#A2A0A0"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">




                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                    <TextView
                        android:id="@+id/intro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:hint="google.com"
                        android:textColorHint="#818CC7"
                        android:textSize="12sp"
                        android:fontFamily="@font/pop_reg"
                        android:layout_marginTop="8sp"

                        />

                    <View
                        android:layout_width="100sp"
                        android:layout_height="1sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginBottom="20sp"

                       android:background="#110A0A"
                        android:layout_marginTop="2sp"

                        />
                    </LinearLayout>
                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
