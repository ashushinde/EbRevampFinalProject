<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="#F2F3FD"
    android:orientation="vertical">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/arrorw_rfq"
                android:padding="3sp"
                android:elevation="25sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/info_text"
                    android:layout_width="150sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10sp"

                    android:src="@drawable/fyntune_logo"
                    android:text="Cashless Form Revised"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginTop="5sp"

                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_one_login"
                        android:layout_width="match_parent"
                        android:layout_height="200sp"
                        android:layout_centerHorizontal="true"

                        app:cardBackgroundColor="#fcfcfc"
                        app:cardCornerRadius="5dp"

                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10sp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10sp"
                                android:orientation="horizontal">

                                <ImageView

                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/arrow_back"
                                    android:layout_marginEnd="5sp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:gravity="start"

                                    android:fontFamily="@font/pop_reg"
                                    android:textStyle="bold"
                                    android:hint="Go back and customize plan"
                                    android:textColor="@android:color/black"
                                    android:textColorHint="@android:color/black"
                                    android:textSize="14sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10sp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="#8E8888"
                                        android:layout_marginStart="10sp"
                                        android:textStyle="bold"
                                        android:text="Recommended Plans for" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="#0E0C0C"
                                        android:layout_marginStart="10sp"
                                        android:textStyle="bold"
                                        android:text="Fytnune" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="#8E8888"
                                        android:layout_marginStart="10sp"
                                        android:textStyle="bold"
                                        android:text="Total Lives Covered" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="#0E0C0C"
                                        android:layout_marginStart="10sp"
                                        android:textStyle="bold"
                                        android:text="600" />
                                </LinearLayout>
                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10sp"
                                android:layout_marginTop="10sp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="#8E8888"
                                        android:layout_marginStart="10sp"
                                        android:textStyle="bold"
                                        android:text="Sum Insured" />
                                    <LinearLayout
                                        android:layout_marginStart="10sp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                    <ImageView

                                        android:layout_width="10sp"
                                        android:layout_height="20sp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/rupee"
                                        android:layout_marginEnd="2sp"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="#0E0C0C"
                                        android:layout_marginStart="10sp"
                                        android:textStyle="bold"
                                        android:text="2 lac" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="#8E8888"
                                        android:layout_marginStart="10sp"
                                        android:textStyle="bold"
                                        android:text="Family construct" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="#0E0C0C"
                                        android:layout_marginStart="10sp"
                                        android:textStyle="bold"
                                        android:text="Employee,spouse,children.." />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="-35dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="15sp"
                    android:layout_below="@id/cv_one_login"
                    >


                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="1.0"
                        android:text="Insurance Wise"
                        android:textColor="#4CAF50"
                        android:layout_height="50dp"
                        android:layout_marginStart="8sp"
                        android:layout_marginEnd="8sp"
                        android:background="@drawable/card_select_border"
                        android:elevation="15dp" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="1.0"
                        android:layout_height="50dp"
                        android:text="Variant Wise"
                        android:background="@drawable/card_select_wave"
                        android:elevation="15dp" />

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30sp"
                    android:padding="10sp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/core_recycle"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10sp"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/select_plan_list" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:background="@drawable/edit_back_grey"
                    android:padding="5sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/pop_reg"
                        android:textStyle="bold"
                        android:hint="Not happy with any of these plans? try creating your own plan here"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/black"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:id="@+id/next"

                        android:layout_width="wrap_content"

                        android:layout_height="45sp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10sp"

                        android:background="@drawable/btn_reg"
                        android:gravity="center"
                        android:transitionGroup="false"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pop_reg"
                            android:hint="   Customize this plans    "
                            android:textStyle="bold"
                            android:layout_marginStart="10sp"
                            android:textColor="#fff"
                            android:textColorHint="#fff"
                            android:textSize="16sp" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</ScrollView>
