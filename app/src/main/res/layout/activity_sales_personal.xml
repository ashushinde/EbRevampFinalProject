<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:background="@drawable/arrorw"
                    android:layout_marginStart="20sp"
                    android:padding="3sp"
                    android:elevation="25sp"
                    android:layout_marginEnd="20sp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/info_text"
                        android:layout_width="60sp"
                        android:layout_height="50sp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10sp"

                        android:src="@drawable/toolbar_arrow"
                        android:text="Cashless Form Revised"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />
                    <TextView
                        android:id="@+id/thumbnail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/bold"
                        android:text="Personal Detail"
                        android:textColor="#5B2AAC"
                        android:layout_marginStart="10sp"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:background="@drawable/nav_back"
                        android:layout_height="150sp">

                        <TextView
                            android:id="@+id/frogm"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pop_reg"
                            android:text="Any Update"
                            android:textColor="#FDFDFD"
                            android:layout_marginTop="30sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="18sp" />
                    </LinearLayout>




                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="30sp"
                        android:layout_marginTop="20sp"
                        android:layout_marginStart="12sp"
                        android:layout_marginEnd="12sp"
                        android:layout_marginBottom="35sp"
                        app:cardElevation="22sp"


                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="6sp"
                            android:orientation="horizontal">



                            <Button
                                android:id="@+id/group_cover"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5sp"
                                android:text="Personal"
                                android:textSize="11sp"
                                android:fontFamily="@font/pop_reg"
                                android:textColor="#FFFFFF"
                                android:padding="10sp"
                                android:textStyle="bold"
                                android:background="@drawable/nav_back_tab"/>


                            <Button
                                android:id="@+id/voluntary_cover"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5sp"
                                android:text="Organization"
                                android:textStyle="bold"
                                android:padding="10sp"
                                android:textSize="11sp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/pop_reg"
                                android:textColor="#0E0C0C"
                                android:background="@drawable/tab_curve"
                                />
                            <Button
                                android:id="@+id/cover"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5sp"
                                android:text="Buy Insurance Cover"
                                android:textStyle="bold"
                                android:textSize="11sp"
                                android:visibility="gone"
                                android:padding="6sp"
                                android:fontFamily="@font/pop_reg"
                                android:textColor="#0E0C0C"
                                android:background="@drawable/tab_curve"
                                />


                        </LinearLayout>




                    </androidx.cardview.widget.CardView>




                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <LinearLayout
                                android:id="@+id/my_insurance_cover_form"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:orientation="vertical"
                                    >












                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10sp"
                                        android:background="@drawable/edit_back_grey"
                                        android:orientation="vertical">


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="10sp"
                                                android:layout_marginTop="5sp"
                                                android:fontFamily="@font/bold"
                                                android:singleLine="true"
                                                android:text="Name"
                                                android:textColor="@android:color/black"
                                                android:textSize="14sp"
                                                android:textStyle="bold"
                                                android:layout_marginLeft="10sp" />
                                        </LinearLayout>

                                        <EditText
                                            android:id="@+id/policy_name"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5sp"
                                            android:backgroundTint="#fff"

                                            android:fontFamily="@font/bold"
                                            android:hint="Enter name"
                                            android:inputType="textPersonName"
                                            android:padding="10sp"
                                            android:singleLine="true"

                                            android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"

                                            android:textColor="#616161"
                                            android:textSize="13sp" />
                                    </LinearLayout>



                                    <LinearLayout
                                        android:background="@drawable/edit_back_grey"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10sp"
                                        android:orientation="vertical"
                                        android:padding="5sp">
                                        <LinearLayout

                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            >
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:hint="Email Id "
                                                android:textColorHint="#020202"
                                                android:textColor="#000000"
                                                android:fontFamily="@font/bold"
                                                android:textStyle="bold"
                                                android:layout_marginStart="10sp"
                                                android:textSize="14sp" />


                                        </LinearLayout>

                                        <EditText
                                            android:id="@+id/email_id"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5sp"
                                            android:backgroundTint="#fff"
android:focusableInTouchMode="false"



                                            android:padding="10sp"
                                            android:singleLine="true"
                                            android:textSize="13sp"


                                            android:textColor="#5F5F5F"
                                            />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:background="@drawable/edit_back_grey"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10sp"
                                        android:orientation="vertical"
                                        android:padding="5sp">
                                        <LinearLayout

                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            >
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"

                                                android:layout_marginStart="10sp"
                                                android:hint="Contact No"
                                                android:textColorHint="#020202"
                                                android:textColor="#000000"
                                                android:fontFamily="@font/bold"
                                                android:textStyle="bold"
                                                android:textSize="14sp" />
                                            <TextView
                                                android:fontFamily="@font/bold"
                                                android:textStyle="bold"
                                                android:textSize="15sp"

                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"


                                                android:hint=""
                                                android:textColorHint="#962525"
                                                android:textColor="#B93434"
                                                />
                                        </LinearLayout>

                                        <EditText
                                            android:id="@+id/contact_no"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5sp"
                                            android:backgroundTint="#fff"

                                            android:hint="Enter Contact no."

                                            android:drawablePadding="10sp"
                                            android:ems="10"
                                            android:text="894545435"

                                            android:fontFamily="@font/bold"

                                            android:inputType="number"
                                            android:maxLength="10"
                                            android:padding="10sp"
                                            android:singleLine="true"
                                            android:textColor="#5F5F5F"
                                            android:textSize="13sp"
                                            />
                                    </LinearLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:gravity="end"
                                    android:orientation="horizontal">


                                    <Button
                                        android:id="@+id/send"
                                        android:layout_width="150sp"
                                        android:layout_height="48sp"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="5sp"
                                        android:layout_marginLeft="5sp"
                                        android:layout_marginEnd="10sp"
                                        android:layout_marginBottom="5sp"
                                        android:background="@drawable/btn_reg"
                                        android:gravity="center"
                                        android:text="Submit"
                                        android:textColor="#fff"
                                        />

                                </LinearLayout>


                            </LinearLayout>







                        <LinearLayout
                            android:id="@+id/ghi_recycle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="15dp"
                            android:visibility="gone"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="15dp"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10sp"
                                android:background="@drawable/edit_back_grey"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10sp"
                                        android:layout_marginTop="5sp"
                                        android:fontFamily="@font/bold"
                                        android:singleLine="true"
                                        android:text="Name"
                                        android:textColor="@android:color/black"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:layout_marginLeft="10sp" />
                                </LinearLayout>

                                <EditText
                                    android:id="@+id/company_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5sp"
                                    android:backgroundTint="#fff"

                                    android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"

                                    android:fontFamily="@font/bold"
                                    android:hint="Enter Company Name"
                                    android:inputType="textPersonName"
                                    android:padding="10sp"
                                    android:singleLine="true"
                                    android:textColor="#616161"
                                    android:textSize="13sp" />
                            </LinearLayout>









                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginBottom="3sp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingBottom="5sp">

                                <RelativeLayout
                                    android:id="@+id/adhaarBackLayout_cheque1"
                                    android:layout_width="0dp"
                                    android:layout_height="150sp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5sp"
                                    android:layout_marginBottom="3sp"
                                    android:layout_weight="1.5"
                                    android:background="@drawable/dash_shadow"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    >


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        >
                                        <LinearLayout
                                            android:id="@+id/hide"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:orientation="horizontal"
                                            >

                                            <ImageView
                                                android:layout_width="30sp"
                                                android:layout_height="30sp"
                                                android:padding="2sp"
                                                android:src="@drawable/attachment"
                                                />

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_weight="1.5"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical"
                                                android:padding="5sp"
                                                >


                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:hint="Attach File"
                                                    android:textColorHint="#020202"
                                                    android:textColor="#000000"
                                                    android:fontFamily="@font/bold"
                                                    android:textStyle="bold"
                                                    android:layout_marginStart="10sp"
                                                    android:textSize="14sp" />


                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:hint="(File Format : Jpeg,Png,-Max File Size :2 MB)"
                                                    android:textColorHint="#FF5722"
                                                    android:textColor="#FF5722"
                                                    android:fontFamily="@font/bold"
                                                    android:textStyle="bold"
                                                    android:layout_marginStart="10sp"
                                                    android:textSize="12sp" />

                                            </LinearLayout>



                                        </LinearLayout>



                                        <ImageView
                                            android:id="@+id/bankPreview1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:visibility="gone"
                                            />

                                    </LinearLayout>





                                </RelativeLayout>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:gravity="end"
                                android:orientation="horizontal">


                                <Button
                                    android:id="@+id/send_organization"
                                    android:layout_width="150sp"
                                    android:layout_height="48sp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="5sp"
                                    android:layout_marginLeft="5sp"
                                    android:layout_marginEnd="10sp"
                                    android:layout_marginBottom="5sp"
                                    android:background="@drawable/btn_reg"
                                    android:gravity="center"
                                    android:text="Submit"
                                    android:textColor="#fff"
                                    />

                            </LinearLayout>

                        </LinearLayout>
                        </LinearLayout>

                    </ScrollView>



                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>