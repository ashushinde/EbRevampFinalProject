<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00B32E2E"
    android:elevation="10sp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        card_view:cardCornerRadius="20sp"
        >

        <View
            android:layout_width="3sp"
            android:layout_height="220sp"
            android:visibility="gone"
            android:background="#e44d4d" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginStart="5sp"
                android:layout_marginBottom="2sp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:fontFamily="@font/pop_reg"

                    android:text="Insured Name"
                    android:textColor="#080A19"
                    android:paddingStart="20sp"
                    android:paddingEnd="20sp"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/member_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:fontFamily="@font/pop_reg"

                    android:text="Asawari Shinde"
                    android:textColor="#3F51B5"
                    android:paddingStart="20sp"
                    android:paddingEnd="20sp"
                    android:textSize="13sp"
                    android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="5sp"

                    android:layout_marginStart="10sp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/user"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_gravity="center"
                        />


                </LinearLayout>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:padding="2sp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/pop_reg"
                    android:text="Relation :"
                    android:textColor="#6e6d6d"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/relation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/pop_reg"
                    android:textStyle="bold"
                    android:text="Self"
                    android:textColor="#FF5722"
                    android:textSize="12sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:padding="2sp">

                <TextView
                    android:id="@+id/mem_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/pop_reg"
                    android:text="Member Id   :"
                    android:textColor="#6e6d6d"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/member_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/pop_reg"
                    android:text="96"
                    android:textColor="#FF5722"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:padding="2sp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/pop_reg"
                    android:text="Policy Number :"
                    android:textColor="#6e6d6d"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/policyno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/pop_reg"
                    android:textColor="#FF5722"
                    android:text="Active"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2sp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/pop_reg"
                    android:text="Cover Date :"
                    android:textColor="#6e6d6d"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cover_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/pop_reg"
                    android:text="16-Aug-1993"
                    android:textStyle="bold"
                    android:textColor="#FF5722"
                    android:textSize="12sp"
                    />

            </LinearLayout>







            <LinearLayout
                android:id="@+id/health_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="#2EF5A8"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10sp"
                tools:ignore="RtlCompat">
                <Button
                    android:id="@+id/healcrd"

                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:background="#00ffffff"
                    android:fontFamily="@font/pop_reg"
                    android:text="Download E-Card"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
