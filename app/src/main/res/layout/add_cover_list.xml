<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00EBEDFA"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/info_text_GH"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:padding="5sp"
            android:src="@drawable/no_image"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:visibility="gone"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/vol_cardview"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="10sp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="50sp"
                            android:layout_height="1sp"
                            android:background="#A2A0A0"/>


                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/card_back"
                            android:hint="Voluntary Term Life"
                            android:textColorHint="#06030B"
                            android:padding="5sp"
                            android:paddingStart="15sp"
                            android:paddingEnd="15sp"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="50sp"
                            android:layout_height="1sp"
                            android:background="#A2A0A0"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/intro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:textColorHint="#201717"
                        android:textSize="12sp"
                        android:fontFamily="@font/pop_reg"
                        android:layout_marginTop="8sp"

                        />
                    <LinearLayout
                        android:id="@+id/covers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15sp"
                        android:layout_marginEnd="15sp"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:layout_marginEnd="10sp"
                            android:textColor="#201717"
                            android:textSize="13sp"
                            android:text="Cover Type : "
                            android:fontFamily="@font/pop_reg"
                            android:layout_marginTop="8sp"

                            />

                    <TextView
                        android:id="@+id/covertype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:textColorHint="#201717"
                        android:textSize="13sp"
                        android:text="floater"
                        android:fontFamily="@font/pop_reg"
                        android:layout_marginTop="8sp"

                        />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="15sp"
                        android:layout_marginEnd="15sp"
                        android:gravity="start"
                        android:padding="5sp"
                        android:background="#FAE6E4"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100sp"
                            android:layout_height="wrap_content"
                            android:text="  Topay :  "
                            android:textColor="#182425"
                            android:padding="8sp"
                            android:textSize="13sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="@font/pop_reg"
                            android:background="@drawable/card_back"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="18sp"
                                android:layout_height="18sp"
                                android:layout_gravity="center"
                                android:background="@drawable/rupee"
                                />

                            <TextView
                                android:id="@+id/to_pay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="0"
                                android:layout_marginEnd="10sp"
                                android:layout_marginStart="10sp"
                                android:textColor="#090101"
                                android:textSize="17sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/sum_lin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="15sp"
                        android:layout_marginEnd="15sp"
                        android:gravity="start"
                        android:padding="5sp"
                        android:background="#FAE6E4"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100sp"
                            android:layout_height="wrap_content"
                            android:text="Sum Insured : "
                            android:textColor="#182425"
                            android:padding="8sp"
                            android:textSize="13sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="@font/pop_reg"
                            android:background="@drawable/card_back"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="18sp"
                                android:layout_height="18sp"
                                android:layout_gravity="center"
                                android:background="@drawable/rupee"
                                />

                            <TextView
                                android:id="@+id/old_sum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="0"
                                android:layout_marginEnd="10sp"
                                android:layout_marginStart="10sp"
                                android:textColor="#090101"
                                android:textSize="17sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/pre_lin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="15sp"
                        android:layout_marginEnd="15sp"
                        android:gravity="start"
                        android:padding="5sp"
                        android:background="#F7FAD8"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100sp"
                            android:layout_height="wrap_content"
                            android:text="  Premium   (Incl GST) :  "
                            android:textColor="#182425"
                            android:padding="8sp"
                            android:textSize="13sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="@font/pop_reg"
                            android:background="@drawable/card_back"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="18sp"
                                android:layout_height="18sp"
                                android:layout_gravity="center"
                                android:background="@drawable/rupee"
                                />

                            <TextView
                                android:id="@+id/vol_pre"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="0"
                                android:layout_marginEnd="10sp"
                                android:layout_marginStart="10sp"
                                android:textColor="#090101"
                                android:textSize="17sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/hideall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"

                        android:gravity="center"

                        android:orientation="vertical">



                    <LinearLayout
                        android:id="@+id/sum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"
                        android:gravity="center"

                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"

                                android:hint="Select SumInsured"
                                android:padding="5sp"
                                android:textColorHint="#232083"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <RadioGroup
                                android:id="@+id/vol_rg"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/subject"
                                android:background="@drawable/card_back"
                                android:orientation="horizontal">

                            </RadioGroup>

                                <View
                                    android:layout_width="1sp"
                                    android:layout_height="100sp"
                                    android:layout_marginStart="5sp"
                                    android:layout_marginEnd="5sp"
                                    android:background="#939292"/>

                            <RadioGroup
                                android:id="@+id/vol_rg_rb"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/subject"
                                android:orientation="horizontal"
                                android:background="@drawable/card_back"
                              >


                            </RadioGroup>
                            </LinearLayout>
                        </LinearLayout>



                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_marginTop="2sp"
                        android:layout_marginBottom="2sp"
                        android:background="#969696" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginEnd="5sp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/subject"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.5"

                                    android:hint="Insurance deduction from"
                                    android:padding="5sp"
                                    android:textColorHint="#232083"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <RadioGroup
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10sp"
                                    android:layout_marginBottom="15sp"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/vol_wallet"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1.0"
                                        android:buttonTint="#09D812"
                                        android:fontFamily="@font/pop_reg"
                                        android:padding="5sp"
                                        android:layout_marginEnd="20sp"
                                        android:background="@drawable/light_blue_shadow"

                                        android:text=" Wallet "
                                        android:textColor="#F44336"
                                        android:textStyle="bold" />

                                    <RadioButton
                                        android:id="@+id/vol_payroll"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1.0"
                                        android:buttonTint="#09D812"
                                        android:fontFamily="@font/pop_reg"
                                        android:padding="5sp"
                                        android:background="@drawable/light_blue_shadow"

                                        android:text=" Payroll "
                                        android:textColor="#F44336"
                                        android:textStyle="bold"  />
                                </RadioGroup>

                                <!--  <TextView
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_weight="1.5"
                                      android:background="@drawable/btn_bac"
                                      android:hint="* To select Top-Up Cover first you have to enroll on base policy"
                                      android:padding="5sp"
                                      android:textColorHint="#E91E63"
                                      android:textSize="12sp"
                                      android:textStyle="bold" />-->

                            </LinearLayout>
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"

                            android:hint="Premium installment"
                            android:padding="5sp"
                            android:textColorHint="#232083"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <RadioGroup
                                android:id="@+id/premium_installment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/subject"
                                android:background="@drawable/card_back"
                                android:orientation="horizontal">

                            </RadioGroup>




                        </LinearLayout>



                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/hide"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"

                        android:layout_marginStart="5sp"
                        android:layout_marginEnd="5sp"
                        android:orientation="vertical">


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/groupCoverAdditionalInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1sp"
                            android:layout_marginTop="1sp"
                            tools:listitem="@layout/member_list_summary_view" />

                    </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5sp"
                            android:layout_marginLeft="5sp"
                            android:layout_marginEnd="5sp"
                            android:layout_weight="1.5"
                            android:hint=""
                            android:padding="5sp"
                            android:textColorHint="#ff3e6b"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/vol_btn_cancel"
                            android:layout_width="0dp"
                            android:layout_height="40sp"
                            android:layout_gravity="end"
                            android:layout_marginTop="5sp"
                            android:layout_marginEnd="15sp"
                            android:layout_marginRight="5sp"
                            android:layout_marginBottom="5sp"
                            android:layout_weight="1.0"
                            android:elevation="10sp"


                            android:background="@drawable/save_btn"
                            android:text="Submit"
                            android:textColor="#fff" />

                        <Button
                            android:id="@+id/vol_btn_cancel_reset"
                            android:layout_width="0dp"
                            android:layout_height="40sp"
                            android:layout_gravity="end"
                            android:layout_marginTop="5sp"
                            android:layout_marginEnd="5sp"
                            android:layout_marginRight="5sp"
                            android:layout_marginBottom="5sp"
                            android:layout_weight="1.0"
                            android:elevation="10sp"
                            android:background="@drawable/btn_cancle"
                            android:text="Reset"
                            android:textColor="#fff" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
