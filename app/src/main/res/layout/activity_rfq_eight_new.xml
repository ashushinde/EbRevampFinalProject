<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="#F2F3FD"
    android:orientation="vertical">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/arrorw_rfq"
                android:padding="3sp"
                android:elevation="25sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/info_text"
                    android:layout_width="150sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10sp"

                    android:src="@drawable/fyntune_logo"
                    android:text="Cashless Form Revised"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginTop="5sp"

                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_one_login"
                        android:layout_width="match_parent"
                        android:layout_height="250sp"
                        android:layout_centerHorizontal="true"
                        app:cardBackgroundColor="#fcfcfc"
                        app:cardCornerRadius="5dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5sp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10sp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/go_back"

                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/arrow_back"
                                    android:layout_marginEnd="5sp"
                                    tools:ignore="RtlCompat" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:gravity="start"

                                    android:fontFamily="@font/pop_reg"
                                    android:textStyle="bold"
                                    android:hint="customize plan"
                                    android:textColor="@android:color/black"
                                    android:textColorHint="@android:color/black"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10sp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10sp"
                                        android:text="Product Type"
                                        android:textColor="#8E8888"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="#0E0C0C"
                                        android:layout_marginStart="10sp"
                                        android:textStyle="bold"
                                        android:text="Fytnune" />

                                    <ImageView
                                      android:id="@+id/produt_type_id"
                                        android:layout_width="15sp"
                                        android:layout_height="15sp"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="5sp"
                                        android:src="@drawable/edit_icon"

                                        />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="#8E8888"
                                        android:layout_marginStart="10sp"
                                        android:textStyle="bold"
                                        android:text="Family Construct" />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        android:orientation="horizontal">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="14sp"
                                            android:textColor="#0E0C0C"
                                            android:layout_marginStart="10sp"
                                            android:textStyle="bold"
                                            android:text="Fytnune" />

                                        <ImageView
                                            android:id="@+id/family_construct_id"
                                            android:layout_width="15sp"
                                            android:layout_height="15sp"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="5sp"
                                            android:src="@drawable/edit_icon"

                                            />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10sp"
                                android:layout_marginTop="5sp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="#8E8888"
                                        android:layout_marginStart="10sp"
                                        android:textStyle="bold"
                                        android:text="Sum Insured" />
                                    <LinearLayout
                                        android:layout_marginStart="10sp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <ImageView

                                            android:layout_width="10sp"
                                            android:layout_height="20sp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/rupee"
                                            android:layout_marginEnd="2sp"
                                            />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="14sp"
                                            android:textColor="#0E0C0C"
                                            android:layout_marginStart="5sp"
                                            android:textStyle="bold"
                                            android:text="2 lac" />
                                        <ImageView
                                            android:id="@+id/sum_insured_id"
                                            android:layout_width="15sp"
                                            android:layout_height="15sp"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="5sp"
                                            android:src="@drawable/edit_icon"

                                            />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="#8E8888"
                                        android:layout_marginStart="10sp"
                                        android:textStyle="bold"
                                        android:text="Industry Type" />
                                    <Spinner

                                        android:id="@+id/age_group"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="#111010"
                                        android:fontFamily="@font/pop_reg" />

                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10sp"
                                android:layout_marginTop="5sp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10sp"
                                        android:text="Buying First Time"
                                        android:textColor="#8E8888"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="#0E0C0C"
                                        android:layout_marginStart="10sp"
                                        android:textStyle="bold"
                                        android:text="Fytnune" />

                                    <ImageView
                                        android:id="@+id/buying_id"
                                        android:layout_width="15sp"
                                        android:layout_height="15sp"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="5sp"
                                        android:src="@drawable/edit_icon"

                                        />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="#8E8888"
                                        android:layout_marginStart="10sp"
                                        android:textStyle="bold"
                                        android:text="Total Lives" />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="14sp"
                                            android:textColor="#0E0C0C"
                                            android:layout_marginStart="10sp"
                                            android:textStyle="bold"
                                            android:text="Fytnune" />

                                        <ImageView
                                            android:id="@+id/total_lives"
                                            android:layout_width="15sp"
                                            android:layout_height="15sp"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="5sp"
                                            android:src="@drawable/edit_icon"

                                            />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                        </LinearLayout>




                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="-35dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="15sp"
                    android:layout_below="@id/cv_one_login"
                    >


                    <Button
                        android:id="@+id/basic_cover"
                        android:layout_width="0dp"
                        android:layout_weight="1.0"
                        android:text="Insurance Wise"
                        android:textColor="#4CAF50"
                        android:layout_height="50dp"
                        android:layout_marginStart="8sp"
                        android:layout_marginEnd="8sp"
                        android:background="@drawable/card_select_border"
                        android:elevation="15dp" />
                    <Button
                        android:id="@+id/top_up"
                        android:layout_width="0dp"
                        android:layout_weight="1.0"
                        android:layout_height="50dp"
                        android:text="Variant Wise"
                        android:background="@drawable/card_select_wave"
                        android:elevation="15dp" />

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5sp"
                    android:padding="5sp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        app:cardBackgroundColor="#fcfcfc"
                        app:cardCornerRadius="5dp"
                        android:layout_marginStart="10sp"
                       android:layout_marginEnd="10sp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5sp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10sp"
                                android:text="Network Hospital"
                                android:textColor="#0E0C0C"
                                android:textSize="14sp"

                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1.5"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"

                                    android:layout_marginStart="10sp"

                                    android:textColor="#8E8888"
                                    android:text="Network hosptal allows you to avail cashless medical treatment" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_weight="1.5"
                                    android:layout_height="30sp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="5sp"
                                    android:src="@drawable/networkhos"

                                    />
                            </LinearLayout>
                        </LinearLayout>




                    </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        app:cardBackgroundColor="#fcfcfc"
                        app:cardCornerRadius="5dp"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5sp"
                            android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:padding="5sp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10sp"
                                    android:text="Schedule a Call Back"
                                    android:textColor="#0E0C0C"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/edit_back"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"

                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:layout_marginTop="2sp"
                                        android:layout_marginStart="10sp"
                                        android:background="@drawable/edit_back"
                                        android:textColor="#8E8888"
                                        android:textStyle="bold"
                                        android:text="+91" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_weight="1.5"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:layout_marginStart="10sp"
                                        android:background="@drawable/edit_back"
                                        android:textColor="#8E8888"
                                        android:textStyle="bold"
                                        android:text="8104270387" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_marginTop="5sp"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"

                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:padding="5sp"
                                        android:layout_marginStart="10sp"
                                        android:background="@drawable/btn_reg"
                                        android:textColor="#F3F3F3"
                                        android:text="Call me" />

                                    <TextView
                                        android:layout_width="wrap_content"

                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:layout_marginStart="10sp"

                                        android:textColor="#8E8888"
                                        android:text="or" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:padding="5sp"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:layout_marginStart="10sp"
                                        android:background="@drawable/btn_reg"
                                        android:textColor="#FFFFFF"
                                        android:text="Send Quotes" />
                                </LinearLayout>
                            </LinearLayout>




                        </LinearLayout>
                            <ImageView
                                android:layout_width="100sp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginStart="5sp"
                                android:src="@drawable/call_center"

                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <ImageView
                        android:id="@+id/basic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10sp"
                        android:visibility="gone"

                        android:src="@drawable/no_image"
                        android:text="Cashless Form Revised"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />
                    <ImageView
                        android:id="@+id/toup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10sp"
                        android:visibility="gone"
                        android:src="@drawable/no_image"
                        android:text="Cashless Form Revised"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <LinearLayout
                        android:id="@+id/edit_feature_list"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="15sp"
                        android:background="@drawable/edit_back_grey"
                        android:layout_marginEnd="15sp"
                        android:padding="5sp"
                        android:layout_below="@id/cv_one_login">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#FF9800"
                            android:layout_marginStart="10sp"
                            android:textStyle="bold"
                            android:text="View Features" />

                        <ImageView
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:layout_gravity="center"
                            android:layout_marginStart="10sp"
                            android:src="@drawable/arrow_next"
                            android:layout_marginEnd="2sp"
                            />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/core_recycle"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10sp"
                        android:layout_height="50sp"
                        tools:listitem="@layout/features_select_plan_list" />



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/top_recycle"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10sp"
                        android:layout_height="50sp"
                        tools:listitem="@layout/features_select_plan_list" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:background="@drawable/edit_back_grey"
                    android:padding="5sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/pop_reg"
                        android:textStyle="bold"
                        android:hint="Not happy with any of these plans? try creating your own plan here"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/black"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:id="@+id/next"

                        android:layout_width="wrap_content"

                        android:layout_height="45sp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10sp"

                        android:background="@drawable/btn_reg"
                        android:gravity="center"
                        android:transitionGroup="false"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pop_reg"
                            android:hint="   Customize this plans    "
                            android:textStyle="bold"
                            android:layout_marginStart="10sp"
                            android:textColor="#fff"
                            android:textColorHint="#fff"
                            android:textSize="16sp" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</ScrollView>
