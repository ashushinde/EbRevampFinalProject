<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:background="#00FFFFFF"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/credentials_card"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/edit_back_green"
        android:layout_marginStart="10sp"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="5sp"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/first_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5sp"
                        android:drawablePadding="10sp"
                        android:fontFamily="@font/pop_reg"
                        android:text="Deepashri"
                        android:textColor="#4CAF50"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/last_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5sp"
                        android:fontFamily="@font/pop_reg"
                        android:text="Kini"
                        android:textColor="#4CAF50"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="10sp"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:padding="2sp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.6"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:fontFamily="@font/pop_reg"
                        android:gravity="start"
                        android:text="RelationWith Employee :  "
                        android:textColor="#0d0905"
                        android:textSize="12sp"


                        />

                    <TextView
                        android:id="@+id/relation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1.0"
                        android:fontFamily="@font/pop_reg"
                        android:gravity="start"
                        android:text="Life Care"
                        android:textColor="#4B4B4B"
                        android:textSize="13sp"

                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="start"
                    android:visibility="gone"


                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:padding="5sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"
                            android:text="Gender :  "
                            android:textColor="#0d0905"
                            android:textSize="12sp"

                            />

                        <TextView
                            android:id="@+id/gender"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1.5"

                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"

                            android:text="Male"
                            android:textColor="#4B4B4B"
                            android:textSize="13sp"


                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5sp"


                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/bold"
                            android:gravity="center"
                            android:text="Date of Birth :  "
                            android:textColor="#0d0905"
                            android:textSize="13sp"

                            />

                        <TextView
                            android:id="@+id/dob"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1.5"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"
                            android:text="16-08-1993"
                            android:textColor="#4B4B4B"
                            android:textSize="13sp"


                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:padding="2sp"
                        android:orientation="vertical"



                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"
                            android:text="Age Type (Years / Days) :  "
                            android:textColor="#0d0905"
                            android:textSize="13sp"

                            />

                        <TextView
                            android:id="@+id/age_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"
                            android:text="Years"
                            android:textColor="#4B4B4B"
                            android:textSize="13sp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:padding="5sp"


                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"
                            android:text="Age :  "
                            android:textColor="#0d0905"
                            android:textSize="13sp"

                            />

                        <TextView
                            android:id="@+id/age"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1.5"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"
                            android:text="46"
                            android:textColor="#4B4B4B"
                            android:textSize="13sp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:orientation="vertical"


                        >

                        <LinearLayout
                            android:id="@+id/hidden"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5sp"
                            android:visibility="gone"
                            android:orientation="horizontal"




                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:fontFamily="@font/pop_reg"
                                android:gravity="start"

                                android:text="Family Cover :"
                                android:textColor="#9C27B0"
                                android:textSize="13sp" />


                            <ImageView
                                android:layout_width="10sp"
                                android:layout_height="10sp"
                                android:layout_gravity="center"
                                android:background="@drawable/rupee" />

                            <TextView
                                android:id="@+id/fam_cover"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:fontFamily="@font/pop_reg"
                                android:gravity="start"
                                android:text="46g4fdhfghfdghgg"
                                android:textColor="#9C27B0"
                                android:textSize="13sp"
                                android:textStyle="bold"

                                />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/prem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:gravity="start"
                            android:padding="5sp"
                            android:orientation="horizontal"



                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:fontFamily="@font/pop_reg"
                                android:gravity="end"
                                android:text="Premium :  "
                                android:textColor="#FF9800"
                                android:textSize="13sp"
                                android:textStyle="bold" />


                            <ImageView
                                android:layout_width="10sp"
                                android:layout_height="10sp"
                                android:layout_gravity="center"

                                android:background="@drawable/rupee" />

                            <TextView
                                android:id="@+id/premium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:fontFamily="@font/pop_reg"
                                android:gravity="start"
                                android:text="5000"

                                android:textColor="#FF9800"
                                android:textSize="13sp"
                                android:textStyle="bold"

                                />

                            <TextView
                                android:id="@+id/pr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:fontFamily="@font/regular"
                                android:gravity="start"
                                android:text=" /-"
                                android:textColor="#FF9800"
                                android:textSize="12sp"
                                android:textStyle="bold"

                                />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"
                        android:gravity="end"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/delete"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_gravity="center"
                            android:layout_marginStart="1sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginEnd="5sp"
                            android:gravity="center"
                            android:padding="5sp"
                            android:src="@drawable/enroll_delete" />

                        <ImageView
                            android:id="@+id/edit"
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="1sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginEnd="5sp"
                            android:gravity="center"
                            android:padding="5sp"
                            android:src="@drawable/enroll_edit" />


                        <ImageView
                            android:id="@+id/download"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_gravity="center"
                            android:layout_marginStart="1sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginEnd="5sp"
                            android:gravity="center"
                            android:padding="5sp"
                            android:src="@drawable/enroll_download" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="10sp"
        android:gravity="end"
        android:background="@drawable/btn_reg"
        android:layout_marginStart="150sp"
        app:layout_constraintBottom_toBottomOf="@+id/credentials_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/credentials_card"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/know"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/pop_reg"
            android:gravity="start"
            android:text="View More"
            android:layout_marginStart="8sp"

            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"

            />

        <ImageView
            android:id="@+id/expand"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_gravity="center"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"

            android:layout_marginEnd="5sp"
            android:background="@drawable/circle_more"
            android:gravity="center"
            android:padding="5sp"
            android:src="@drawable/ic_add_black_24dp" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>