<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F3FD"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:background="@drawable/nav_back"
                        android:layout_height="150sp">

                        <TextView
                            android:id="@+id/frogm"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pop_reg"
                            android:text="Any Update"
                            android:textColor="#FDFDFD"
                            android:layout_marginTop="30sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="18sp" />
                    </LinearLayout>




                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="30sp"
                        android:layout_marginTop="20sp"
                        android:layout_marginStart="12sp"
                        android:layout_marginEnd="12sp"
                        android:layout_marginBottom="35sp"
                        app:cardElevation="22sp"


                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="6sp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/insurance_cover"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5sp"
                                android:text="Insurance"
                                android:textSize="11sp"

                                android:fontFamily="@font/pop_reg"
                                android:textColor="#FFFFFF"
                                android:padding="10sp"
                                android:textStyle="bold"
                                android:background="@drawable/nav_back_tab"/>




                            <Button
                                android:id="@+id/group_cover"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5sp"
                                android:text="Wellness"
                                android:textSize="11sp"
                                android:fontFamily="@font/pop_reg"
                                android:textColor="#0E0B0B"
                                android:visibility="gone"
                                android:padding="10sp"
                                android:textStyle="bold"
                                android:background="@drawable/tab_curve"
                                />


                            <Button
                                android:id="@+id/voluntary_cover"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5sp"
                                android:text="Flex Summary"
                                android:textStyle="bold"
                                android:padding="10sp"
                                android:textSize="11sp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/pop_reg"
                                android:textColor="#0E0C0C"
                                android:background="@drawable/tab_curve"
                                />
                            <Button
                                android:id="@+id/cover"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5sp"
                                android:text="Buy Insurance Cover"
                                android:textStyle="bold"
                                android:textSize="11sp"
                                android:visibility="gone"
                                android:padding="6sp"
                                android:fontFamily="@font/pop_reg"
                                android:textColor="#0E0C0C"
                                android:background="@drawable/tab_curve"
                                />


                        </LinearLayout>




                    </androidx.cardview.widget.CardView>




                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">



                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/ghi_recycle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:layout_marginStart="10sp"
                                android:layout_marginEnd="10sp"
                                android:visibility="gone"


                                tools:listitem="@layout/flex_list"

                                />


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/insurance_recycle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5sp"

                                tools:listitem="@layout/in_flex_list"
                                android:layout_below="@+id/cards"

                                />

                            <LinearLayout
                                android:id="@+id/my_flex_summary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"

                                android:orientation="vertical">

                                <ScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#F2F3FD"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="#F2F3FD"
                                        android:orientation="vertical">
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <LinearLayout

                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">



                                                <LinearLayout
                                                    android:id="@+id/summary"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"

                                                    android:orientation="vertical">



                                                    <LinearLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:padding="7sp"
                                                        android:layout_gravity="center"
                                                        android:gravity="center"

                                                        android:orientation="vertical">

                                                        <LinearLayout
                                                            android:id="@+id/hide_data"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:layout_gravity="center"
                                                            android:gravity="center"



                                                            android:orientation="vertical">

                                                            <LinearLayout
                                                                android:layout_width="match_parent"
                                                                android:layout_height="wrap_content"
                                                                android:layout_gravity="center"
                                                                android:gravity="center"
                                                                android:layout_marginTop="10sp"


                                                                android:orientation="horizontal">
                                                                <TextView
                                                                    android:layout_width="wrap_content"
                                                                    android:layout_height="wrap_content"
                                                                    android:text="Premium To Pay :"
                                                                    android:textSize="13sp"
                                                                    android:textColor="@color/solid_black"
                                                                    android:textStyle="bold"
                                                                    android:fontFamily="@font/pop_reg"
                                                                    >
                                                                </TextView>
                                                                <ImageView

                                                                    android:layout_width="23dp"
                                                                    android:layout_height="23dp"
                                                                    android:padding="5sp"
                                                                    android:src="@drawable/rupee"
                                                                    android:layout_gravity="center"
                                                                    />
                                                                <TextView
                                                                    android:id="@+id/premium"
                                                                    android:layout_width="wrap_content"
                                                                    android:layout_height="wrap_content"
                                                                    android:text="0000"
                                                                    android:textSize="13sp"
                                                                    android:textColor="@color/solid_black"
                                                                    android:textStyle="bold"
                                                                    android:fontFamily="@font/pop_reg"
                                                                    >
                                                                </TextView>
                                                                <TextView
                                                                    android:layout_width="wrap_content"
                                                                    android:layout_height="wrap_content"
                                                                    android:text=" in"
                                                                    android:textSize="13sp"
                                                                    android:textColor="@color/solid_black"
                                                                    android:textStyle="bold"

                                                                    android:fontFamily="@font/pop_reg"
                                                                    >
                                                                </TextView>
                                                            </LinearLayout>

                                                            <LinearLayout
                                                                android:layout_width="match_parent"
                                                                android:layout_height="wrap_content"
                                                                android:layout_gravity="center"
                                                                android:gravity="center"
                                                                android:layout_marginBottom="10sp"
                                                                android:orientation="horizontal">
                                                                <TextView
                                                                    android:id="@+id/month"
                                                                    android:layout_width="wrap_content"
                                                                    android:layout_height="wrap_content"
                                                                    android:text=""
                                                                    android:textSize="13sp"
                                                                    android:textColor="@color/solid_black"
                                                                    android:textStyle="bold"
                                                                    android:fontFamily="@font/pop_reg"
                                                                    >
                                                                </TextView>

                                                                <TextView
                                                                    android:id="@+id/month_hide"
                                                                    android:layout_width="wrap_content"
                                                                    android:layout_height="wrap_content"
                                                                    android:text=" months installment"
                                                                    android:textSize="13sp"
                                                                    android:textColor="@color/solid_black"
                                                                    android:textStyle="bold"
                                                                    android:fontFamily="@font/pop_reg">
                                                                </TextView>

                                                                <TextView
                                                                    android:layout_width="wrap_content"
                                                                    android:layout_height="wrap_content"
                                                                    android:text="(Incl GST) "
                                                                    android:textSize="13sp"
                                                                    android:textColor="@color/solid_black"
                                                                    android:textStyle="bold"
                                                                    android:fontFamily="@font/pop_reg">
                                                                </TextView>

                                                            </LinearLayout>
                                                        </LinearLayout>

                                                        <androidx.recyclerview.widget.RecyclerView
                                                            android:id="@+id/policy_cycle_term"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginBottom="1sp"
                                                            android:layout_marginTop="2sp"
                                                            tools:listitem="@layout/policy_list_summary" />




                                                    </LinearLayout>


                                                </LinearLayout>
                                            </LinearLayout>
                                        </LinearLayout>
                                    </LinearLayout>
                                </ScrollView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <ImageView
                                    android:id="@+id/info_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="10sp"
                                    android:layout_marginLeft="10sp"
                                    android:layout_marginTop="10sp"
                                    android:padding="5sp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/no_image"
                                    android:visibility="gone"
                                    android:textColor="#fff"
                                    android:textStyle="bold" />
                            </LinearLayout>


                        </LinearLayout>

                    </ScrollView>



                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>