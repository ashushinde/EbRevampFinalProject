<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="end"
        android:padding="8sp"
        android:layout_marginTop="3sp"
        android:orientation="horizontal">

        <View
            android:layout_width="6sp"
            android:layout_height="15sp"
            android:layout_gravity="center"
            android:layout_marginStart="5sp"
            android:background="#ff8a84"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:text="TPA"
            android:layout_marginStart="10sp"
            android:textColor="#160BAE"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:text="TMIBSAL"
            android:layout_marginStart="10sp"
            android:textColor="#160BAE"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contactUsItemLinearLayout_broker"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginEnd="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:orientation="vertical"
        android:background="@drawable/level1"
        android:padding="20dp">
    <TextView
        android:id="@+id/contactUsItemLevel_broker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:fontFamily="@font/pop_reg"
        android:text="Level - 1"
        android:visibility="gone"
        android:textColor="#75a9f9" />



    <TextView
        android:id="@+id/broker_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bold"
        android:text="Name"
        android:textColor="#aa671d" />

    <TextView
        android:id="@+id/name_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/pop_reg"
        android:text="Joker"
        android:textColor="#000" />

    <TextView
        android:id="@+id/broker_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bold"
        android:text="Contact Number"
        android:textColor="#aa671d" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/contact_broker_a"
            android:layout_width="wrap_content"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/pop_reg"
            android:text="9920765572"
            android:textColor="#000" />






    </LinearLayout>

    <TextView
        android:id="@+id/broker_email_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bold"
        android:text="Email - Id"
        android:textColor="#aa671d" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/email_broker_a"
            android:layout_width="wrap_content"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/pop_reg"
            android:text="abcd@gmail.com"
            android:textColor="#000" />





    </LinearLayout>

    <TextView
        android:id="@+id/broker_add_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bold"
        android:text="Address  "
        android:textColor="#aa671d" />

    <TextView
        android:id="@+id/address_broker_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/pop_reg"
        android:text="Tata Motors Insurance Broking Marol Maroshi Road,"
        android:textColor="#000" />

    </LinearLayout>

</LinearLayout>
