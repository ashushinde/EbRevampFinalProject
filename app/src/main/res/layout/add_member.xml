<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    android:background="#F2F3FD"
    app:cardCornerRadius="10sp"
    app:cardElevation="5sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F3FD"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:background="@drawable/btn_light"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:gravity="center"
                android:hint="ADD member data"
                android:padding="5sp"
                android:textColorHint="#0E1113"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ab"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginTop="3sp"
                android:layout_marginEnd="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginBottom="3sp"
                android:background="@drawable/box_shadow"
                android:padding="5sp"
                android:paddingStart="5sp"
                android:paddingEnd="5sp"
                android:src="@drawable/ic_close_black_24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5sp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:orientation="horizontal"
                    android:padding="5sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="3sp"
                        android:fontFamily="@font/pop_reg"
                        android:hint="Designation"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/black"
                        android:textSize="12sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1sp"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="1.0"
                        android:fontFamily="@font/bold"
                        android:textColor="#B61919"
                        android:hint="*"
                        android:textColorHint="#B61919"
                        android:textSize="14sp" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/edit_back_grey"

                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/industry_type"
                        android:layout_width="match_parent"
                        android:layout_height="42sp"

                        android:backgroundTint="#111010"
                        android:fontFamily="@font/pop_reg" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10sp"

                android:padding="5sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:orientation="horizontal"
                    android:padding="5sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3sp"
                        android:fontFamily="@font/pop_reg"
                        android:hint="Member Name"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1sp"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="1.0"
                        android:fontFamily="@font/bold"
                        android:textColor="#B61919"
                        android:inputType="text"
                        android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                        android:textColorHint="#B61919"
                        android:hint="*"
                        android:textSize="14sp" />
                </LinearLayout>



                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Name"

                    android:background="@drawable/edit_back_grey"
                    android:inputType="text"
                    android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                    android:padding="10sp"
                    android:singleLine="true"
                    android:maxLength="50"
                    android:ems="50"
                    android:minEms="50"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10sp"

                android:padding="5sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:orientation="horizontal"
                    android:padding="5sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3sp"
                        android:fontFamily="@font/pop_reg"
                        android:hint="Email Id"

                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1sp"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="1.0"
                        android:fontFamily="@font/bold"
                        android:hint="*"
                        android:textColor="#B61919"
                        android:textColorHint="#B61919"
                        android:textSize="14sp" />
                </LinearLayout>



                <EditText
                    android:id="@+id/email_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter email id"
                    android:inputType="textPersonName"
                    android:background="@drawable/edit_back_grey"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz._@1234567890 "
                    android:padding="10sp"
                    android:singleLine="true"
                    android:maxLength="50"
                    android:ems="50"
                    android:minEms="50"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10sp"

                android:padding="5sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:orientation="horizontal"
                    android:padding="5sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3sp"
                        android:fontFamily="@font/pop_reg"
                        android:hint="Contact No."
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1sp"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="1.0"
                        android:fontFamily="@font/bold"
                        android:textColor="#B61919"
                        android:textColorHint="#B61919"
                        android:hint="*"
                        android:textSize="14sp" />
                </LinearLayout>



                <EditText
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter contact no."

                    android:inputType="textPersonName"
                    android:background="@drawable/edit_back_grey"

                    android:padding="10sp"
                    android:singleLine="true"
                    android:maxLength="50"
                    android:ems="10"
                    android:minEms="10"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="13sp" />
            </LinearLayout>







        </LinearLayout>

        <LinearLayout
            android:id="@+id/sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10sp"
            android:visibility="gone"
            android:background="@drawable/edit_back_grey"
            android:padding="5sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:orientation="horizontal"
                android:padding="5sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3sp"
                    android:fontFamily="@font/pop_reg"
                    android:hint="Sum Insured"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1sp"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1.0"
                    android:fontFamily="@font/bold"
                    android:textColor="#B61919"
                    android:textColorHint="#B61919"
                    android:hint="*"
                    android:textSize="14sp" />
            </LinearLayout>



            <EditText
                android:id="@+id/sum_insured"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter sum insured"
                android:inputType="number"
                android:background="@drawable/edit_back"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz._@1234567890 "
                android:padding="5sp"
                android:singleLine="true"
                android:maxLength="50"
                android:ems="50"
                android:minEms="50"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="13sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_policy"
                android:layout_width="150sp"
                android:layout_height="32sp"
                android:layout_gravity="center"
                android:layout_marginStart="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/btn_cancle"
                android:gravity="center"
                android:text="Cancle"
                android:textColor="#fff"
                />


            <Button
                android:id="@+id/send"
                android:layout_width="150sp"
                android:layout_height="32sp"
                android:layout_gravity="center"
                android:layout_marginStart="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/btn_reg"
                android:gravity="center"
                android:text="Save"
                android:textColor="#fff"
                />

        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>


