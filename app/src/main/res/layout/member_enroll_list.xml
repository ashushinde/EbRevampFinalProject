<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginStart="15sp"
    android:layout_marginTop="10sp"
    android:layout_marginEnd="5sp"
    android:layout_marginBottom="10sp"
    android:background="@drawable/card_back"
    android:orientation="vertical"


    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"



        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_gravity="center"


                android:layout_marginStart="10sp"
                />
            <TextView
                android:id="@+id/relation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/flex_butoon"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:layout_marginStart="15sp"


                android:text="Mother-in-low"
                android:textColor="#FF367C"
                android:textSize="12sp"
                />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/annual"
        android:layout_marginBottom="5sp"
        android:layout_width="wrap_content"
        android:layout_marginStart="10sp"
        android:visibility="gone"



        android:orientation="vertical"
        android:layout_marginTop="10sp"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Annul Premium"
            android:textColorHint="#6A6A6A"
            android:textStyle="bold"

            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/an_premium"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Rs. 11,2900"
            android:textColorHint="#6A6A6A"
            android:textStyle="bold"

            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="12sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5sp"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/delete"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_marginStart="1sp"
            android:layout_marginLeft="10sp"
            android:layout_marginEnd="5sp"
            android:gravity="center"
            android:padding="5sp"
            android:src="@drawable/dark_delete" />

        <ImageView
            android:id="@+id/edit"
            android:layout_width="40sp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="1sp"
            android:layout_marginLeft="10sp"
            android:layout_marginEnd="5sp"
            android:gravity="center"
            android:padding="5sp"
            android:src="@drawable/edit" />


        <ImageView
            android:id="@+id/download"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_marginStart="1sp"
            android:layout_marginLeft="10sp"
            android:layout_marginEnd="5sp"
            android:gravity="center"
            android:padding="5sp"
            android:visibility="gone"
            android:src="@drawable/doc" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="5sp"
        android:background="@drawable/btn_cancle"
        android:padding="5sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/know"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/regular"
            android:gravity="center"
            android:text="View Detail"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:textStyle="bold"

            />

        <ImageView
            android:id="@+id/expand"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_gravity="center"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:visibility="gone"
            android:layout_marginEnd="5sp"
            android:background="@drawable/circle_more"
            android:gravity="center"
            android:padding="5sp"
            android:src="@drawable/ic_add_black_24dp" />

    </LinearLayout>




</LinearLayout>