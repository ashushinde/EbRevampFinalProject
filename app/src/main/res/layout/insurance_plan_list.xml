<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="2sp"


    android:padding="2dp">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        >
        <FrameLayout
            android:layout_marginTop="15sp"
            android:layout_width="match_parent"
            android:background="#00FFFFFF"
            android:layout_height="wrap_content">



            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10sp"
                app:cardBackgroundColor="#FFFFFF"

                android:layout_margin="10sp"
                app:cardElevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5sp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8sp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/flex_name"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="Group Mediclaim"
                                android:layout_marginStart="10sp"
                                android:layout_gravity="center"
                                android:textColor="#6334E3"
                                android:textStyle="bold"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/s_logo"
                                android:layout_width="50sp"
                                android:layout_height="50sp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_arrow"
                                android:src="@drawable/carr"/>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="Plan Name :"
                                android:textColor="#0A0909"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/plan_name"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="Silver"
                                android:textColor="#0A0909"

                                android:textSize="12sp" />






                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/sum_lin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="Sum Insured :"
                                android:textColor="#0A0909"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/sum_insured"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="Silver"
                                android:textColor="#0A0909"

                                android:textSize="12sp" />






                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/pre_lin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="Premium :"
                                android:textColor="#0A0909"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/premium"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="500"
                                android:textColor="#0A0909"

                                android:textSize="12sp" />






                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:background="@drawable/edit_back"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1.5"

                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="Total Employee "
                                android:textColor="#0A0909"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/total_emp"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="50"
                                android:textColor="#0A0909"

                                android:textSize="12sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="1sp"
                                android:layout_height="50sp"
                                android:background="#120404"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"

                                android:gravity="center"
                                android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="Total Lives :"
                                android:textColor="#0A0909"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/total_lives"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="50"
                                android:textColor="#0A0909"

                                android:textSize="12sp" />
                            </LinearLayout>
                            <View
                                android:layout_width="1sp"
                                android:layout_height="50sp"
                                android:background="#120404"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"

                                android:gravity="center"
                                android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="Dependant Lives :"
                                android:textColor="#0A0909"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/dependant_lives"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="50"
                                android:textColor="#0A0909"

                                android:textSize="12sp" />
                            </LinearLayout>




                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:elevation="20sp"
                        android:layout_marginBottom="10sp"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:layout_marginStart="10sp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_gravity="end"
                                android:gravity="end"

                                android:background="@drawable/flex_butoon"

                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pop_reg"
                                    android:textColor="#0C0B0B"
                                    android:text="  Amount - "
                                    android:textStyle="bold"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textSize="12sp" />
                                <TextView
                                    android:id="@+id/final_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pop_reg"
                                    android:textColor="#0C0B0B"
                                    android:text="100"
                                    android:layout_marginEnd="34sp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>



                        <TextView
                            android:id="@+id/allocate"
                            android:layout_width="100sp"
                            android:layout_height="45sp"
                            android:fontFamily="@font/pop_reg"
                            android:textColor="#0F0A0A"
                            android:padding="5sp"
                            android:text="Buy"
                            android:background="@drawable/green_light"
                            android:elevation="10sp"
                            android:layout_marginBottom="15sp"
                            android:textStyle="bold"
                            android:layout_gravity="end"
                            android:layout_marginEnd="10sp"
                            android:gravity="center"
                            android:textSize="12sp" />

                    </LinearLayout>



                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </FrameLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:background="@drawable/nav_back"
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_marginStart="3sp"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/pop_reg"
                android:textSize="12sp"
                android:padding="5sp"
                android:text="Status :"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/pop_reg"
                android:textSize="12sp"
                android:padding="5sp"
                android:text="Won"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                />

        </LinearLayout>
    </FrameLayout>
</RelativeLayout>


