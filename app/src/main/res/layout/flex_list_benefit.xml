<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00EEEEEE"

    android:padding="2dp">


        <LinearLayout
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:layout_margin="8sp"
            android:elevation="5sp"
            android:background="@drawable/edit_back_green"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/flex_name"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pop_reg"
                        android:text="Asawari Shinde"
                        android:layout_gravity="center"
                        android:textColor="#18811B"
                        android:textStyle="bold"
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:padding="2sp"
                    android:orientation="vertical">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.0"

                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pop_reg"
                            android:text="Final Amount  : "
                            android:textColor="#0A0909"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:padding="2sp"
                            android:orientation="horizontal">

                            <ImageView

                                android:layout_width="20sp"
                                android:layout_height="10sp"
                                android:layout_gravity="center"
                                android:src="@drawable/rupee"/>
                            <TextView
                                android:id="@+id/final_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/pop_reg"
                                android:textColor="#ff5d55"
                                android:text="1500"
                                android:textStyle="bold"
                                android:textSize="11sp" />
                        </LinearLayout>



                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pop_reg"
                            android:text="Deduction Type  : "
                            android:textColor="#0A0909"
                            android:textSize="12sp" />


                        <TextView
                            android:id="@+id/deduction_type"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/pop_reg"
                            android:textColor="#ff5d55"
                            android:text="Payroll"
                            android:textStyle="bold"
                            android:textSize="11sp" />



                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



</RelativeLayout>


