<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10sp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/info_text"
                        android:layout_width="50sp"
                        android:layout_height="40sp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10sp"
                        android:padding="5sp"
                        android:src="@drawable/back_button"
                        android:text="Cashless Form Revised"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />
                    <TextView
                        android:id="@+id/thumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/bold"
                        android:text="Edit Nominee"
                        android:textColor="#8F4DFA"
                        android:textSize="20sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:padding="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/policy_type_spin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Policy Type"
                        android:gravity="center"
                        android:drawablePadding="10sp"
                        android:layout_marginTop="30sp"
                        android:visibility="gone"

                        android:textColorHint="@android:color/black"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:layout_marginTop="8sp"
                        android:visibility="gone"
                        android:background="@drawable/box_cor"
                        android:orientation="horizontal">
                        <Spinner
                            android:id="@+id/policy_type"
                            android:layout_width="match_parent"
                            android:layout_height="33sp"
                            android:backgroundTint="#d11f08"
                            />

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:padding="5sp"
                            android:background="@drawable/edit_back"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Relation With Employee"
                                android:drawablePadding="10sp"
                                android:gravity="center"
                                android:fontFamily="@font/bold"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:layout_marginStart="10sp"
                                android:textColorHint="@android:color/black"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5sp"
                                android:layout_marginTop="8sp"

                                android:orientation="horizontal">



                                <Spinner
                                    android:id="@+id/relation_type_spin"
                                    android:layout_width="match_parent"
                                    android:layout_height="42sp"
                                    android:layout_marginStart="5sp"
                                    android:backgroundTint="#2C2B2A"
                                    tools:ignore="RtlCompat" />


                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:padding="5sp"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/edit_back"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="First Name"
                                android:singleLine="true"
                                android:layout_marginTop="5sp"
                                android:gravity="center"
                                android:fontFamily="@font/bold"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:layout_marginStart="10sp"
                                android:drawablePadding="10sp"
                                android:textColorHint="@android:color/black"
                                />
                            <EditText
                                android:id="@+id/first_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:padding="10sp"
                                android:hint="First Name"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"

                                android:backgroundTint="#fff"
                                android:singleLine="true"
                                android:textSize="13sp"
                                android:fontFamily="@font/bold"
                                android:textColor="#7C7C7C"

                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:padding="5sp"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/edit_back"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Last Name"
                                android:singleLine="true"
                                android:layout_marginTop="5sp"
                                android:drawablePadding="10sp"
                                android:gravity="center"
                                android:fontFamily="@font/bold"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:layout_marginStart="10sp"
                                android:textColorHint="@android:color/black"
                                />

                            <EditText
                                android:id="@+id/last_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                                android:padding="10sp"
                                android:hint="Last Name"
                                android:backgroundTint="#fff"
                                android:fontFamily="@font/bold"
                                android:singleLine="true"
                                android:textSize="13sp"
                                android:inputType="textPersonName"
                                android:textColor="#7C7C7C"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:padding="5sp"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/edit_back"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Date of Birth"
                                android:singleLine="true"
                                android:layout_marginTop="5sp"
                                android:drawablePadding="10sp"
                                android:gravity="center"
                                android:fontFamily="@font/bold"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:layout_marginStart="10sp"
                                android:textColorHint="@android:color/black"
                                />

                            <EditText
                                android:id="@+id/dob"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:padding="10sp"
                                android:drawableEnd="@drawable/datedata"
                                android:drawablePadding="10sp"
                                android:hint="Date of Birth"
                                android:backgroundTint="#fff"
                                android:fontFamily="@font/bold"
                                android:singleLine="true"
                                android:focusableInTouchMode="false"
                                android:ems="10"
                                android:textSize="13sp"
                                android:inputType="date"
                                android:textColor="#7C7C7C"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:padding="5sp"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/edit_back"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:drawablePadding="10sp"
                                android:hint="Share %"
                                android:singleLine="true"
                                android:gravity="center"
                                android:fontFamily="@font/bold"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:layout_marginStart="10sp"
                                android:textColorHint="@android:color/black" />

                            <EditText
                                android:id="@+id/share"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:ems="10"
                                android:inputType="number"
                                android:backgroundTint="#fff"
                                android:focusableInTouchMode="false"
                                android:padding="10sp"
                                android:hint="enter Share in percent"
                                android:singleLine="true"
                                android:fontFamily="@font/bold"
                                android:textSize="13sp"
                                android:textColor="#7C7C7C"
                                />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/guar_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10sp"


                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="10sp"
                            android:drawablePadding="10sp"
                            android:gravity="center"
                            android:hint="Guardian Details"
                            android:singleLine="true"
                            android:textColorHint="#6e1f1f"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:padding="5sp"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/edit_back"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10sp"
                                android:drawablePadding="10sp"
                                android:hint="Relation With Nominee"
                                android:singleLine="true"
                                android:gravity="center"
                                android:fontFamily="@font/bold"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:layout_marginStart="10sp"
                                android:textColorHint="@android:color/black" />


                            <Spinner
                                android:id="@+id/relation_nominee"
                                android:layout_width="match_parent"
                                android:layout_height="42sp"
                                android:layout_marginStart="5sp"
                                android:backgroundTint="#2C2B2A"
                                tools:ignore="RtlCompat" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:padding="5sp"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/edit_back"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="First Name"
                                android:singleLine="true"
                                android:layout_marginTop="10sp"
                                android:gravity="center"
                                android:drawablePadding="10sp"
                                android:fontFamily="@font/bold"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:layout_marginStart="10sp"
                                android:textColorHint="@android:color/black"
                                />
                            <EditText
                                android:id="@+id/first_namen"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:padding="10sp"
                                android:hint="Name"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                                android:backgroundTint="#fff"
                                android:singleLine="true"
                                android:textSize="13sp"
                                android:fontFamily="@font/bold"
                                android:textColor="#7C7C7C"
                                />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:padding="5sp"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/edit_back"

                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Last Name"
                                android:singleLine="true"
                                android:layout_marginTop="10sp"
                                android:fontFamily="@font/bold"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:layout_marginStart="10sp"
                                android:drawablePadding="10sp"
                                android:gravity="center"
                                android:textColorHint="@android:color/black"
                                />

                            <EditText
                                android:id="@+id/last_namen"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:padding="10sp"
                                android:hint="Last Name"
                                android:singleLine="true"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                                android:backgroundTint="#fff"

                                android:textStyle="bold"


                                android:textSize="13sp"
                                android:fontFamily="@font/bold"
                                android:textColor="#7C7C7C"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:padding="5sp"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/edit_back"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Date of Birth (DD-MM-YYYY)"
                                android:singleLine="true"
                                android:layout_marginTop="10sp"
                                android:drawablePadding="10sp"
                                android:gravity="center"
                                android:fontFamily="@font/bold"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:layout_marginStart="10sp"
                                android:textColorHint="@android:color/black"
                                />

                            <EditText
                                android:id="@+id/dobn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:padding="10sp"
                                android:hint="Date of Birth"

                                android:singleLine="true"
                                android:drawableEnd="@drawable/datedata"
                                android:drawablePadding="10sp"
android:focusableInTouchMode="false"
                                android:ems="10"
                                android:backgroundTint="#fff"

                                android:textSize="13sp"
                                android:fontFamily="@font/bold"
                                android:textColor="#7C7C7C"
                                />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:orientation="horizontal">






        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_gravity="end"
            android:gravity="end"
            android:padding="5sp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/hos_add_button"
                android:layout_width="100sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:layout_marginStart="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/btn_cancle"
                android:gravity="center"
                android:text="Save"
                android:textColor="#fff" />





            <TextView
                android:id="@+id/send"
                android:layout_width="100sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:layout_marginStart="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:visibility="gone"
                android:background="@drawable/btn_cancle"
                android:gravity="center"
                android:text="Save"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/view_data"
                android:layout_width="100sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:layout_marginStart="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:visibility="gone"
                android:background="@drawable/btn_reg"
                android:gravity="center"
                android:text="View"
                android:textColor="#fff" />






        </LinearLayout>

    </LinearLayout>

</ScrollView>