<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ECECEC"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_back"

        android:layout_margin="10sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.9"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:gravity="start"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/s_logo"
                                android:layout_width="match_parent"
                                android:layout_height="70sp"
                                android:layout_marginBottom="2sp"
                                android:layout_marginTop="2sp"
                                android:layout_marginStart="2sp"
                                android:layout_marginEnd="2sp"

                                android:layout_gravity="center"
                                android:src="@drawable/sodexo_flex"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.8"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"

                            android:gravity="end"

                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/frogm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="Group Mediclaim"
                                android:textColor="#0C0505"
                                android:padding="5sp"
                                android:background="#FAE105"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textSize="13sp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5sp"
                    android:orientation="horizontal">




                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:layout_marginStart="2sp"
                        android:background="@drawable/new_card_yellow"
                        android:layout_height="wrap_content"
                        android:padding="2sp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5sp"

                            android:orientation="horizontal">
                            <LinearLayout
                                android:id="@+id/opd"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pop_reg"
                                    android:text="OPD Sum Insured "
                                    android:textColor="#0A0909"
                                    android:textSize="12sp" />
                                <LinearLayout
                                    android:padding="2sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView

                                        android:layout_width="20sp"
                                        android:layout_height="10sp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/rupee"/>
                                    <TextView
                                        android:id="@+id/opd_cover"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginLeft="5dp"
                                        android:fontFamily="@font/pop_reg"
                                        android:textColor="#ff5d55"
                                        android:text="1500"
                                        android:textStyle="bold"
                                        android:textSize="11sp" />
                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/pre"
                                android:layout_width="0dp"
                                android:layout_weight="1.0"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:gravity="start"

                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pop_reg"
                                    android:text="Premium"
                                    android:textColor="#0A0909"
                                    android:textSize="12sp" />
                                <LinearLayout
                                    android:padding="2sp"
                                    android:layout_gravity="start"
                                    android:gravity="start"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView

                                        android:layout_width="20sp"
                                        android:layout_height="10sp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/rupee"/>

                                    <TextView
                                        android:id="@+id/premium_data"
                                        android:layout_width="wrap_content"
                                        android:layout_height="24dp"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginLeft="5dp"
                                        android:fontFamily="@font/pop_reg"
                                        android:text="1500"
                                        android:textColor="#ff5d55"
                                        android:textSize="11sp"
                                        android:textStyle="bold" />
                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>



                        <LinearLayout
                            android:id="@+id/balance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2sp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="IPD Cover Balance  : "
                                android:textColor="#0A0909"
                                android:textSize="12sp" />
                            <LinearLayout
                                android:padding="2sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView

                                    android:layout_width="20sp"
                                    android:layout_height="10sp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/rupee"/>
                                <TextView
                                    android:id="@+id/premium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:fontFamily="@font/pop_reg"
                                    android:textColor="#ff5d55"
                                    android:text="1500"
                                    android:textStyle="bold"
                                    android:textSize="11sp" />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cove_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2sp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/enhance_head"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="IPD Sum Insured  : "
                                android:textColor="#0A0909"
                                android:textSize="12sp" />
                            <LinearLayout
                                android:padding="2sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView

                                    android:layout_width="20sp"
                                    android:layout_height="10sp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/rupee"/>
                                <TextView
                                    android:id="@+id/covera"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:fontFamily="@font/pop_reg"
                                    android:textColor="#ff5d55"
                                    android:text="1500"
                                    android:textStyle="bold"
                                    android:textSize="11sp" />


                                <LinearLayout
                                    android:id="@+id/enhance_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView

                                        android:layout_width="20sp"
                                        android:layout_height="10sp"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="5sp"
                                        android:src="@drawable/plus_add"/>
                                <ImageView

                                    android:layout_width="20sp"
                                    android:layout_height="10sp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="5sp"
                                    android:src="@drawable/rupee"/>
                                <TextView
                                    android:id="@+id/enhance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:fontFamily="@font/pop_reg"
                                    android:text="1500"
                                    android:textColor="#ff5d55"
                                    android:textSize="11sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                            </LinearLayout>




                        </LinearLayout>



                    </LinearLayout>

                    <ImageView
                        android:id="@+id/two_five"
                        android:layout_width="50dp"
                        android:layout_height="50sp"
                        android:padding="5sp"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:src="@drawable/twofive"/>
                    <ImageView
                        android:id="@+id/one_four"
                        android:layout_width="50dp"
                        android:layout_height="50sp"
                        android:padding="5sp"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:src="@drawable/onefour"/>
                    <ImageView
                        android:id="@+id/three_six"
                        android:layout_width="50dp"
                        android:layout_height="50sp"
                        android:padding="5sp"
                        android:layout_gravity="center"
                        android:src="@drawable/threesix"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"


                    android:background="@drawable/normal_card"

                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pop_reg"
                            android:text=" Family Construct"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="#0A0909"
                            android:textSize="11sp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/m_cov"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/pop_reg"
                                android:textColor="#ff5d55"
                                android:text="1500"
                                android:textStyle="bold"
                                android:textSize="11sp" />


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dash_line_"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:layout_marginTop="5sp"


                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/see_details"
                        android:layout_width="0dp"
                        android:layout_weight="1.2"
                        android:layout_height="match_parent"

                        android:layout_gravity="start"
                        android:gravity="center"
                        android:background="@drawable/btn_cancle"

                        android:layout_marginStart="2sp"
                        android:layout_marginEnd="2sp"
                        android:layout_marginBottom="3sp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pop_reg"
                            android:textColor="#FFFFFF"
                            android:padding="5sp"
                            android:text="Product Features"
                            android:elevation="20sp"
                            android:textSize="12sp" />


                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>


    <TextView
        android:id="@+id/cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/pop_reg"
        android:textColor="#7789E7"
        android:text="45"
        android:visibility="gone"
        android:textStyle="bold"
        android:textSize="12sp" />

</RelativeLayout>


