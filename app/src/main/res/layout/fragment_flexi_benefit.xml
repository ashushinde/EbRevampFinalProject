<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F3FD"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:background="@drawable/nav_back"
                        android:layout_height="150sp">

                        <TextView
                            android:id="@+id/frogm"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pop_reg"
                            android:text="Any Update"
                            android:textColor="#FDFDFD"
                            android:layout_marginTop="30sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="18sp" />
                    </LinearLayout>




                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="30sp"
                        android:layout_marginTop="20sp"
                        android:layout_marginStart="12sp"
                        android:layout_marginEnd="12sp"
                        android:layout_marginBottom="35sp"
                        app:cardElevation="22sp"


                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="6sp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/insurance_cover"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5sp"
                                android:text="Insurance"
                                android:textSize="11sp"

                                android:fontFamily="@font/pop_reg"
                                android:textColor="#FFFFFF"
                                android:padding="10sp"
                                android:textStyle="bold"
                                android:background="@drawable/nav_back_tab"/>




                            <Button
                                android:id="@+id/group_cover"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5sp"
                                android:text="Wellness"
                                android:textSize="11sp"
                                android:fontFamily="@font/pop_reg"
                                android:textColor="#0E0B0B"
                                android:padding="10sp"
                                android:textStyle="bold"
                                android:background="@drawable/tab_curve"
                                />


                            <Button
                                android:id="@+id/voluntary_cover"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5sp"
                                android:text="Flex Summary"
                                android:textStyle="bold"
                                android:padding="10sp"
                                android:textSize="11sp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/pop_reg"
                                android:textColor="#0E0C0C"
                                android:background="@drawable/tab_curve"
                                />
                            <Button
                                android:id="@+id/cover"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5sp"
                                android:text="Buy Insurance Cover"
                                android:textStyle="bold"
                                android:textSize="11sp"
                                android:visibility="gone"
                                android:padding="6sp"
                                android:fontFamily="@font/pop_reg"
                                android:textColor="#0E0C0C"
                                android:background="@drawable/tab_curve"
                                />


                        </LinearLayout>




                    </androidx.cardview.widget.CardView>




                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">



                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/ghi_recycle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:layout_marginStart="10sp"
                                android:layout_marginEnd="10sp"
                                android:visibility="gone"


                                tools:listitem="@layout/flex_list"

                                />


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/insurance_recycle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="8sp"

                                tools:listitem="@layout/in_list"
                                android:layout_below="@+id/cards"

                                />

                            <LinearLayout
                                android:id="@+id/my_flex_summary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5sp"
                                    android:background="#00FFFFFF"
                                    android:orientation="horizontal">
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="1.5"
                                        android:layout_height="wrap_content"
                                        android:elevation="5sp"
                                        android:orientation="horizontal">


                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:layout_centerHorizontal="true"
                                            android:foregroundGravity="center"
                                            android:orientation="horizontal">





                                            <androidx.cardview.widget.CardView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="5dp"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginTop="15dp"
                                                android:layout_marginEnd="5dp"
                                                android:layout_marginRight="5dp"
                                                android:layout_marginBottom="5dp"
                                                app:cardCornerRadius="20dp">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="38sp"
                                                    android:orientation="vertical">
                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:fontFamily="@font/pop_reg"
                                                        android:text="Total Wallet"
                                                        android:layout_gravity="center"
                                                        android:textColor="#6334E3"
                                                        android:textStyle="bold"
                                                        android:padding="2sp"
                                                        android:gravity="center"
                                                        android:textSize="12sp" />

                                                    <TextView
                                                        android:id="@+id/to_pay"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:fontFamily="@font/pop_reg"
                                                        android:text="0"
                                                        android:layout_gravity="center"
                                                        android:textColor="#151416"
                                                        android:textStyle="bold"
                                                        android:gravity="center"
                                                        android:padding="2sp"
                                                        android:textSize="12sp" />



                                                </LinearLayout>
                                            </androidx.cardview.widget.CardView>

                                            <ImageView
                                                android:layout_width="50sp"
                                                android:layout_height="50sp"
                                                android:fontFamily="@font/pop_reg"
                                                android:textColor="#110A0A"
                                                android:padding="5sp"
                                                android:text="Wellness"
                                                android:layout_centerHorizontal="true"
                                                android:background="@drawable/circle_arrow"
                                                android:elevation="20sp"

                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:src="@drawable/carr"
                                                android:textSize="12sp" />

                                        </RelativeLayout>

                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="1.5"
                                        android:layout_height="wrap_content"
                                        android:elevation="5sp"
                                        android:orientation="horizontal">


                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:layout_centerHorizontal="true"
                                            android:foregroundGravity="center"
                                            android:orientation="horizontal">

                                            <androidx.cardview.widget.CardView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="5dp"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginTop="15dp"
                                                android:layout_marginEnd="5dp"
                                                android:layout_marginRight="5dp"
                                                android:layout_marginBottom="5dp"
                                                app:cardCornerRadius="20dp">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="38sp"
                                                    android:orientation="vertical">
                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:fontFamily="@font/pop_reg"
                                                        android:text="Wallet Balance"
                                                        android:layout_gravity="center"
                                                        android:textColor="#6334E3"
                                                        android:textStyle="bold"
                                                        android:padding="2sp"
                                                        android:gravity="center"
                                                        android:textSize="12sp" />

                                                    <TextView
                                                        android:id="@+id/flex_wallet"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:fontFamily="@font/pop_reg"
                                                        android:text="0"
                                                        android:layout_gravity="center"
                                                        android:textColor="#151416"
                                                        android:textStyle="bold"
                                                        android:gravity="center"
                                                        android:padding="2sp"
                                                        android:textSize="12sp" />



                                                </LinearLayout>
                                            </androidx.cardview.widget.CardView>

                                            <ImageView
                                                android:layout_width="50sp"
                                                android:layout_height="50sp"
                                                android:fontFamily="@font/pop_reg"
                                                android:textColor="#110A0A"
                                                android:padding="5sp"
                                                android:text="Wellness"
                                                android:layout_centerHorizontal="true"
                                                android:background="@drawable/circle_arrow"
                                                android:elevation="20sp"

                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:src="@drawable/carr"
                                                android:textSize="12sp" />

                                        </RelativeLayout>

                                    </LinearLayout>






                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="1.5"
                                        android:layout_height="wrap_content"
                                        android:elevation="5sp"
                                        android:orientation="horizontal">


                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:layout_centerHorizontal="true"
                                            android:foregroundGravity="center"
                                            android:orientation="horizontal">





                                            <androidx.cardview.widget.CardView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="5dp"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginTop="15dp"
                                                android:layout_marginEnd="5dp"
                                                android:layout_marginRight="5dp"
                                                android:layout_marginBottom="5dp"
                                                app:cardCornerRadius="20dp">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="38sp"
                                                    android:orientation="vertical">
                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:fontFamily="@font/pop_reg"
                                                        android:text="Wallet Utilize"
                                                        android:layout_gravity="center"
                                                        android:textColor="#6334E3"
                                                        android:textStyle="bold"
                                                        android:padding="2sp"
                                                        android:gravity="center"
                                                        android:textSize="12sp" />

                                                    <TextView
                                                        android:id="@+id/flex_utilisation"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:fontFamily="@font/pop_reg"
                                                        android:text="0"
                                                        android:layout_gravity="center"
                                                        android:textColor="#151416"
                                                        android:textStyle="bold"
                                                        android:gravity="center"
                                                        android:padding="2sp"
                                                        android:textSize="12sp" />



                                                </LinearLayout>
                                            </androidx.cardview.widget.CardView>

                                            <ImageView
                                                android:layout_width="50sp"
                                                android:layout_height="50sp"
                                                android:fontFamily="@font/pop_reg"
                                                android:textColor="#110A0A"
                                                android:padding="5sp"
                                                android:text="Wellness"
                                                android:layout_centerHorizontal="true"
                                                android:background="@drawable/circle_arrow"
                                                android:elevation="20sp"

                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:src="@drawable/carr"
                                                android:textSize="12sp" />

                                        </RelativeLayout>

                                    </LinearLayout>



                                </LinearLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="10sp"
                                    android:layout_height="wrap_content">


                                    <TextView
                                        android:layout_width="100sp"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/pop_reg"
                                        android:textColor="#110A0A"
                                        android:padding="5sp"
                                        android:layout_marginStart="18sp"
                                        android:text="Wellness"
                                        android:background="@drawable/green_dash"
                                        android:elevation="20sp"
                                        android:layout_gravity="center"
                                        android:layout_marginEnd="10sp"
                                        android:gravity="center"
                                        android:textSize="12sp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="20sp"
                                        android:layout_marginStart="20sp"
                                        android:layout_marginEnd="20sp"
                                        android:background="@drawable/card_back"
                                        android:orientation="vertical">




                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/cards"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:cardCornerRadius="10sp"
                                            app:cardBackgroundColor="#E5F1FC"
                                            android:layout_marginStart="5sp"
                                            android:layout_marginEnd="5sp"
                                            android:layout_marginTop="15sp"

                                            >
                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:padding="5sp"
                                                android:layout_marginTop="15sp"
                                                android:orientation="vertical">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical">

                                                    <LinearLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:orientation="horizontal">
                                                        <TextView
                                                            android:id="@+id/flex_name"
                                                            android:layout_width="0dp"
                                                            android:layout_weight="1.5"
                                                            android:layout_height="wrap_content"
                                                            android:fontFamily="@font/pop_reg"
                                                            android:text="Name"
                                                            android:gravity="center"
                                                            android:layout_gravity="center"
                                                            android:textColor="#100F11"
                                                            android:layout_marginEnd="2sp"
                                                            android:textStyle="bold"
                                                            android:textSize="12sp" />


                                                        <TextView
                                                            android:id="@+id/flex_discription"
                                                            android:layout_width="0dp"
                                                            android:layout_weight="1.5"
                                                            android:layout_height="wrap_content"
                                                            android:fontFamily="@font/pop_reg"
                                                            android:text="Flex"
                                                            android:gravity="center"
                                                            android:layout_marginEnd="2sp"
                                                            android:textStyle="bold"

                                                            android:textColor="#1A1A1B"
                                                            android:textSize="12sp"/>


                                                        <LinearLayout
                                                            android:layout_width="0dp"
                                                            android:layout_weight="1.5"
                                                            android:layout_height="wrap_content"
                                                            android:gravity="center"
                                                            android:layout_marginEnd="2sp"
                                                            android:orientation="vertical">


                                                            <TextView
                                                                android:id="@+id/final_amount"
                                                                android:layout_width="wrap_content"
                                                                android:layout_height="wrap_content"

                                                                android:fontFamily="@font/pop_reg"

                                                                android:text="Final "
                                                                android:textStyle="bold"
                                                                android:textColor="#06040A"
                                                                android:textSize="12sp" />

                                                            <TextView

                                                                android:layout_width="wrap_content"
                                                                android:layout_height="wrap_content"

                                                                android:fontFamily="@font/pop_reg"

                                                                android:text="Amount"
                                                                android:textStyle="bold"
                                                                android:textColor="#06040A"
                                                                android:textSize="12sp" />
                                                        </LinearLayout>


                                                        <TextView
                                                            android:id="@+id/deduction_type"
                                                            android:layout_width="0dp"
                                                            android:layout_weight="1.5"
                                                            android:layout_height="wrap_content"
                                                            android:fontFamily="@font/pop_reg"
                                                            android:textColor="#09080A"
                                                            android:textSize="12sp"
                                                            android:layout_marginEnd="2sp"
                                                            android:gravity="center"
                                                            android:text="Deduction Type"
                                                            android:textStyle="bold"
                                                            />






                                                    </LinearLayout>




                                                    <LinearLayout
                                                        android:id="@+id/balance"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:visibility="gone"
                                                        android:orientation="vertical">







                                                    </LinearLayout>
                                                </LinearLayout>


                                            </LinearLayout>

                                        </androidx.cardview.widget.CardView>

                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/wellness"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="8sp"
                                            tools:listitem="@layout/wellnes_list"
                                            android:layout_below="@+id/cards"

                                            />
                                    </LinearLayout>

                                </RelativeLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <ImageView
                                    android:id="@+id/info_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="10sp"
                                    android:layout_marginLeft="10sp"
                                    android:layout_marginTop="10sp"
                                    android:padding="5sp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/no_image"
                                    android:visibility="gone"
                                    android:textColor="#fff"
                                    android:textStyle="bold" />
                            </LinearLayout>


                        </LinearLayout>

                    </ScrollView>



                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>