<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5sp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:background="@drawable/edit_back_grey"
        android:padding="5sp">

        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="5sp"
            android:src="@drawable/employee"
            android:padding="5sp"
            android:background="@drawable/circle_light"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="5sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"
                android:hint="Employee only"
                android:textStyle="bold"

                android:gravity="center"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textSize="12sp" />





        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:padding="5sp"
            android:text="150"
            android:textColor="#0E0A0A"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:background="#F0F8FB"/>

    </LinearLayout>
</LinearLayout>