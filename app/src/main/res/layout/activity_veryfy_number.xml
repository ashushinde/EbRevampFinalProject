<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160sp"
        android:orientation="vertical"

        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="160sp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:text="Please Enter verification code"
        android:layout_gravity="center"
        android:layout_marginTop="15sp"
        android:gravity="center"
        android:textColor="#030507"
        android:textStyle="bold"
        android:textSize="18sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:text="OTP has been sent to "
        android:layout_gravity="center"
        android:layout_marginTop="8sp"
        android:gravity="center"
        android:textColor="#929393"
        android:textStyle="bold"
        android:textSize="16sp"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="5sp"
        tools:ignore="MissingConstraints">
    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:text="9920765578"
        android:layout_gravity="center"

        android:gravity="center"
        android:textColor="#030507"
        android:textStyle="bold"
        android:textSize="16sp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/edit"
        android:layout_width="30sp"
        android:layout_height="15sp"
        android:layout_gravity="center"
        android:src="@drawable/pencil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="30dp">




                <LinearLayout
                    android:id="@+id/otp_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="18sp"
                    android:layout_gravity="center"

                    android:gravity="center">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="18sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >
                        <EditText
                            android:id="@+id/one"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:padding="15sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="1"
                            android:minEms="1"
                            android:maxEms="1"
                            android:textColor="#0B0909"
                            android:textSize="15sp"
                            android:hint="0"
                            android:singleLine="true"
                            android:nextFocusForward="@+id/two"
                            android:nextFocusDown="@+id/two"
                            android:nextFocusRight="@+id/two"
                            android:nextFocusLeft="@+id/two"
                            android:imeOptions="actionNext"
                            android:elevation="5sp"
                            android:background="@drawable/box_shadow"
                            android:layout_gravity="center"
                            tools:ignore="VectorDrawableCompat"/>

                        <EditText
                            android:id="@+id/two"
                            android:singleLine="true"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:padding="15sp"
                            android:textStyle="bold"
                            android:textColor="#0B0909"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:inputType="number"
                            android:maxLength="1"
                            android:minEms="1"
                            android:maxEms="1"
                            android:nextFocusForward="@+id/three"
                            android:nextFocusDown="@+id/three"
                            android:nextFocusRight="@+id/three"
                            android:nextFocusLeft="@+id/three"
                            android:imeOptions="actionNext"
                            android:hint="0"
                            android:elevation="5sp"
                            android:background="@drawable/box_shadow"
                            android:layout_gravity="center"
                            tools:ignore="VectorDrawableCompat"/>

                        <EditText
                            android:id="@+id/three"
                            android:singleLine="true"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:padding="15sp"
                            android:textStyle="bold"
                            android:textColor="#0B0909"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:hint="0"
                            android:inputType="number"
                            android:maxLength="1"
                            android:minEms="1"
                            android:maxEms="1"
                            android:nextFocusForward="@+id/four"
                            android:nextFocusDown="@+id/four"
                            android:nextFocusRight="@+id/four"
                            android:nextFocusLeft="@+id/four"
                            android:imeOptions="actionNext"
                            android:elevation="5sp"
                            android:background="@drawable/box_shadow"
                            android:layout_gravity="center"
                            tools:ignore="VectorDrawableCompat"/>

                        <EditText
                            android:id="@+id/four"
                            android:singleLine="true"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:padding="15sp"
                            android:textStyle="bold"
                            android:textColor="#0B0909"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:hint="0"
                            android:inputType="number"
                            android:maxLength="1"
                            android:minEms="1"
                            android:maxEms="1"
                            android:elevation="5sp"
                            android:background="@drawable/box_shadow"
                            android:layout_gravity="center"
                            tools:ignore="VectorDrawableCompat"/>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35sp"
                    android:layout_marginBottom="10sp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/otpBtn"
                        android:layout_width="0dp"
                        android:layout_weight="1.0"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:orientation="horizontal">
                        <TextView
android:id="@+id/submit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5sp"
                            android:layout_marginLeft="5sp"
                            android:layout_marginTop="5sp"
                            android:elevation="10sp"
                            android:layout_marginBottom="5sp"
                            android:background="@drawable/btn_reg"
                            android:drawableEnd="@drawable/ic_arrow_forward_white_24dp_white"
                            android:gravity="center"
                            android:padding="11sp"
                            android:drawablePadding="10sp"
                            android:paddingEnd="20sp"
                            android:fontFamily="@font/pop_reg"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:text="Submit"
                            android:textColor="#fff" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/login"
                        android:layout_width="0dp"
                        android:layout_weight="1.0"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:visibility="gone"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5sp"
                            android:layout_marginLeft="5sp"
                            android:layout_marginTop="5sp"
                            android:elevation="10sp"
                            android:layout_marginBottom="5sp"
                            android:background="@drawable/btn_reg"
                            android:drawableEnd="@drawable/ic_arrow_forward_white_24dp"
                            android:gravity="center"

                            android:padding="11sp"
                            android:drawablePadding="10sp"
                            android:paddingEnd="20sp"
                            android:fontFamily="@font/pop_reg"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:text="Submit "
                            android:textColor="#fff" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sign_up_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5sp"
                        android:text="Don't receive OTP ?"
                        android:textStyle="bold"
                        android:textColor="#858383"
                        android:fontFamily="@font/bold"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        tools:ignore="VectorDrawableCompat"/>

                    <TextView
                        android:id="@+id/sign_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5sp"
                        android:layout_marginStart="2sp"
                        android:text="Retry again"
                        android:textStyle="bold"
                        android:textColor="#359E75"
                        android:fontFamily="@font/bold"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        tools:ignore="VectorDrawableCompat"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/resend_show"
                    android:layout_width="match_parent"
                    android:visibility="gone"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5sp"
                        android:text="Don't receive otp ?"
                        android:textStyle="bold"
                        android:textColor="#858383"
                        android:fontFamily="@font/bold"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        tools:ignore="VectorDrawableCompat"/>

                    <TextView
                        android:id="@+id/resend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5sp"
                        android:layout_marginStart="2sp"
                        android:text="Resend Again"
                        android:textStyle="bold"
                        android:textColor="#1C5671"
                        android:fontFamily="@font/bold"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        tools:ignore="VectorDrawableCompat"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>