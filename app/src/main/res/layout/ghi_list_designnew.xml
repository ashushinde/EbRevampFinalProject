<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00ECECEC"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/card_back"

        android:layout_margin="10sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8sp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/s_logo"
                        android:layout_width="60dp"
                        android:layout_height="30sp"
                        android:layout_gravity="center"
                        android:src="@drawable/sodexo_flex"/>


</LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dash_line_"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2sp"
                   

                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.0"
                        android:layout_height="match_parent"

                        android:orientation="vertical">
                  <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                android:paddingBottom="10sp"
                      android:paddingTop="10sp"
                      android:paddingStart="2sp"
                      android:paddingEnd="2sp"
                    android:background="@drawable/normal_card"

                    android:orientation="horizontal">
                   <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pop_reg"
                        android:text=" Members Covered  : "
                        android:textColor="#0A0909"
                        android:textSize="12sp" />
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:padding="2sp"
                           android:orientation="horizontal">
                    <ImageView

                        android:layout_width="20sp"
                        android:layout_height="10sp"
                        android:visibility="gone"

                        android:layout_gravity="center"
                        android:src="@drawable/rupee"/>
                    <TextView
                        android:id="@+id/m_cov"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/pop_reg"
                        android:textColor="#ff5d55"
                        android:text="1500"
                        android:textStyle="bold"
                        android:textSize="11sp" />

                       <ImageView

                           android:layout_width="20sp"
                           android:layout_height="10sp"


                           android:layout_gravity="center"
                           android:src="@drawable/info"/>
                       </LinearLayout>
                </LinearLayout>

                  </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/btn_cancle"
                            android:elevation="20sp"
                            android:layout_marginStart="5sp"
                            android:layout_marginEnd="5sp"
                            android:layout_marginBottom="5sp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:textColor="#FFFFFF"
                                android:padding="5sp"
                                android:text="See Details"
                                android:elevation="20sp"
                                android:textSize="12sp" />
                            <ImageView

                                android:layout_width="20sp"
                                android:layout_height="20sp"


                                android:layout_gravity="center"
                                android:src="@drawable/ic_eye"/>

                        </LinearLayout>
                </LinearLayout>

                    
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_marginStart="2sp"
                        android:background="@drawable/new_card_yellow"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/opd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2sp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="OPD Cover  : "
                                android:textColor="#0A0909"
                                android:textSize="12sp" />

                            <ImageView

                                android:layout_width="20sp"
                                android:layout_height="10sp"
                                android:layout_gravity="center"
                                android:src="@drawable/rupee"/>
                            <TextView
                                android:id="@+id/opd_cover"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/pop_reg"
                                android:textColor="#ff5d55"
                                android:text="1500"
                                android:textStyle="bold"
                                android:textSize="11sp" />



                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/pre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2sp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="Premium Payable  : "
                                android:textColor="#0A0909"
                                android:textSize="12sp" />

                            <ImageView

                                android:layout_width="20sp"
                                android:layout_height="10sp"
                                android:layout_gravity="center"
                                android:src="@drawable/rupee"/>

                            <TextView
                                android:id="@+id/premium_data"
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/pop_reg"
                                android:text="1500"
                                android:textColor="#ff5d55"
                                android:textSize="11sp"
                                android:textStyle="bold" />



                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/balance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2sp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="Balance Sum Insured  : "
                                android:textColor="#0A0909"
                                android:textSize="12sp" />

                            <ImageView

                                android:layout_width="20sp"
                                android:layout_height="10sp"
                                android:layout_gravity="center"
                                android:src="@drawable/rupee"/>
                            <TextView
                                android:id="@+id/premium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/pop_reg"
                                android:textColor="#ff5d55"
                                android:text="1500"
                                android:textStyle="bold"
                                android:textSize="11sp" />



                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cove_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2sp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="Sum Insured  : "
                                android:textColor="#0A0909"
                                android:textSize="12sp" />

                            <ImageView

                                android:layout_width="20sp"
                                android:layout_height="10sp"
                                android:layout_gravity="center"
                                android:src="@drawable/rupee"/>
                            <TextView
                                android:id="@+id/covera"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/pop_reg"
                                android:textColor="#ff5d55"
                                android:text="1500"
                                android:textStyle="bold"
                                android:textSize="11sp" />



                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/frogm"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:fontFamily="@font/pop_reg"
        android:text="Group Mediclaim"
        android:textColor="#FFFFFF"
        android:gravity="end"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/subtraction"
        android:padding="5sp"
        android:paddingEnd="50sp"
        android:textStyle="bold"
        android:textSize="14sp" />

</RelativeLayout>


