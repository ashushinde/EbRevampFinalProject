<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F3FD"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F3FD"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5sp"

                        android:orientation="vertical"
                        android:padding="5sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5sp"
                                android:orientation="horizontal">



                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10sp"
                                    android:background="@drawable/edit_back_grey"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10sp"
                                        android:layout_marginTop="5sp"
                                        android:fontFamily="@font/pop_reg"
                                        android:text="Select Policy"
                                        android:textColor="#020101"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5sp"
                                        android:layout_marginBottom="5sp"
                                        android:orientation="horizontal">

                                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                            android:id="@+id/policy_type_spin"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:backgroundTint="#0E0E0E" />

                                    </LinearLayout>
                                </LinearLayout>


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10sp"
                                android:background="@drawable/edit_back_grey"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10sp"
                                    android:layout_marginTop="5sp"
                                    android:fontFamily="@font/pop_reg"
                                    android:text="Select Policy Name"
                                    android:textColor="#020101"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5sp"
                                    android:layout_marginBottom="5sp"
                                    android:orientation="horizontal">

                                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                        android:id="@+id/policy_type_spin_no"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="#0E0E0E" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10sp"
                                android:background="@drawable/edit_back_grey"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10sp"
                                    android:layout_marginTop="5sp"
                                    android:fontFamily="@font/pop_reg"
                                    android:text="Select Member"
                                    android:textColor="#020101"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5sp"
                                    android:layout_marginBottom="5sp"
                                    android:orientation="horizontal">

                                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                        android:id="@+id/bank_citySpin"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="#0E0E0E" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10sp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/edit_back_grey"
                                android:orientation="vertical"
                                android:padding="5sp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5sp"
                                    android:fontFamily="@font/pop_reg"
                                    android:text="Claim Id"
                                    android:textColor="#0C0707"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="5sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8sp"
                                    android:layout_marginBottom="5sp"
                                    android:orientation="horizontal">

                                    <Spinner
                                        android:id="@+id/bank_branchSpin"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="#381510"
                                        android:textSize="12sp" />
                                </LinearLayout>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/submit"
                                android:layout_width="120sp"
                                android:layout_height="45sp"
                                android:layout_gravity="end"
                                android:layout_marginStart="5sp"
                                android:layout_marginLeft="5sp"
                                android:layout_marginTop="15sp"
                                android:background="@drawable/btn_reg"
                                android:fontFamily="@font/bold"
                                android:gravity="center"
                                android:text="Track"
                                android:layout_marginEnd="10sp"
                                android:elevation="12sp"
                                android:textColor="#fff"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#F2F3FD"
                            android:visibility="gone"

                            android:orientation="vertical">
                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"


                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"


                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/export"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:background="#0C0707"
                                        android:visibility="gone"
                                        android:layout_marginTop="10sp"
                                        android:layout_marginEnd="10sp"

                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/pop_reg"
                                            android:text="Export"
                                            android:textColor="#F8F8F8"
                                            android:textStyle="bold"
                                            android:layout_marginStart="5sp"
                                            android:layout_marginEnd="5sp"
                                            android:layout_gravity="center"
                                            android:textSize="15sp" />
                                        <ImageView
                                            android:layout_width="30sp"
                                            android:layout_height="30sp"
                                            android:padding="5sp"

                                            android:layout_marginEnd="5sp"
                                            android:src="@drawable/export_white"
                                            />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="20sp"
                                        android:layout_marginTop="20sp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="40sp"
                                            android:layout_height="40sp"
                                            android:padding="7sp"
                                            android:background="@drawable/circle_yellow"
                                            android:src="@drawable/group_cover_datata"
                                            />


                                        <TextView
                                            android:id="@+id/cover"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/pop_reg"
                                            android:text="Hospitalization"
                                            android:textColor="#54368B"
                                            android:textStyle="bold"
                                            android:layout_marginStart="20sp"
                                            android:layout_gravity="center"
                                            android:textSize="15sp" />
                                    </LinearLayout>


                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/ghi_recycle"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        tools:listitem="@layout/my_hos_claim_list"

                                        />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">


                                        <ImageView
                                            android:id="@+id/info_text"
                                            android:layout_width="200sp"
                                            android:layout_height="200sp"
                                            android:layout_marginStart="10sp"
                                            android:layout_marginLeft="10sp"
                                            android:layout_marginTop="10sp"
                                            android:padding="5sp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/no_image"
                                            android:visibility="gone"
                                            android:textColor="#fff"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/intimation_lin"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="20sp"
                                        android:layout_marginTop="20sp"
                                        android:visibility="gone"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="40sp"
                                            android:layout_height="40sp"
                                            android:padding="7sp"
                                            android:background="@drawable/circle_yellow"
                                            android:src="@drawable/group_cover_datata"
                                            />


                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/pop_reg"
                                            android:text="Intimation"
                                            android:textColor="#54368B"
                                            android:textStyle="bold"
                                            android:layout_marginStart="20sp"
                                            android:layout_gravity="center"
                                            android:textSize="15sp" />
                                    </LinearLayout>


                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/voluntary"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:visibility="gone"
                                        tools:listitem="@layout/my_hos_claim_list"

                                        />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">


                                        <ImageView
                                            android:id="@+id/info_text_voluntary"
                                            android:layout_width="200dp"
                                            android:layout_height="200dp"
                                            android:layout_marginStart="10sp"
                                            android:layout_marginLeft="10sp"
                                            android:layout_marginTop="10sp"
                                            android:padding="5sp"
                                            android:layout_gravity="center"

                                            android:src="@drawable/no_image"
                                            android:visibility="gone"
                                            android:textColor="#fff"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:visibility="gone"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="20sp"
                                        android:layout_marginTop="20sp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="40sp"
                                            android:layout_height="40sp"
                                            android:padding="7sp"
                                            android:background="@drawable/circle_yellow"
                                            android:src="@drawable/group_cover_datata"
                                            />


                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/pop_reg"
                                            android:text="E-Cashless"
                                            android:textColor="#54368B"
                                            android:textStyle="bold"
                                            android:layout_marginStart="20sp"
                                            android:layout_gravity="center"
                                            android:textSize="15sp" />
                                    </LinearLayout>


                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/ghi_recycle_plan"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:visibility="gone"
                                        tools:listitem="@layout/my_hos_claim_list"

                                        />

                                    <LinearLayout
                                        android:visibility="gone"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">


                                        <ImageView
                                            android:id="@+id/info_text_plan"
                                            android:layout_width="200sp"
                                            android:layout_height="200sp"
                                            android:layout_marginStart="10sp"
                                            android:layout_marginLeft="10sp"
                                            android:layout_marginTop="10sp"
                                            android:padding="5sp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/no_image"
                                            android:visibility="gone"
                                            android:textColor="#fff"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                </LinearLayout>
                            </ScrollView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>