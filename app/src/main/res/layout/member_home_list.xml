<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00B32E2E"
    android:elevation="10sp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        card_view:cardCornerRadius="20sp"
        >

        <View
            android:layout_width="3sp"
            android:layout_height="220sp"
            android:visibility="gone"
            android:background="#e44d4d" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginStart="5sp"
                android:layout_marginBottom="2sp"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/member_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/pop_reg"
                    android:background="@drawable/light_blue"
                    android:text="Asawari Shinde"
                    android:textColor="#3F51B5"
                    android:paddingStart="20sp"
                    android:paddingEnd="20sp"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_marginStart="10sp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                    android:id="@+id/user"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
     />

                    <ImageView
                        android:id="@+id/upload"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_gravity="bottom"
                        android:tooltipText="upload document"
                        android:src="@drawable/camera"

                        />
                </LinearLayout>



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:padding="2sp">

                <TextView
                    android:id="@+id/mem_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/pop_reg"
                    android:text="Member Id   :"
                    android:textColor="#6e6d6d"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/member_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/pop_reg"
                    android:text="96"
                    android:textColor="#FF5722"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2sp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/pop_reg"
                    android:text="Relation :"
                    android:textColor="#6e6d6d"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/relation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/pop_reg"
                    android:textStyle="bold"
                    android:text="Self"
                    android:textColor="#FF5722"
                    android:textSize="12sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2sp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1.5"
                    android:drawablePadding="10sp"
                    android:fontFamily="@font/pop_reg"
                    android:text="Date Of Birth :"
                    android:textColor="#6e6d6d"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dob"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/pop_reg"
                    android:text="16-Aug-1993"
                    android:textStyle="bold"
                    android:textColor="#FF5722"
                    android:textSize="12sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sum_hide_opd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:padding="2sp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/pop_reg"
                    android:text="Sum Insured OPD :"
                    android:textColor="#6e6d6d"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2sp"
                    android:layout_weight="1.5"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:padding="5sp"
                        android:src="@drawable/rupee"
                        />

                    <TextView
                        android:id="@+id/sum_opd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pop_reg"
                        android:text="3 lakh"
                        android:textStyle="bold"
                        android:textColor="#FF5722"
                        android:textSize="12sp"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sum_hide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:padding="2sp">

                <TextView
                    android:id="@+id/sum_head"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/pop_reg"
                    android:text="Sum Insured :"
                    android:textColor="#6e6d6d"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2sp"
                    android:layout_weight="1.5"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:padding="5sp"
                        android:src="@drawable/rupee"
                        />

                    <TextView
                        android:id="@+id/sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pop_reg"
                        android:text="3 lakh"
                        android:textStyle="bold"
                        android:textColor="#FF5722"
                        android:textSize="12sp"
                        />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2sp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/pop_reg"
                    android:text="Cover Date :"
                    android:textColor="#6e6d6d"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cover_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/pop_reg"
                    android:text="16-Aug-1993"
                    android:textStyle="bold"
                    android:textColor="#FF5722"
                    android:textSize="12sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10sp"
                android:padding="2sp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/pop_reg"
                    android:text="Status :"
                    android:textColor="#6e6d6d"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/pop_reg"
                    android:textColor="#4CAF50"
                    android:text="Active"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    />

            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="#2EF5A8"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10sp"
                tools:ignore="RtlCompat">
                <Button
                    android:id="@+id/health_card"
                    android:layout_width="100sp"
                    android:layout_height="40sp"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:background="#00ffffff"
                    android:fontFamily="@font/pop_reg"
                    android:text="Health E-Card"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
