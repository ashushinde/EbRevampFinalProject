<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F4FB"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_back"
            android:padding="10sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:orientation="vertical"
            android:layout_marginTop="10sp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pop_reg"
                android:textColor="#FF5722"
                android:text="Add Health Checkup"
                android:textStyle="bold"
                android:textSize="15sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pop_reg"
                android:textColor="#474242"
                android:text="Lorem ipsum dolor sit, amet consectetur adipisicing elit. Eum, expedita earum. Provident quo doloribus perferendis dolores nam velit aliquam vitae, nihil eius sapiente quae, qui error autem"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/saveBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/nav_back"
                android:gravity="center"
                android:text="Add Health Checkup"
                android:textColor="#fff"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_back"
            android:padding="10sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:orientation="vertical"
            android:layout_marginTop="20sp"
            >

            <ImageView
                android:id="@+id/info_text_GH"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10sp"
                android:padding="5sp"
                android:src="@drawable/no_image"
                android:text="Cashless Form Revised"
                android:textColor="#fff"
                android:textStyle="bold"
                android:visibility="gone"
                tools:ignore="RtlCompat" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hos_claim_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                tools:listitem="@layout/checkup_list" />


        </LinearLayout>
    </LinearLayout>


</LinearLayout>