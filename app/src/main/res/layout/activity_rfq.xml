<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="#F2F3FD"
    android:orientation="vertical">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/arrorw_rfq"
                android:padding="3sp"
                android:elevation="25sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/info_text"
                    android:layout_width="150sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10sp"

                    android:src="@drawable/hero_logo"
                    android:text="Cashless Form Revised"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginTop="5sp"
                android:padding="13sp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="3sp"
                    android:fontFamily="@font/pop_reg"
                    android:textStyle="bold"
                    android:hint="Tell us about your company"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="18sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/edit_back_grey"
                        android:padding="5sp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5sp"
                            android:orientation="horizontal"
                            android:padding="5sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3sp"
                                android:fontFamily="@font/pop_reg"
                                android:hint="Work email"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:textColorHint="@android:color/black"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="1sp"
                                android:layout_marginLeft="10sp"
                                android:layout_weight="1.0"
                                android:fontFamily="@font/bold"
                                android:hint="*"
                                android:textColor="#B61919"
                                android:textColorHint="#B61919"
                                android:textSize="14sp" />
                        </LinearLayout>



                        <EditText
                            android:id="@+id/work_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter work email id"
                            android:backgroundTint="#fff"
                            android:inputType="textPersonName"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz._@1234567890 "
                            android:padding="5sp"
                            android:singleLine="true"
                            android:maxLength="50"
                            android:ems="50"
                            android:minEms="50"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/darker_gray"
                            android:textSize="13sp" />
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15sp"
                    android:background="@drawable/edit_back_grey"
                    android:padding="5sp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:orientation="horizontal"
                        android:padding="5sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3sp"
                            android:fontFamily="@font/pop_reg"
                            android:hint="Company Name"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black"
                            android:textSize="12sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1sp"
                            android:layout_marginLeft="10sp"
                            android:layout_weight="1.0"
                            android:fontFamily="@font/bold"
                            android:hint="*"
                            android:textColor="#B61919"
                            android:textColorHint="#B61919"
                            android:textSize="14sp" />
                    </LinearLayout>



                    <EditText
                        android:id="@+id/companyname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter company name"
                        android:backgroundTint="#fff"
                        android:inputType="textPersonName"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz. "
                        android:padding="5sp"
                        android:maxLength="50"
                        android:ems="50"
                        android:minEms="50"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="13sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15sp"
                    android:background="@drawable/edit_back_grey"
                    android:padding="5sp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:orientation="horizontal"
                        android:padding="5sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3sp"
                            android:fontFamily="@font/pop_reg"
                            android:hint="Contact Number"

                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black"
                            android:textSize="12sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1sp"
                            android:layout_marginLeft="10sp"
                            android:layout_weight="1.0"
                            android:fontFamily="@font/bold"
                            android:hint="*"
                            android:textColor="#B61919"
                            android:textColorHint="#B61919"
                            android:textSize="14sp" />
                    </LinearLayout>



                    <EditText
                        android:id="@+id/contact_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter contact number"
                        android:backgroundTint="#fff"
                        android:inputType="number"
                        android:padding="5sp"
                        android:ems="10"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="13sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15sp"
                    android:background="@drawable/edit_back_grey"
                    android:padding="5sp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:orientation="horizontal"
                        android:padding="5sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3sp"
                            android:fontFamily="@font/pop_reg"
                            android:hint="Pincode"

                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black"
                            android:textSize="12sp"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1sp"
                            android:layout_marginLeft="10sp"
                            android:layout_weight="1.0"
                            android:fontFamily="@font/bold"
                            android:textColor="#B61919"
                            android:hint="*"
                            android:textColorHint="#B61919"
                            android:textSize="14sp" />
                    </LinearLayout>



                    <EditText
                        android:id="@+id/pincode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Pincode"
                        android:ems="6"
                        android:backgroundTint="#fff"
                        android:inputType="number"
                        android:minEms="6"
                        android:maxEms="6"
                        android:maxLength="6"
                        android:padding="5sp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/edit_back_grey"
                    android:layout_marginTop="10sp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:orientation="horizontal"
                        android:padding="5sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="3sp"
                            android:fontFamily="@font/pop_reg"
                            android:hint="City"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black"
                            android:textSize="12sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1sp"
                            android:layout_marginLeft="10sp"
                            android:layout_weight="1.0"
                            android:fontFamily="@font/bold"
                            android:hint=""
                            android:textColor="#B61919"
                            android:textColorHint="#B61919"
                            android:textSize="14sp" />
                    </LinearLayout>





                    <EditText
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:ems="10"
                        android:backgroundTint="#fff"
                        android:inputType="textPersonName"
                        android:padding="10sp"
                        android:hint="Enter City"
                        android:singleLine="true"
                        android:focusableInTouchMode="false"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "


                        android:textSize="13sp"
                        android:fontFamily="@font/pop_reg"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/edit_back_grey"
                    android:layout_marginTop="10sp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:orientation="horizontal"
                        android:padding="5sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="3sp"
                            android:fontFamily="@font/pop_reg"
                            android:hint="State"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black"
                            android:textSize="12sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1sp"
                            android:layout_marginLeft="10sp"
                            android:layout_weight="1.0"
                            android:fontFamily="@font/bold"
                            android:hint=""
                            android:textColor="#B61919"
                            android:textColorHint="#B61919"
                            android:textSize="14sp" />
                    </LinearLayout>





                    <EditText
                        android:id="@+id/state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:padding="10sp"
                        android:hint="Enter State"
                        android:singleLine="true"
                        android:backgroundTint="#fff"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
                        android:focusableInTouchMode="false"
                        android:textSize="13sp"
                        android:fontFamily="@font/pop_reg"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:textColor="@android:color/black" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/edit_back_grey"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:orientation="horizontal"
                        android:padding="5sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="3sp"
                            android:fontFamily="@font/pop_reg"
                            android:hint="Industry Type"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black"
                            android:textSize="12sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1sp"
                            android:layout_marginLeft="10sp"
                            android:layout_weight="1.0"
                            android:fontFamily="@font/bold"
                            android:textColor="#B61919"
                            android:hint="*"
                            android:textColorHint="#B61919"
                            android:textSize="14sp" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:layout_marginBottom="5sp"

                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/industry_type"
                            android:layout_width="match_parent"
                            android:layout_height="42sp"

                            android:backgroundTint="#111010"
                            android:fontFamily="@font/pop_reg" />

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:visibility="gone"
                    android:background="@drawable/edit_back_grey"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:orientation="horizontal"
                        android:padding="5sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="3sp"
                            android:fontFamily="@font/pop_reg"
                            android:hint="Industry sub Type"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black"
                            android:textSize="12sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1sp"
                            android:layout_marginLeft="10sp"
                            android:layout_weight="1.0"
                            android:fontFamily="@font/bold"
                            android:textColor="#B61919"
                            android:textColorHint="#B61919"
                            android:textSize="14sp" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:layout_marginBottom="5sp"

                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/subtype"
                            android:layout_width="match_parent"
                            android:layout_height="42sp"

                            android:backgroundTint="#111010"
                            android:fontFamily="@font/pop_reg" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15sp"
                    android:background="@drawable/edit_back_blue"
                    android:padding="5sp">

                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_marginStart="5sp"
                        android:src="@drawable/bulb"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:orientation="vertical"
                        android:padding="5sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3sp"
                            android:fontFamily="@font/pop_reg"
                            android:hint="Get tailored pricing"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black"
                            android:textSize="12sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1sp"
                            android:layout_marginLeft="10sp"
                            android:layout_weight="1.0"
                            android:hint="We use this info to find a plan that is tailored for your company. having your email id let us send you a detailed quotes"
                            android:textColor="#316997"
                            android:textColorHint="#316997"
                            android:textSize="13sp" />


                    </LinearLayout>



                </LinearLayout>





            </LinearLayout>



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/go_back"

                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5sp"
                        android:src="@drawable/ic_baseline_arrow_back_24"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pop_reg"
                        android:hint="Go Back"
                        android:textStyle="bold"
                        android:layout_marginStart="5sp"
                        android:textColor="#3BB385"
                        android:textColorHint="#3BB385"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/next"

                   android:layout_width="100sp"

                    android:layout_height="45sp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10sp"

                    android:background="@drawable/btn_reg"
                    android:gravity="center"
                    android:transitionGroup="false"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pop_reg"
                        android:hint="Next"
                        android:textStyle="bold"
                        android:layout_marginStart="10sp"
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:textSize="16sp" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5sp"
                        android:src="@drawable/ic_arrow_forward_black_24d_rfq"/>



                </LinearLayout>
            </LinearLayout>


            </LinearLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>


</ScrollView>
