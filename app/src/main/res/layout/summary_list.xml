<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

android:background="#00FFFFFF"

    android:padding="8dp">


        <LinearLayout
            android:id="@+id/plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_back_green"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8sp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/frogm"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pop_reg"
                        android:text="Group Mediclaim"
                        android:textColor="#080E08"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:padding="2sp"
                        android:layout_gravity="center"
                        android:src="@drawable/green_rupees"
                        />


                    <TextView
                        android:id="@+id/cover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/pop_reg"
                        android:textColor="#30AC35"
                        android:text="6000"
                        android:textStyle="bold"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/dropdownBtn"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:padding="2sp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_green"
                        android:src="@drawable/down_arrow"
                        />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/groupCoverAdditionalInfo"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"

                    tools:listitem="@layout/member_list"/>

            </LinearLayout>
        </LinearLayout>



</RelativeLayout>


