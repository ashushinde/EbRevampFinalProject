<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300sp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#59E4E4E4"

                >
                <LinearLayout
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"



                    >
                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10sp"
                        android:orientation="vertical"
                        android:layout_marginEnd="5sp"
                        android:layout_marginTop="10sp"

                       >



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"

                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4sp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1.5"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pop_reg"
                                    android:textSize="12sp"
                                    android:layout_gravity="center"
                                    android:text="Discrepancy Comment  :"
                                    android:textStyle="bold"
                                    android:textColor="#030303"
                                    />

                                <TextView
                                    android:id="@+id/comment"
                                    android:layout_width="0dp"
                                    android:layout_weight="1.5"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pop_reg"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:gravity="start"
                                    android:layout_gravity="start"
                                    android:textColor="#FF5722"
                                    android:text="96"

                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4sp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1.5"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pop_reg"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_gravity="center"
                                    android:text="Status :"
                                    android:textColor="#030303"
                                    />

                                <TextView
                                    android:id="@+id/status"
                                    android:layout_width="0dp"
                                    android:layout_weight="1.5"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pop_reg"
                                    android:textSize="12sp"
                                    android:layout_gravity="start"
                                    android:textStyle="bold"
                                    android:gravity="start"
                                    android:textColor="#FF5722"
                                    android:text="Tata AIG General"

                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4sp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1.5"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pop_reg"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_gravity="center"
                                    android:text="Created At :"
                                    android:textColor="#030303"
                                    />
                                <TextView
                                    android:id="@+id/at"
                                    android:layout_width="0dp"
                                    android:layout_weight="1.5"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pop_reg"
                                    android:textSize="12sp"
                                    android:layout_gravity="start"
                                    android:text="6"
                                    android:textStyle="bold"
                                    android:gravity="start"
                                    android:textColor="#FF5722"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/doc_lin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4sp"
                                android:visibility="gone"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1.5"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pop_reg"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_gravity="center"
                                    android:text="Document :"
                                    android:textColor="#030303"
                                    />
                                <ImageView
                                    android:id="@+id/download"
                                    android:layout_width="0dp"
                                    android:layout_weight="1.5"
                                    android:layout_gravity="start"
                                   android:layout_height="wrap_content"
                                   android:src="@drawable/enroll_download"
                                    />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/options"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="5sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginEnd="5sp"
                        android:layout_marginBottom="5sp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/response"

                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="35sp"
                            android:layout_gravity="center"
                            android:background="@drawable/flex_butoon"
                            android:text="Resolved"
                            android:fontFamily="@font/pop_reg"
                            android:textColor="#BE2BFC"
                            android:textStyle="bold"
                            android:textSize="11sp" />



                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="3sp"
                    android:layout_height="180sp"
                    android:visibility="gone"
                    android:background="#de2323"/>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <RelativeLayout
            android:id="@+id/hh"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:gravity="end"
            android:layout_marginEnd="5sp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50sp"
            android:visibility="gone"

            >






        </RelativeLayout>



    </RelativeLayout>


</LinearLayout>


