 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
     android:orientation="vertical"
     android:background="@drawable/level3"
     android:layout_marginEnd="10sp"
     >
     <TextView

         android:layout_width="30sp"
         android:layout_height="30sp"
         android:layout_marginTop="5dp"
         android:fontFamily="@font/pop_reg"
         android:background="@drawable/arrow_next"
         android:textStyle="bold"
         android:layout_gravity="end"
         android:textColor="#6C1616" />
     <LinearLayout
         android:id="@+id/contactUsItemLinearLayout_tpa"
         xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="5dp"
         android:layout_marginEnd="5sp"
         android:orientation="vertical"

         android:padding="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="horizontal">

            <View
                android:layout_width="6sp"
                android:layout_height="15sp"
                android:layout_gravity="center"
                android:layout_marginStart="5sp"
                android:background="#ff8a84"/>

            <TextView
                android:id="@+id/admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="TPA"
                android:layout_marginStart="10sp"
                android:textColor="#160BAE"
                android:textSize="22sp" />


            <TextView
                android:id="@+id/tpaname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="TPA"
                android:layout_marginStart="10sp"
                android:textColor="#160BAE"
                android:textSize="22sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tpa_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bold"
            android:text="Name"
            android:textColor="#aa671d" />

        <TextView
            android:id="@+id/tpa_name_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/pop_reg"
            android:text="Joker"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tpa_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bold"
            android:text="Contact Number"
            android:textColor="#aa671d" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/contact_tpa_a"
                android:layout_width="wrap_content"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/pop_reg"
                android:text="9920765572"
                android:textColor="#000" />



            <TextView
                android:id="@+id/contact_tpa_b"
                android:layout_width="wrap_content"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/pop_reg"
                android:text="9920765572"
                android:textColor="#000" />

            <TextView
                android:id="@+id/contact_tpa_c"
                android:layout_width="wrap_content"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/pop_reg"
                android:text="abcd@gmail.com"
                android:textColor="#000" />


        </LinearLayout>

        <TextView
            android:id="@+id/tpa_email_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bold"
            android:text="Email - Id"
            android:textColor="#aa671d" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/email_tpa_a"
                android:layout_width="wrap_content"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/pop_reg"
                android:text="abcd@gmail.com"
                android:textColor="#000" />




            <TextView
                android:id="@+id/email_tpa_b"
                android:layout_width="wrap_content"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/pop_reg"
                android:text="abcd@gmail.com"
                android:textColor="#000" />

            <TextView
                android:id="@+id/email_tpa_c"
                android:layout_width="wrap_content"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/pop_reg"
                android:text="abcd@gmail.com"
                android:textColor="#000" />
        </LinearLayout>

        <TextView
            android:id="@+id/tpa_add_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bold"
            android:text="Address  "
            android:textColor="#aa671d" />

        <TextView
            android:id="@+id/address_tpa_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/pop_reg"
            android:text="Tata Motors Insurance Broking Marol Maroshi Road,"
            android:textColor="#000" />


        <TextView
            android:id="@+id/tpa_id_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bold"
            android:text="Address  "
            android:textColor="#aa671d" />

        <TextView
            android:id="@+id/address_tpa_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/pop_reg"
            android:text="Tata Motors Insurance  Marol Maroshi Road, Andheri (East), India"
            android:textColor="#000" />



        <TextView
            android:id="@+id/tpa_id_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bold"
            android:text="Address "
            android:textColor="#aa671d" />

        <TextView
            android:id="@+id/address_tpa_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/pop_reg"
            android:text="  Marol Maroshi Road, Andheri (East), Mumbai 400 059, India"
            android:textColor="#000" />



    </LinearLayout>

 </LinearLayout>

