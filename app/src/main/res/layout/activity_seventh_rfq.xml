<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="#F2F3FD"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/arrorw_rfq"
                android:padding="3sp"
                android:elevation="25sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/info_text"
                    android:layout_width="150sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10sp"

                    android:src="@drawable/fyntune_logo"
                    android:text="Cashless Form Revised"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginTop="5sp"
                android:padding="13sp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="3sp"
                    android:fontFamily="@font/pop_reg"
                    android:textStyle="bold"
                    android:hint="Would you like to offer other health benefits to your team ?"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:orientation="vertical"
                    android:padding="4sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5sp"
                        android:background="@drawable/edit_back_circle"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/basic_cover"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="35sp"
                            android:background="@drawable/card_select_data"

                            android:padding="3sp"
                            android:layout_gravity="center"
                            android:gravity="center"

                            android:layout_marginEnd="10sp"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/regular"
                                android:text="Basic Cover"
                                android:padding="3sp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="16sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/top_up"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="35sp"
                            android:background="@drawable/card_nonselect"
                            android:layout_marginStart="10sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="3sp"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/regular"
                                android:text="Top Up Cover"
                                android:padding="3sp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textColor="#100B0B"
                                android:textStyle="bold"
                                android:textSize="16sp" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10sp"
                    android:padding="5sp">
                    <ImageView
                        android:id="@+id/basic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10sp"
                        android:visibility="gone"

                        android:src="@drawable/no_image"
                        android:text="Cashless Form Revised"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />
                    <ImageView
                        android:id="@+id/toup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10sp"
                        android:visibility="gone"
                        android:src="@drawable/no_image"
                        android:text="Cashless Form Revised"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/core_recycle"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10sp"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/seventh_list" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/top_recycle"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10sp"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/seventh_list" />


                </LinearLayout>






            </LinearLayout>
      <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30sp"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/go_back"

                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5sp"
                        android:src="@drawable/ic_baseline_arrow_back_24"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pop_reg"
                        android:hint="Go Back"
                        android:textStyle="bold"
                        android:layout_marginStart="5sp"
                        android:textColor="#3BB385"
                        android:textColorHint="#3BB385"
                        android:textSize="16sp" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    <LinearLayout
        android:id="@+id/next"
        android:layout_width="200sp"
        android:layout_height="40sp"
        android:layout_gravity="bottom|center"
        android:layout_margin="@dimen/fab_margin"
        app:elevation="8dp"
        android:layout_marginEnd="10sp"
        android:background="@drawable/btn_reg"
        android:gravity="center"
        android:transitionGroup="false"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pop_reg"
            android:hint="Next"
            android:textStyle="bold"
            android:layout_marginStart="10sp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="16sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:src="@drawable/ic_arrow_forward_black_24d_rfq"/>



    </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


