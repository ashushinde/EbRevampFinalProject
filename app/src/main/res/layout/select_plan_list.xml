<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5sp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:background="@drawable/edit_back_grey"
        android:orientation="vertical"
       >

        <ImageView
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:background="@drawable/offer"
            android:layout_gravity="end"
            android:visibility="gone"
            android:layout_marginBottom="5sp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <ImageView
                android:layout_width="100sp"
                android:layout_height="50sp"
                android:src="@drawable/hero_logo"
                android:padding="5sp"
                />




        </LinearLayout>
        <LinearLayout
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/blue_dash"
            android:padding="5sp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"
                android:hint="Silver"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"
                    android:layout_gravity="start"
                    >




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3sp"
                        android:fontFamily="@font/pop_reg"
                        android:hint="Group Health Insurance"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/black"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="start"
                    >




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3sp"
                        android:fontFamily="@font/pop_reg"
                        android:hint="Dummy data is mock data generated at random as a substitute for live data in testing environments. In other words, dummy data acts as a placeholder for live"
                        android:gravity="start"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/black"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:background="@drawable/btn_reg"
                android:padding="5sp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_marginStart="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="10sp"
                            android:layout_height="20sp"
                            android:layout_gravity="center"
                            android:src="@drawable/white_rupee"
                            android:layout_marginEnd="2sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:layout_marginStart="10sp"
                            android:textStyle="bold"
                            android:text="2,41,772" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="10sp"
                        android:textStyle="bold"
                        android:text="GST Include)" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="120sp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="-5dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="15sp"
        android:background="@drawable/edit_back_grey"
        android:layout_marginEnd="15sp"
        android:layout_below="@id/cv_one_login">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#050202"
            android:layout_marginStart="10sp"
            android:textStyle="bold"
            android:text="View featues" />

        <ImageView
            android:layout_width="10sp"
            android:layout_height="20sp"
            android:layout_gravity="center"
            android:layout_marginStart="10sp"
            android:src="@drawable/down_arrow"
            android:layout_marginEnd="2sp"
            />
    </LinearLayout>
</LinearLayout>