<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="5sp"
        android:background="#FFEFEE"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"

        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/two_five"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5sp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:src="@drawable/twofive"/>
        <ImageView
            android:id="@+id/one_four"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5sp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:src="@drawable/onefour"/>
        <ImageView
            android:id="@+id/three_six"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5sp"
            android:layout_gravity="center"
            android:src="@drawable/threesix"/>
        <TextView
            android:id="@+id/frogm"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"

            android:textSize="13sp"
            android:fontFamily="@font/regular"
            android:textColor="#0C0606"

            android:layout_gravity="center"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Covid Releif"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">



                <TextView
                    android:id="@+id/head"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="match_parent"

                    android:hint="Individual"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColorHint="#261a1a"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="4,00,000"
                android:textColorHint="#3F51B5"
                android:textStyle="bold"
                android:textSize="12sp"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/prem_hide"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginStart="5sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:hint="Annual Premium"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColorHint="#261a1a"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/cvv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:hint="-"
                android:textColorHint="#3F51B5"
                android:textStyle="bold"
                android:textSize="12sp"
                />

        </LinearLayout>
        <ImageView
            android:id="@+id/dropdownBtn"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_gravity="center"
            android:background="@drawable/ic_baseline_add_24"
            android:layout_marginStart="4sp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EBEEFD"
        android:layout_marginTop="5sp"
        android:visibility="gone"


        android:layout_marginBottom="5sp"


        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        android:orientation="vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:hint="Insured Member Details"
            android:textColorHint="#3F51B5"
            android:textStyle="bold"
            android:textSize="12sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:padding="5sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:hint="Member Name"
                android:textColorHint="#000000"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="12sp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:hint="Relation"
                android:textColorHint="#000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                />


            <TextView
                android:id="@+id/sumhead"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:hint="Sum Insured"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/premium"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:hint="Annual Premium"
                android:textColorHint="#000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/groupCoverAdditionalInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1sp"
            android:layout_marginTop="1sp"
            tools:listitem="@layout/member_list_summary" />




    </LinearLayout>

    <LinearLayout
        android:id="@+id/nomineehide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EBEEFD"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:layout_marginStart="5sp"
        android:visibility="gone"

        android:layout_marginEnd="5sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:hint="Nominee Details"
            android:textColorHint="#3F51B5"
            android:textStyle="bold"
            android:textSize="12sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:padding="5sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:hint="Nominee Name"
                android:textColorHint="#000000"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="12sp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:hint="Relation"
                android:textColorHint="#000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/gName"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:hint="Gaurdian Name"
                android:textColorHint="#000000"
                android:textStyle="bold"

                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/grelation"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:hint="Guardian Relation with Nominee"
                android:textColorHint="#000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:hint="Share %"
                android:textColorHint="#000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/nomineeCoverAdditionalInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1sp"
            android:layout_marginTop="1sp"

            tools:listitem="@layout/nominne_list_summary" />




    </LinearLayout>


</LinearLayout>