<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <!--    <android.support.v7.widget.RecyclerView-->
    <!--        android:id="@+id/contactUsMainRecyclerView"-->
    <!--        android:layout_width="match_parent"-->
    <!--        tools:listitem="@layout/contact_us_second"-->
    <!--        android:layout_height="match_parent"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90sp"
                android:background="#fff"
                android:visibility="gone"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="180sp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/info_text"
                        android:layout_width="50sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/personal_icon"
                        android:text="Cashless Form Revised"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="70sp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="70sp">

                    <TextView
                        android:id="@+id/thumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:fontFamily="@font/bold"
                        android:text="Contact us"
                        android:textColor="#17859e"
                        android:textSize="20sp" />
                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/companyHeadLinear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_back"
                        android:orientation="vertical"
                        android:layout_marginTop="15sp"
                        android:padding="8sp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="10sp"
                                android:fontFamily="@font/bold"
                                android:singleLine="true"
                                android:text="Company Head Name"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="1sp"
                                android:layout_marginLeft="1sp"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="12dp" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/company_head"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#ffffff"
                            android:focusableInTouchMode="false"
                            android:hint="Company Head Name"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_back"
                        android:orientation="vertical"
                        android:layout_marginTop="8sp"
                        android:padding="8sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="10sp"
                                android:fontFamily="@font/bold"
                                android:singleLine="true"
                                android:text="Company Address"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="1sp"
                                android:layout_marginLeft="1sp"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="12dp" />
                        </LinearLayout>


                        <EditText
                            android:id="@+id/company_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#ffffff"
                            android:focusableInTouchMode="false"
                            android:hint="Company Address"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:textSize="13sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:background="@drawable/edit_back"
                        android:orientation="vertical"
                        android:padding="8sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="10sp"
                                android:fontFamily="@font/bold"
                                android:singleLine="true"
                                android:text="Contact Person Name"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="1sp"
                                android:layout_marginLeft="1sp"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="12dp" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/company_con_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#ffffff"
                            android:ems="10"
                            android:focusableInTouchMode="false"
                            android:hint="Contact Person Name"

                            android:textSize="13sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8sp"
                            android:background="@drawable/edit_back"
                            android:orientation="vertical"
                            android:padding="8sp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/bold"
                                    android:singleLine="true"
                                    android:text=" Email"
                                    android:textColor="@android:color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="1sp"
                                    android:layout_marginLeft="1sp"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@android:color/holo_red_dark"
                                    android:textSize="12dp" />


                            </LinearLayout>

                            <EditText
                                android:id="@+id/email"
                                android:layout_width="match_parent"
                                android:layout_height="40sp"
                                android:backgroundTint="#ffffff"
                                android:drawablePadding="10sp"
                                android:ems="10"
                                android:focusableInTouchMode="false"
                                android:hint="Email"
                                android:inputType="textEmailAddress"

                                android:textColor="@android:color/black"
                                android:textSize="13sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8sp"
                            android:background="@drawable/edit_back"
                            android:orientation="vertical"
                            android:padding="8sp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/bold"
                                    android:singleLine="true"
                                    android:text=" Mobile Number"
                                    android:textColor="@android:color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="1sp"
                                    android:layout_marginLeft="1sp"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@android:color/holo_red_dark"
                                    android:textSize="12dp" />
                            </LinearLayout>

                            <EditText
                                android:id="@+id/contact_no"
                                android:layout_width="match_parent"
                                android:layout_height="40sp"
                                android:backgroundTint="#ffffff"
                                android:drawablePadding="10sp"
                                android:ems="10"
                                android:focusableInTouchMode="false"
                                android:hint=" Mobile Number"
                                android:inputType="phone"
                                android:maxLength="10"

                                android:textColor="@android:color/black"
                                android:textSize="13sp" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="150sp"
            android:layout_height="45sp"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_reg"
            android:elevation="10sp"
            android:text="Save"
            android:textColor="#fff"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/add_layer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"/>
    </LinearLayout>
</RelativeLayout>