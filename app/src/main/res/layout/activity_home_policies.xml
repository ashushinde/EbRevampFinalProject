<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F2F3FD"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_main_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:background="@drawable/arrorw"
            android:layout_marginStart="20sp"
            android:padding="3sp"
            android:elevation="20sp"
            android:layout_marginEnd="20sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/info_text"
                android:layout_width="60sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:layout_marginStart="10sp"

                android:src="@drawable/toolbar_arrow"
                android:text="Cashless Form Revised"
                android:textColor="#fff"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />
            <TextView
                android:id="@+id/thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/bold"
                android:text="Policy Detail"
                android:textColor="#691CFC"
                android:textStyle="bold"
                android:layout_marginStart="10sp"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/info_textl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:padding="5sp"
            android:visibility="gone"

            android:src="@drawable/no_image"
            android:text="Cashless Form Revised"
            android:textColor="#fff"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/policy_recycle"
            android:layout_width="match_parent"
            android:layout_marginTop="25sp"
            android:layout_height="match_parent"
            tools:listitem="@layout/home_policy_list" />

    </LinearLayout>


</RelativeLayout>