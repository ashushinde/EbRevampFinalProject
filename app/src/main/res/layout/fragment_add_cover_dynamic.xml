<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F3FD"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginBottom="80dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="20sp"
            android:fontFamily="@font/pop_reg"
            android:singleLine="true"
            android:text="Add Cover"


            android:textColor="#011DB5"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="10sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:fontFamily="@font/pop_reg"
            android:singleLine="true"
            android:layout_marginBottom="20sp"

            android:text="Add Cover into policy below"
            android:textColor="#59595A"
            android:textSize="13sp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/boxes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            tools:listitem="@layout/box_list" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hos_claim_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            tools:listitem="@layout/add_cover_list" />

        <ImageView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:padding="5sp"
            android:src="@drawable/no_image"
            android:text="Cashless Form Revised"
            android:textColor="#fff"
            android:textStyle="bold"
            android:visibility="gone"
            tools:ignore="RtlCompat" />
    </LinearLayout>


</LinearLayout>