<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#28E3E1E1"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:text="@string/hello_blank_fragment" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:text="@string/hello_blank_fragment" >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    app:cardBackgroundColor="#fcfcfc"
                    app:cardCornerRadius="20sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginTop="10sp"
                    app:cardPreventCornerOverlap="false"

                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:text="@string/hello_blank_fragment" >
                            <View
                                android:layout_width="10sp"
                                android:layout_height="40sp"
                                android:background="#F44336"/>


                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10sp"
                                android:text="Edit"
                                android:textColor="#0B0202"
                                android:layout_gravity="center"
                                android:fontFamily="@font/bold"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/dialogUserName"
                                app:srcCompat="@drawable/ic_close_black_24dp"

                                android:layout_width="30sp"
                                android:background="@drawable/circle_green"
                                android:layout_height="30sp"
                                tools:ignore="VectorDrawableCompat" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5sp"
                            android:layout_marginTop="30sp"
                            android:layout_marginStart="5sp"
                            android:layout_marginEnd="5sp"
                            android:background="@drawable/edit_back_wave"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Remark"
                                android:textColor="#252121"
                                android:padding="5sp"
                                android:textStyle="bold"
                                />

                            <EditText
android:id="@+id/query_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:hint="Enter Remark"
                                android:textColorHint="#858383"
                                android:textColor="#858383"
                                android:padding="5sp"
                                android:background="#00FFFFFF"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8sp"
                            android:layout_marginStart="5sp"
                            android:layout_marginEnd="5sp"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/edit_back_wave"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Status"
                                android:textColor="#252121"
                                android:padding="5sp"
                                android:textStyle="bold"
                                />

                            <Spinner
android:id="@+id/status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"

                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8sp"
                            android:layout_gravity="center"
                            android:layout_marginStart="2sp"
                            android:layout_marginEnd="2sp"
                            android:layout_marginTop="20sp"
                            android:layout_marginBottom="20sp"

                            >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:text="Aprove"
                                android:layout_gravity="center"
                                android:textColor="#252121"

                                android:padding="5sp"

                                android:textSize="16sp"
                                />

                            <RadioGroup
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imageView"
                                android:orientation="horizontal"

                              >

                                <RadioButton

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Yes"


                                    android:id="@+id/radioButton"
                                    android:layout_gravity="center_horizontal"
                                    android:checked="false"
                                    android:textSize="25dp" />

                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="No"
                                    android:id="@+id/radioButton2"
                                    android:layout_gravity="center_horizontal"
                                    android:checked="false"
                                    android:textSize="25dp"
                                     />
                            </RadioGroup>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/options"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10sp"
                            android:layout_marginStart="10sp"
                            android:layout_marginEnd="10sp"
                            android:layout_marginBottom="20sp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn_policy"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="45sp"
                                android:layout_gravity="start"
                                android:layout_marginEnd="10sp"
                                android:layout_marginRight="5sp"
                                android:background="@drawable/btn_cancle"
                                android:fontFamily="@font/pop_reg"
                                android:gravity="center"
                                android:text="Cancle"
                                android:elevation="10sp"

                                android:textColor="#fff"
                                android:textSize="18sp"
                                android:textStyle="bold" />




                            <Button
                                android:id="@+id/submit"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="45sp"
                                android:layout_gravity="center"
                                android:layout_marginStart="10sp"
                                android:layout_marginLeft="5sp"
                                android:background="@drawable/btn_reg"
                                android:fontFamily="@font/pop_reg"
                                android:gravity="center"
                                android:text="Add"
                                android:elevation="10sp"
                                android:textColor="#fff"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
