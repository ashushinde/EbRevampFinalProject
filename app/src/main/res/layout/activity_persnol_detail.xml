<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F3FD"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:background="@drawable/arrorw"
                android:layout_marginStart="20sp"
                android:padding="3sp"
                android:layout_marginEnd="20sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/info_text"
                    android:layout_width="60sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10sp"

                    android:src="@drawable/toolbar_arrow"
                    android:text="Cashless Form Revised"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:id="@+id/thumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/bold"
                    android:text="Personal Details"
                    android:textColor="#5B2AAC"
                    android:layout_marginStart="10sp"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="10dp"
                android:padding="8sp"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8sp"
                        android:background="@drawable/edit_back_grey"
                        android:orientation="vertical">
                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" Employee Name"
                                android:singleLine="true"
                                android:drawablePadding="10sp"
                                android:textSize="14sp"
                                android:fontFamily="@font/bold"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:singleLine="true"
                                android:layout_marginStart="1sp"
                                android:textSize="12dp"
                                android:textColor="@android:color/holo_red_dark"
                                android:layout_marginLeft="1sp" />
                        </LinearLayout>



                        <EditText
                            android:id="@+id/emp_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="full name"
                            android:imeOptions="actionNext"
                            android:backgroundTint="#ffffff"

                            android:textSize="13sp"
                            android:singleLine="true"
                            android:focusableInTouchMode="false"

                            android:inputType="text" />





                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:padding="8sp"
                        android:background="@drawable/edit_back_grey"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" Company Name"
                                android:singleLine="true"
                                android:textSize="14sp"
                                android:fontFamily="@font/bold"
                                android:textStyle="bold"
                                android:drawablePadding="10sp"
                                android:textColor="@android:color/black"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:singleLine="true"
                                android:layout_marginStart="1sp"

                                android:textSize="12dp"
                                android:textColor="@android:color/holo_red_dark"
                                android:layout_marginLeft="1sp" />
                        </LinearLayout>
                        <EditText
                            android:id="@+id/company_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"

                            android:focusableInTouchMode="false"
                            android:textSize="13sp"
                            android:hint="Company Name"


                            android:backgroundTint="#ffffff"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:padding="8sp"
                        android:background="@drawable/edit_back_grey"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" Birth Date"
                                android:singleLine="true"
                                android:textSize="14sp"
                                android:fontFamily="@font/bold"
                                android:textStyle="bold"
                                android:drawablePadding="10sp"
                                android:textColor="@android:color/black"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:singleLine="true"
                                android:layout_marginStart="1sp"

                                android:textSize="12dp"
                                android:textColor="@android:color/holo_red_dark"
                                android:layout_marginLeft="1sp" />
                        </LinearLayout>
                        <EditText
                            android:id="@+id/dob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:ems="10"
                            android:focusableInTouchMode="false"
                            android:textSize="13sp"
                            android:hint="Birth Date"


                            android:backgroundTint="#ffffff"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8sp"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/edit_back_grey"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" Email"
                                    android:singleLine="true"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/bold"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/black"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:singleLine="true"
                                    android:layout_marginStart="1sp"

                                    android:textSize="12dp"
                                    android:textColor="@android:color/holo_red_dark"
                                    android:layout_marginLeft="1sp" />



                            </LinearLayout>

                            <EditText
                                android:id="@+id/email"
                                android:layout_width="match_parent"
                                android:layout_height="40sp"
                                android:singleLine="true"
                                android:hint="Email"
                                android:backgroundTint="#ffffff"
                                android:focusableInTouchMode="false"
                                android:textSize="13sp"

                                android:inputType="textEmailAddress"
                                android:drawablePadding="10sp"
                                android:textColor="@android:color/black"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8sp"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/edit_back_grey"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" Alternate Email"
                                    android:singleLine="true"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/bold"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/black"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:singleLine="true"
                                    android:layout_marginStart="1sp"

                                    android:textSize="12dp"
                                    android:textColor="@android:color/holo_red_dark"
                                    android:layout_marginLeft="1sp" />



                            </LinearLayout>

                            <EditText
                                android:id="@+id/alternate_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:hint="Alternate Email"
                                android:backgroundTint="#ffffff"
                                android:textSize="13sp"
                                android:focusableInTouchMode="false"

                                android:inputType="textEmailAddress"
                                android:textColor="@android:color/black"
                                />
                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8sp"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/edit_back_grey"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" Contact Number"
                                    android:fontFamily="@font/bold"
                                    android:textStyle="bold"
                                    android:singleLine="true"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/black"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:singleLine="true"
                                    android:layout_marginStart="1sp"
                                    android:textSize="12dp"
                                    android:textColor="@android:color/holo_red_dark"
                                    android:layout_marginLeft="1sp" />
                            </LinearLayout>




                            <EditText
                                android:id="@+id/contact_no"
                                android:layout_width="match_parent"
                                android:layout_height="40sp"
                                android:hint=" Contact Number"
                                android:textSize="13sp"
                                android:backgroundTint="#ffffff"
                                android:focusableInTouchMode="false"
                                android:singleLine="true"
                                android:ems="10"
                                android:inputType="phone"
                                android:maxLength="10"
                                android:drawablePadding="10sp"
                                android:textColor="@android:color/black"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8sp"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/edit_back_grey"
                            android:orientation="vertical">
                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" Emergency Contact Person"
                                    android:singleLine="true"
                                    android:drawablePadding="10sp"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/bold"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/black"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:singleLine="true"
                                    android:layout_marginStart="1sp"
                                    android:textSize="12dp"
                                    android:textColor="@android:color/holo_red_dark"
                                    android:layout_marginLeft="1sp" />
                            </LinearLayout>



                            <EditText
                                android:id="@+id/emp_name_em"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Emergency Contact Person"
                                android:imeOptions="actionNext"
                                android:backgroundTint="#ffffff"

                                android:textSize="13sp"
                                android:singleLine="true"
                                android:focusableInTouchMode="false"

                                android:inputType="text" />





                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8sp"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/edit_back_grey"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=" Emergency Contact Number"
                                android:fontFamily="@font/bold"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:textSize="14sp"
                                android:textColor="@android:color/black"
                                />

                            <EditText
                                android:id="@+id/alternate_mobile"
                                android:layout_width="match_parent"
                                android:layout_height="40sp"
                                android:hint=" Emergency Contact Number"
                                android:textSize="13sp"
                                android:backgroundTint="#ffffff"
                                android:singleLine="true"
                                android:focusableInTouchMode="false"

                                android:inputType="phone"

                                android:drawablePadding="10sp"
                                android:textColor="@android:color/black"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8sp"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/edit_back_grey"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Address"
                                android:fontFamily="@font/bold"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:textSize="14sp"
                                android:textColor="@android:color/black"
                                />

                            <EditText
                                android:id="@+id/adress"
                                android:layout_width="match_parent"
                                android:layout_height="40sp"
                                android:hint="Address"
                                android:textSize="13sp"
                                android:backgroundTint="#ffffff"
                                android:singleLine="true"
                                android:focusableInTouchMode="false"
                                android:inputType="phone"
                                android:drawablePadding="10sp"
                                android:textColor="@android:color/black"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8sp"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/edit_back_grey"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pincode"
                                android:fontFamily="@font/bold"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:textSize="14sp"
                                android:textColor="@android:color/black"
                                />

                            <EditText
                                android:id="@+id/pincode"
                                android:layout_width="match_parent"
                                android:layout_height="40sp"
                                android:hint="Pincode"
                                android:textSize="13sp"
                                android:backgroundTint="#ffffff"
                                android:singleLine="true"
                                android:focusableInTouchMode="false"
                                android:ems="10"
                                android:inputType="phone"
                                android:maxLength="10"
                                android:drawablePadding="10sp"
                                android:textColor="@android:color/black"
                                />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8sp"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/edit_back_grey"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="City"
                                android:fontFamily="@font/bold"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:textSize="14sp"
                                android:textColor="@android:color/black"
                                />

                            <EditText
                                android:id="@+id/city"
                                android:layout_width="match_parent"
                                android:layout_height="40sp"
                                android:hint="City"
                                android:textSize="13sp"
                                android:backgroundTint="#ffffff"
                                android:singleLine="true"
                                android:focusableInTouchMode="false"
                                android:ems="10"
                                android:inputType="phone"
                                android:maxLength="10"
                                android:drawablePadding="10sp"
                                android:textColor="@android:color/black"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8sp"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/edit_back_grey"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="State"
                                android:fontFamily="@font/bold"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:textSize="14sp"
                                android:textColor="@android:color/black"
                                />

                            <EditText
                                android:id="@+id/statek"
                                android:layout_width="match_parent"
                                android:layout_height="40sp"
                                android:hint="State"
                                android:textSize="13sp"
                                android:backgroundTint="#ffffff"
                                android:singleLine="true"
                                android:focusableInTouchMode="false"
                                android:inputType="phone"
                                android:drawablePadding="10sp"
                                android:textColor="@android:color/black"
                                />
                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="150sp"
            android:layout_height="45sp"
            android:elevation="10sp"
            android:layout_gravity="right"
            android:background="@drawable/btn_reg"
            android:textColor="#fff"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:text="Save" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:id="@+id/add_layer"
            android:layout_alignParentBottom="true"
            >
        </LinearLayout>
    </LinearLayout>
</ScrollView>