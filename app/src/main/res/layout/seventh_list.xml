<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5sp"
    android:layout_marginBottom="10sp"
    android:background="@drawable/edit_back_grey"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"


        android:padding="5sp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
   >


        <ImageView
            android:id="@+id/logo"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="5sp"
            android:src="@drawable/heart"
            android:padding="5sp"
            android:background="@drawable/circle_light"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="#EDF2F4"
            android:padding="5sp">


            <ImageView
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_marginStart="5sp"
                android:src="@drawable/rupee"
                android:padding="5sp"
               />


            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"
                android:hint="199"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/pop_reg"
                android:hint="per employee"
                android:layout_marginStart="5sp"
                android:textStyle="bold"
                android:gravity="start"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textSize="12sp" />





        <ImageView
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_marginStart="5sp"
            android:src="@drawable/plus"
            android:padding="5sp"
            android:visibility="gone"
            />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3sp"
        android:fontFamily="@font/pop_reg"
        android:hint="Group Health Insurance Top-Up"
        android:layout_marginStart="5sp"
        android:textStyle="bold"
        android:gravity="start"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="13sp" />
    <TextView
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3sp"
        android:fontFamily="@font/pop_reg"
        android:hint="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type."
        android:layout_marginStart="5sp"
        android:textStyle="bold"
        android:gravity="start"
        android:textColor="@android:color/darker_gray"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/next"
        android:layout_width="200sp"
        android:layout_height="40sp"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:elevation="8dp"
        android:layout_marginEnd="10sp"
        android:background="@drawable/btn_reg"
        android:gravity="center"
        android:transitionGroup="false"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pop_reg"
            android:hint="Next"
            android:textStyle="bold"
            android:layout_marginStart="10sp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="16sp"
            tools:ignore="RtlCompat" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:src="@drawable/ic_arrow_forward_black_24d_rfq"/>



    </LinearLayout>


</LinearLayout>