<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F3FD"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F3FD"

        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/announce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        tools:listitem="@layout/announement"

                        />
                    <LinearLayout
                        android:id="@+id/noannounce"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/home_back"


                        android:layout_height="200sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                              android:layout_gravity="center"

                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="Welcome "
                                android:textColor="#FDFDFD"
                                android:layout_marginStart="30sp"
                                android:textStyle="bold"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/emp_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:textColor="#FDFDFD"

                                android:textStyle="bold"

                                android:textSize="17sp" />
                            </LinearLayout>
                            <ImageView
                                android:id="@+id/mylogo"
                                android:layout_width="100sp"
                                android:layout_height="70sp"
                                android:padding="7sp"

                                />
                            <RelativeLayout
                                android:id="@+id/notificationBadge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="10sp"
                               android:visibility="gone"
                                android:layout_marginTop="10sp"
                                android:layout_centerVertical="true">
                                <RelativeLayout
                                    android:id="@+id/badgeLayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="8dp">
                                    <Button
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:background="@drawable/bell"/>
                                </RelativeLayout>
                                <TextView
                                    android:id="@+id/tvBadgeNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignTop="@+id/badgeLayout"
                                    android:layout_alignEnd="@id/badgeLayout"
                                    android:background="@drawable/action_notification"
                                    android:text="0"
                                    android:textColor="#3F51B5"
                                    android:textSize="19sp"

                                    android:textStyle="bold"/>
                            </RelativeLayout>
                        </LinearLayout>

       </LinearLayout>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F2F3FD"

                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"


                        android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:orientation="vertical">


                        <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="20sp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:padding="7sp"
                        android:background="@drawable/circle_yellow"
                        android:src="@drawable/group_cover_datata"
                        />


                    <TextView
                        android:id="@+id/cover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pop_reg"
                        android:text="Group Cover"
                        android:textColor="#54368B"
                        android:textStyle="bold"
                        android:layout_marginStart="20sp"
                        android:layout_gravity="center"
                        android:textSize="15sp" />
                </LinearLayout>


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/ghi_recycle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            tools:listitem="@layout/ghi_list_new"

                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/info_text"
                                android:layout_width="200sp"
                                android:layout_height="200sp"
                                android:layout_marginStart="10sp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginTop="10sp"
                                android:padding="5sp"
                                android:layout_gravity="center"
                                android:src="@drawable/no_image"
                                android:visibility="gone"
                                android:textColor="#fff"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/vouln"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="20sp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:padding="7sp"
                        android:background="@drawable/circle_yellow"
                        android:src="@drawable/group_cover_datata"
                        />


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pop_reg"
                        android:text="Voluntary Cover"
                        android:textColor="#54368B"
                        android:textStyle="bold"
                        android:layout_marginStart="20sp"
                        android:layout_gravity="center"
                        android:textSize="15sp" />
                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/voluntary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    tools:listitem="@layout/ghi_list_new"

                    />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/info_text_vol"
                                android:layout_width="200sp"
                                android:layout_height="200sp"
                                android:layout_marginStart="10sp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginTop="10sp"
                                android:padding="5sp"
                                android:layout_gravity="center"
                                android:src="@drawable/no_image"
                                android:visibility="gone"
                                android:textColor="#fff"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/summary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20sp"
                                android:layout_marginTop="20sp"
                                android:orientation="horizontal">

                                <ImageView

                                    android:layout_width="40sp"
                                    android:layout_height="40sp"
                                    android:padding="7sp"
                                    android:background="@drawable/circle_yellow"
                                    android:src="@drawable/group_cover_datata"
                                    />


                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pop_reg"
                                    android:text="Summary"
                                    android:textColor="#54368B"
                                    android:textStyle="bold"
                                    android:layout_marginStart="20sp"
                                    android:layout_gravity="center"
                                    android:textSize="15sp" />
                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="7sp"

                                android:orientation="vertical">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/policy_cycle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1sp"
                                    android:layout_marginTop="2sp"
                                    tools:listitem="@layout/policy_list_summary" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/policy_cycle_term"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1sp"
                                    android:layout_marginTop="2sp"
                                    tools:listitem="@layout/policy_list_summary" />


                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/policy_cycle_Medi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1sp"
                                    android:layout_marginTop="2sp"
                                    tools:listitem="@layout/policy_list_summary" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/policy_cycle_Personal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1sp"
                                    android:layout_marginTop="2sp"
                                    tools:listitem="@layout/policy_list_summary" />


                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/policy_cycle_Group"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1sp"
                                    android:layout_marginTop="2sp"
                                    tools:listitem="@layout/policy_list_summary" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/policy_cycle_top"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1sp"
                                    android:layout_marginTop="2sp"
                                    tools:listitem="@layout/policy_list_summary" />
                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>