                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="center"
                            android:text="(file format :pdf)"
                            android:textColor="#FC754B"

                            android:textSize="11sp" />



                    </LinearLayout>

