                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="1sp"
                                    android:layout_marginLeft="1sp"
                                    android:singleLine="true"

                                    android:text="*"
                                    android:textColor="@android:color/holo_red_dark"
                                    android:textSize="12dp" />
                            </LinearLayout>

                            <LinearLayout
