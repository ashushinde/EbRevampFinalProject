                                android:visibility="gone"
                                android:singleLine="true"
                                android:textAllCaps="true"
                                android:textColor="#818181"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"

                        android:orientation="vertical"
                        android:padding="8sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:layout_marginTop="10sp"

                                    android:fontFamily="@font/bold"
                                    android:text="Bank Statement"
                                    android:textColor="@android:color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="9sp"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="10sp"
                                    android:text=" *"
                                    android:textColor="#b72424"
                                    android:textStyle="bold" />

                            </LinearLayout>



                            <TextView
                                android:id="@+id/bankBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:gravity="center"
                                android:visibility="gone"
                                android:text="Last 3 Month Statement"
                                android:textColor="#939393"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginStart="1sp"
                                android:layout_marginLeft="1sp"
                                android:layout_marginBottom="3sp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingBottom="5sp">

                                <RelativeLayout
                                    android:id="@+id/adhaarBackLayout_cheque"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="1sp"
                                    android:layout_marginLeft="1sp"
                                    android:layout_marginTop="5sp"
                                    android:layout_marginBottom="5sp"
                                    android:layout_weight="1.5"
                                    android:background="@drawable/dash_shadow"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingBottom="5sp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                       >


                                    <ImageView
                                        android:id="@+id/bankPreview"
                                        android:layout_width="match_parent"
                                        android:layout_height="100sp"
                                        android:src="@drawable/no_icon"


                                        />

                                        <TextView
                                            android:id="@+id/pdf_document"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="PDF"
                                            android:gravity="center"
                                            android:textColor="#461010"
                                            android:visibility="gone"
                                            />

                                        <ImageView
                                            android:id="@+id/next_document"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:layout_marginTop="5sp"
                                            android:layout_marginStart="5sp"
                                            android:visibility="gone"
                                            android:src="@drawable/ic_arrow_forward_black_24dp"
                                            android:layout_toRightOf="@+id/pdf_document"
                                            />



                                        <LinearLayout
                                        android:id="@+id/upload_document_image"
                                        android:layout_width="match_parent"
                                        android:layout_marginStart="15sp"
                                        android:layout_marginEnd="15sp"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:background="#DDFFDE"
                                        android:layout_marginTop="10sp"
                                        android:padding="3sp"
                                        android:orientation="horizontal">


                                        <ImageView
                                            android:id="@+id/uc"
                                            android:layout_width="18sp"
                                            android:layout_height="18sp"
                                            android:layout_marginStart="1sp"
                                            android:layout_marginLeft="1sp"
                                            android:singleLine="true"
                                            android:src="@drawable/plusicon"
                                            android:layout_marginEnd="5sp"
                                            android:textColor="@android:color/holo_red_dark"
                                            />

                                        <TextView
                                            android:id="@+id/up"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:text="Select Bank Document To Upload"
                                            android:textColor="#339B37"
                                            android:textSize="13sp"
                                            android:fontFamily="@font/pop_reg"
                                            android:textStyle="bold" />


                                    </LinearLayout>
                                    </LinearLayout>





                                </RelativeLayout>

                            </LinearLayout>





