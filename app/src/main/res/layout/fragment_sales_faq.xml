<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F3FD"
    tools:context=".Fragment.FaqFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"

        android:orientation="vertical"
        android:padding="10sp">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
android:id="@+id/faq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_card"
                android:layout_gravity="end"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pop_reg"
                    android:text="Add Faq"
                    android:layout_marginStart="10sp"
                    android:layout_gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:padding="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    android:fontFamily="@font/pop_reg"
                  android:src="@drawable/plus" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
android:background="@drawable/edit_back_wave"
                android:layout_marginTop="10sp"
                android:layout_gravity="end"
                android:padding="5sp"
                android:orientation="vertical">




                <EditText
                    android:id="@+id/questions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pop_reg"
                    android:hint="Enter Question"
                    android:layout_marginTop="10sp"
                    android:padding="8sp"
                    android:background="@drawable/edit_back"
                    android:layout_marginStart="10sp"
                    android:textColor="#0C0505"
                    android:textSize="13sp"
                    android:layout_marginEnd="10sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pop_reg"
                    android:hint="Enter Anser"
                    android:layout_marginTop="10sp"
                    android:padding="8sp"
                    android:background="@drawable/edit_back"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:textColor="#0C0505"
                    android:textSize="13sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:id="@+id/submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_reg"
                    android:layout_gravity="end"
                    android:padding="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pop_reg"
                        android:text="Submit"

                        android:layout_gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hos_claim_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                tools:listitem="@layout/faq_list" />
        </LinearLayout>




    </LinearLayout>

</LinearLayout>