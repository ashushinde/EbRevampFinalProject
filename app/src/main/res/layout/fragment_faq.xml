<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F3FD"
    tools:context=".Fragment.FaqFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"

        android:orientation="vertical"
        android:padding="10sp">
    <LinearLayout
        android:id="@+id/policy_type_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/edit_back_grey"
        android:orientation="vertical"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:padding="5sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:drawablePadding="10sp"
            android:fontFamily="@font/pop_reg"
            android:gravity="center"
            android:layout_marginTop="3sp"
            android:hint="Select Policy Type"
            android:textColorHint="#2A41BD"
            android:textSize="13sp"

            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:layout_marginBottom="5sp"

            android:orientation="horizontal">

            <Spinner
                android:id="@+id/relation_type_spin"
                android:layout_width="match_parent"
                android:layout_height="42sp"
                android:layout_marginStart="5sp"
                android:backgroundTint="#2C2B2A" />



        </LinearLayout>


    </LinearLayout>

        <ImageView
            android:id="@+id/no_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5sp"
              android:src="@drawable/no_image" />






                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/hos_claim_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    tools:listitem="@layout/faq_list" />





    </LinearLayout>

</LinearLayout>