<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/coordinatorLayout"
    >


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_one_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"


                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="15dp"

                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:padding="10sp"


                    android:orientation="vertical"
                    android:layout_marginTop="10sp"
                    >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6sp"

                    android:orientation="horizontal"

                    >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pop_reg"
                        android:textColor="#1E1917"
                        android:text="Relation "
                        android:textStyle="bold"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/relation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pop_reg"
                        android:textColor="#DF2C1E"
                        android:layout_marginStart="10sp"
                       android:paddingStart="10sp"
                        android:paddingEnd="10sp"
                        android:paddingTop="3sp"
                        android:paddingBottom="3sp"
                        android:textStyle="bold"
                        android:text="Self"
                        android:background="@drawable/card_light_red"
                        android:textSize="13sp" />

                </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:orientation="horizontal"

                        >

                        <ImageView
                            android:id="@+id/edit"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_gravity="center"
                            android:layout_marginStart="5sp"
                            android:layout_marginLeft="5sp"

                            android:gravity="end"
                            android:padding="5sp"
                            app:srcCompat="@drawable/dark_edit"
                            android:layout_marginRight="5sp"
                            tools:ignore="VectorDrawableCompat" />

                        <ImageView
                            android:id="@+id/delete"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_gravity="center"
                            android:layout_marginStart="5sp"
                            android:layout_marginLeft="5sp"
                            android:gravity="end"
                            android:padding="5sp"
                            app:srcCompat="@drawable/dark_delete"
                            android:layout_marginRight="5sp"
                            tools:ignore="VectorDrawableCompat" />


                    </LinearLayout>
                </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:background="@drawable/dash_line_dark"
                        android:layout_height="6sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5sp"

                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"
                            android:text="Policy Number -"
                            android:textColor="#787674"
                            android:textSize="12sp"
                            android:textStyle="bold"


                            />

                        <TextView
                            android:id="@+id/policy_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"

                            android:text="9975TH55"
                            android:textColor="#070303"
                            android:textStyle="bold"
                            android:textSize="12sp"

                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"
                            android:text="Employee Code -"
                            android:textColor="#787674"
                            android:textSize="12sp"
                            android:textStyle="bold"


                            />

                        <TextView
                            android:id="@+id/employee_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"

                            android:text="KN-55"
                            android:textColor="#070303"
                            android:textStyle="bold"
                            android:textSize="12sp"

                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"
                            android:text="Employee Name -"
                            android:textColor="#787674"
                            android:textSize="12sp"
                            android:textStyle="bold"


                            />

                        <TextView
                            android:id="@+id/employee_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"

                            android:text="Asawari Shinde"
                            android:textColor="#070303"
                            android:textStyle="bold"
                            android:textSize="12sp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"
                            android:text="Check Up Type -"
                            android:textColor="#787674"
                            android:textSize="12sp"
                            android:textStyle="bold"


                            />

                        <TextView
                            android:id="@+id/checkup_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"

                            android:text="Health Check up (Routine)"
                            android:textColor="#070303"
                            android:textStyle="bold"
                            android:textSize="12sp"

                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"
                            android:text="Appointment Status -"
                            android:textColor="#787674"
                            android:textSize="12sp"
                            android:textStyle="bold"


                            />

                        <TextView
                            android:id="@+id/app_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/pop_reg"
                            android:gravity="start"
                            android:text="Approved"
                            android:textColor="#4CAF50"
                            android:textStyle="bold"
                            android:textSize="12sp"

                            />



                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/hide"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5sp"


                         android:layout_marginTop="10sp"
                        android:background="@drawable/card_light_orange"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:fontFamily="@font/pop_reg"
                                android:gravity="start"
                                android:text="Alternate Health Check-up Date"
                                android:textColor="#DF2C1E"
                                android:textSize="11sp"
                                android:textStyle="bold"


                                />

                            <TextView
                                android:id="@+id/alter_healthchekup_date"
                                android:layout_width="0dp"
                                android:layout_weight="1.3"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:fontFamily="@font/pop_reg"
                                android:gravity="start"
                                android:drawableStart="@drawable/calendardt"
                                android:drawablePadding="5sp"

                                android:textColor="#070303"
                                android:textStyle="bold"
                                android:textSize="11sp"

                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:fontFamily="@font/pop_reg"
                                android:gravity="start"
                                android:text="Health Check-up Date &amp; Time"
                                android:textColor="#DF2C1E"
                                android:textSize="11sp"
                                android:textStyle="bold"


                                />

                            <TextView
                                android:id="@+id/health_checkup_date"
                                android:layout_width="0dp"
                                android:layout_weight="1.3"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:fontFamily="@font/pop_reg"
                                android:gravity="start"
                                android:drawableStart="@drawable/calendardt"
                                android:drawablePadding="5sp"

                                android:textColor="#070303"
                                android:textStyle="bold"
                                android:textSize="11sp"

                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:fontFamily="@font/pop_reg"
                                android:gravity="start"
                                android:text="Request Date"
                                android:textColor="#DF2C1E"
                                android:textSize="11sp"
                                android:textStyle="bold"


                                />

                            <TextView
                                android:id="@+id/request_date"
                                android:layout_width="0dp"
                                android:layout_weight="1.3"
                                android:layout_height="match_parent"
                                android:layout_gravity="start"
                                android:drawableStart="@drawable/calendardt"
                                android:drawablePadding="5sp"
                                android:fontFamily="@font/pop_reg"
                                android:gravity="start"


                                android:textColor="#070303"
                                android:textSize="11sp"
                                android:textStyle="bold"

                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:fontFamily="@font/pop_reg"
                                android:gravity="start"
                                android:text="Appointment Date &amp; Time"
                                android:textColor="#DF2C1E"
                                android:textSize="11sp"
                                android:textStyle="bold"


                                />

                            <TextView
                                android:id="@+id/app_date"
                                android:layout_width="0dp"
                                android:layout_weight="1.3"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:fontFamily="@font/pop_reg"
                                android:gravity="start"
                                android:drawableStart="@drawable/calendardt"
                                android:drawablePadding="5sp"


                                android:textColor="#070303"
                                android:textStyle="bold"
                                android:textSize="11sp"

                                />


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>



        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv_one_login"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="-30dp"
            android:id="@+id/expand"

            android:padding="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/card_border_orange"
            android:gravity="center"
            android:text="View More"
            android:textColor="#0B0808"
            android:textSize="14sp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>