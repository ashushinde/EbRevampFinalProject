<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5sp"
    android:background="#fff"
    android:padding="8sp"
    android:orientation="vertical">


   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/navcolor"
            android:layout_width="match_parent"
            android:background="@drawable/nav_back"
            android:gravity="end"
            android:layout_height="150sp">
            <ImageView
                android:id="@+id/log"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_gravity="end"
                android:layout_marginTop="15sp"
                android:paddingTop="5sp"
                android:layout_marginEnd="10sp"
                android:foregroundGravity=""
                android:contentDescription="@string/nav_header_desc"
                app:srcCompat="@drawable/logout" />


        </LinearLayout>




        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="15sp"
            android:layout_marginTop="100sp"
            android:layout_marginStart="13sp"
            android:layout_marginEnd="13sp"
            android:layout_marginBottom="35sp"
            app:cardElevation="22sp"


            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"

                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userImage"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:visibility="gone"

                    android:contentDescription="@string/nav_header_desc"/>

            <LinearLayout
                android:id="@+id/clickoption"
                android:layout_width="0dp"
                android:layout_weight="1.5"

                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/regular"
                    android:textSize="14sp"
                    android:text="@string/nav_header_title"
                    android:textColor="#0E0606"
                    android:textStyle="bold"
                   />
                <TextView
                    android:id="@+id/fullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#0F0E0E"
                    android:fontFamily="@font/regular"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:layout_marginBottom="5sp"
                    android:gravity="center"
                    android:text="@string/nav_header_subtitle" />

                <TextView
                    android:id="@+id/companyname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#0F0E0E"
                    android:fontFamily="@font/regular"
                    android:textSize="11sp"
                    android:layout_marginTop="1sp"
                    android:layout_marginBottom="5sp"
                    android:gravity="center"
                     />

                <LinearLayout
                    android:id="@+id/lstloginhinde"

                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="3sp"

                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="@font/regular"
                        android:textSize="12sp"

                        android:text="Last Login : "
                        android:textColor="#0E0606"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/lastlogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0F0E0E"
                        android:fontFamily="@font/regular"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="12-07-2022 16:30:00" />
                </LinearLayout>
            </LinearLayout>


            </LinearLayout>



            </LinearLayout>
        </androidx.cardview.widget.CardView>




    </RelativeLayout>



</LinearLayout>