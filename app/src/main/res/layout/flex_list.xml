<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2sp"
    android:background="#00EEEEEE"

    android:padding="2dp">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        >
    <FrameLayout
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:background="#00FFFFFF"
        android:layout_height="wrap_content">



    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10sp"
        app:cardBackgroundColor="#FFFFFF"

        android:layout_margin="10sp"
        app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8sp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/flex_name"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pop_reg"
                        android:text="Group Mediclaim"
                        android:layout_marginStart="10sp"
                        android:layout_gravity="center"
                        android:textColor="#6334E3"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/s_logo"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_arrow"
                        android:src="@drawable/carr"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">



                    <TextView
                        android:id="@+id/flex_discription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pop_reg"
                        android:text="Lorem ipsum dolor sit amet consectetur, adipisicing elit.Recusandae voluptate repellendus magni illo ea animi? Lorem ipsum dolor sit amet consectetur,
adipisicing elit. Recusandae voluptate repellendus magni illo ea animi?"
                        android:textColor="#0A0909"
                        android:padding="3sp"
                        android:textSize="12sp" />






                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:elevation="20sp"
                android:layout_marginBottom="10sp"
                android:layout_gravity="end"
                android:gravity="end"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_marginStart="10sp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end"

                        android:background="@drawable/flex_butoon"

                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pop_reg"
                    android:textColor="#0C0B0B"
                    android:text="  Amount - "
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="12sp" />
                        <TextView
                            android:id="@+id/final_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pop_reg"
                            android:textColor="#0C0B0B"
                            android:text="100"
                            android:layout_marginEnd="34sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>



                <TextView
                    android:id="@+id/allocate"
                    android:layout_width="100sp"
                    android:layout_height="45sp"
                    android:fontFamily="@font/pop_reg"
                    android:textColor="#0F0A0A"
                    android:padding="5sp"
                    android:text="Allocate"
                    android:background="@drawable/green_light"
                    android:elevation="10sp"
                    android:layout_marginBottom="15sp"
                    android:textStyle="bold"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10sp"
                    android:gravity="center"
                    android:textSize="12sp" />

            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:background="@drawable/nav_back"
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_marginStart="3sp"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/pop_reg"
                android:textSize="12sp"
                android:padding="5sp"
                android:text="Allocated Amount :"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/allocated_amt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/pop_reg"
                android:textSize="12sp"
                android:padding="5sp"
                android:text="40000"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                />

        </LinearLayout>
    </FrameLayout>
</RelativeLayout>


