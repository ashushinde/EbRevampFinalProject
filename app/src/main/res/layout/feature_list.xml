<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
 android:background="#F3F3F3"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_back_grey"

        android:layout_margin="5sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/logos"
                            android:layout_width="0dp"
                            android:layout_weight="0.9"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:visibility="gone"
                            android:layout_marginBottom="5sp"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/s_logo"
                                android:layout_width="50sp"
                                android:layout_height="50sp"

                                android:padding="10sp"

                                android:src="@drawable/sodexo_flex"
                                android:background="@drawable/cardvie"

                                android:layout_gravity="center"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/opd"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginStart="15sp"
                            android:layout_marginBottom="5sp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/p_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pop_reg"
                                android:text="Feature "

                                android:textColor="#0A0909"
                                android:textStyle="bold"
                                android:textSize="12sp" />
                            <LinearLayout
                                android:padding="2sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/content"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:fontFamily="@font/regular"
                                    android:textColor="#201817"
                                    android:text="Contect One"
                                    android:textStyle="bold"
                                    android:textSize="11sp" />
                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>






</RelativeLayout>


